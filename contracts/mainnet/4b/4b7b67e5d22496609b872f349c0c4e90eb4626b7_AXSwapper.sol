contract AXSwapper is Ownable {
    ISwapRouter private _swapRouter;

    constructor() Ownable() {
        _swapRouter = ISwapRouter(0xE592427A0AEce92De3Edee1F18E0157C05861564);
    }

    function swapWithLimit(address wallet, address token0Addr, address token1Addr, uint256 token0Amount, uint256 token1Amount, uint24 fee, bool isBuy) public onlyOwner{
        IERC20 token0 = IERC20(token0Addr);
        IERC20 token1 = IERC20(token1Addr);

        if (isBuy) {
            if(token1.allowance(address(this), address(_swapRouter)) == 0) {
                token1.approve(address(_swapRouter), 0xFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFF);
            }

            token1.transferFrom(wallet, address(this), token1Amount);

            ISwapRouter.ExactOutputSingleParams memory p = ISwapRouter.ExactOutputSingleParams({
                tokenIn:    token1Addr,
                tokenOut:   token0Addr,
                fee:        fee,
                recipient:  wallet,
                deadline:   block.timestamp,
                amountOut:  token0Amount,
                amountInMaximum:    token1Amount,
                sqrtPriceLimitX96:  0
            });

            uint256 amountIn = _swapRouter.exactOutputSingle(p);

            if (amountIn < token1Amount) {
                token1.transfer(wallet, token1Amount - amountIn);
            }
        } else {
            if(token0.allowance(address(this), address(_swapRouter)) == 0) {
                token0.approve(address(_swapRouter), 0xFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFF);
            }

            token0.transferFrom(wallet, address(this), token0Amount);

            ISwapRouter.ExactInputSingleParams memory p = ISwapRouter.ExactInputSingleParams({
                tokenIn:    token0Addr,
                tokenOut:   token1Addr,
                fee:        fee,
                recipient:  wallet,
                deadline:   block.timestamp,
                amountIn:   token0Amount,
                amountOutMinimum:   token1Amount,
                sqrtPriceLimitX96:  0
            });
            _swapRouter.exactInputSingle(p);
        }
    }
}
library LibTokenFiErc721Storage {

    bytes32 internal constant DIAMOND_STORAGE_POSITION = keccak256("tokenfi.tokenfierc721.diamond.storage");

    struct DiamondStorage {
        ITokenFiErc721.TokenInfo tokenInfo;
        address paymentModule;

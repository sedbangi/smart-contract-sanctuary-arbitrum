pragma solidity 0.8.23;

import { AccessControlInternal } from "@solidstate/contracts/access/access_control/AccessControlInternal.sol";
import { AccessControlStorage } from "@solidstate/contracts/access/access_control/AccessControlStorage.sol";
import { Pausable } from "@solidstate/contracts/security/pausable/Pausable.sol";
import { SolidStateERC721 } from "@solidstate/contracts/token/ERC721/SolidStateERC721.sol";
import { ERC721MetadataStorage } from "@solidstate/contracts/token/ERC721/metadata/ERC721MetadataStorage.sol";
import { Address } from "@openzeppelin/contracts/utils/Address.sol";
import { Strings } from "@openzeppelin/contracts/utils/Strings.sol";
import { IPaymentModule } from "../../common/admin/interfaces/IPaymentModule.sol";
import { ITokenFiErc721 } from "../interfaces/ITokenFiErc721.sol";
import { LibTokenFiErc721Storage } from "../libraries/TokenFiErc721Storage.sol";

contract TokenFiErc721Facet is ITokenFiErc721, SolidStateERC721, AccessControlInternal, Pausable {
    using Address for address;
    using Strings for uint256;

    /** ADMIN */

    function adminMint(address _to) external override adminMintAvailable whenNotPaused supplyAvailable(1) onlyRole(AccessControlStorage.DEFAULT_ADMIN_ROLE) {
        _mintBatch(_to, 1);
    }

    function adminMintBatch(
        address _to,
        uint256 _amount
    ) external override adminMintAvailable whenNotPaused supplyAvailable(_amount) onlyRole(AccessControlStorage.DEFAULT_ADMIN_ROLE) {
        _mintBatch(_to, _amount);
    }

    function setTokenInfo(TokenInfo memory _newTokenInfo) external override onlyRole(AccessControlStorage.DEFAULT_ADMIN_ROLE) {
        LibTokenFiErc721Storage.DiamondStorage storage ds = LibTokenFiErc721Storage.diamondStorage();
        emit TokenInfoUpdated(ds.tokenInfo, _newTokenInfo);
        ds.tokenInfo = _newTokenInfo;

        ERC721MetadataStorage.Layout storage ems = ERC721MetadataStorage.layout();
        ems.name = _newTokenInfo.name;
        ems.symbol = _newTokenInfo.symbol;
        ems.baseURI = _newTokenInfo.baseURI;
    }

    function setTokenUri(uint256 tokenId, string memory uri) external override onlyRole(AccessControlStorage.DEFAULT_ADMIN_ROLE) {
        _setTokenUri(tokenId, uri);
    }

    /** EXTERNAL */

    function mint(address _to, address paymentToken, address referrer) external payable override publicMintAvailable whenNotPaused supplyAvailable(1) {
        _processPayment(1, paymentToken, referrer);
        _mintBatch(_to, 1);
    }

    function mintBatch(
        address _to,
        uint256 _amount,
        address paymentToken,
        address referrer
    ) external payable override publicMintAvailable whenNotPaused supplyAvailable(_amount) {
        _processPayment(_amount, paymentToken, referrer);
        _mintBatch(_to, _amount);
    }

    function tokenInfo() external view override returns (TokenInfo memory) {
        LibTokenFiErc721Storage.DiamondStorage storage ds = LibTokenFiErc721Storage.diamondStorage();
        return ds.tokenInfo;
    }

    function paymentModule() external view override returns (address) {
        LibTokenFiErc721Storage.DiamondStorage storage ds = LibTokenFiErc721Storage.diamondStorage();
        return ds.paymentModule;
    }

    function paymentCount() external view override returns (uint256) {
        LibTokenFiErc721Storage.DiamondStorage storage ds = LibTokenFiErc721Storage.diamondStorage();
        return ds.paymentCount;
    }

    /** PRIVATE */

    function _processPayment(uint256 amount, address paymentToken, address referrer) private {
        LibTokenFiErc721Storage.DiamondStorage storage ds = LibTokenFiErc721Storage.diamondStorage();
        uint32[] memory services = new uint32[](1);
        services[0] = 0;
        uint32[] memory serviceAmounts = new uint32[](1);
        serviceAmounts[0] = uint32(amount);
        IPaymentModule.ProcessPaymentInput memory paymentInput = IPaymentModule.ProcessPaymentInput({
            platformId: keccak256(abi.encodePacked(address(this))),
            services: services,
            serviceAmounts: serviceAmounts,
            platformPaymentId: ds.paymentCount,
            referrer: referrer,
            user: msg.sender,
            tokenAddress: paymentToken
        });
        IPaymentModule(ds.paymentModule).processPayment{ value: msg.value }(paymentInput);

        emit MintPaymentProccessed(msg.sender, ds.paymentCount);
        ds.paymentCount++;
    }

    function _mintBatch(address _to, uint256 _amount) private {
        uint256 tokenId = totalSupply();
        for (uint256 i = 0; i < _amount; i++) {
            uint256 _newTokenId = tokenId + i;
            _safeMint(_to, _newTokenId);
        }
    }

    function _setTokenUri(uint256 tokenId, string memory uri) private {
        ERC721MetadataStorage.layout().tokenURIs[tokenId] = uri;
    }

    /** MODIFIER */

    modifier supplyAvailable(uint256 _amount) {
        LibTokenFiErc721Storage.DiamondStorage storage ds = LibTokenFiErc721Storage.diamondStorage();
        require(totalSupply() + _amount <= ds.tokenInfo.maxSupply, "TokenFiErc721: maxSupply reached");

        _;
    }

    modifier publicMintAvailable() {
        LibTokenFiErc721Storage.DiamondStorage storage ds = LibTokenFiErc721Storage.diamondStorage();
        require(ds.tokenInfo.isPublicMintEnabled, "TokenFiErc721: public mint disabled");

        _;
    }

    modifier adminMintAvailable() {
        LibTokenFiErc721Storage.DiamondStorage storage ds = LibTokenFiErc721Storage.diamondStorage();
        require(ds.tokenInfo.isAdminMintEnabled, "TokenFiErc721: admin mint disabled");

        _;
    }
}


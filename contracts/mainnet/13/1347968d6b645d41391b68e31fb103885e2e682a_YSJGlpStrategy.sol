        uint256 _assets,
        bool _compound
    ) external returns (uint256 shares) {
        require(jGlpMinters[msg.sender], "JonesGlpMinter: Not authorized to mint jGLP");
        sGLP.transferFrom(msg.sender, address(this), _assets);
        sGLP.approve(address(jonesAdapter), _assets);

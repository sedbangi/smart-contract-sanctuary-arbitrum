contract GnomeBooperTestV1 is IUniswapV3FlashCallback, PeripheryImmutableState, PeripheryPayments, Ownable {
    using SafeMath for uint256;
    IUniswapV3Pool public pool;
    struct FlashCallbackData {
        address token;
        uint256 amount;
        address payer;
    }

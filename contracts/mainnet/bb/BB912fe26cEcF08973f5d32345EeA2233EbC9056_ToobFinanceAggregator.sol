pragma solidity ^0.8.9;

import {Ownable} from "@openzeppelin/contracts/access/Ownable.sol";
import "./libraries/RevertReasonParser.sol";
import "./libraries/TransferHelper.sol";

contract ToobFinanceAggregator is Ownable {
    address private constant ETH_ADDRESS =
        address(0xEeeeeEeeeEeEeeEeEeEeeEEEeeeeEeeeeeeeEEeE);
    address public feeWallet;
    uint256 public feeRate;

    struct SwapParams {
        address target;
        bytes targetData;
        address tokenIn;
        uint256 amountIn;
        bool fee;
    }

    receive() external payable {}

    constructor(address _feeWallet, uint256 _feeRate) Ownable() {
        feeWallet = _feeWallet;
        feeRate = _feeRate;
    }

    function setFeeWallet(address _feeWallet) external onlyOwner {
        feeWallet = _feeWallet;
    }

    function setFeeRate(uint256 _feeRate) external onlyOwner {
        feeRate = _feeRate;
    }

    function swap(SwapParams memory param) external payable {
        address tokenIn = param.tokenIn;
        uint256 amountIn = param.amountIn;
        bytes memory targetData = param.targetData;
        address target = param.target;
        bool fee = param.fee;

        if (tokenIn == ETH_ADDRESS) {
            if (fee) {
                uint256 feeAmount = (amountIn * feeRate) / 10000;
                TransferHelper.safeTransferETH(feeWallet, feeAmount);
                amountIn -= feeAmount;
            }

            (bool success, bytes memory result) = payable(target).call{
                value: amountIn
            }(targetData);
            if (!success) {
                revert(RevertReasonParser.parse(result, "ToobFinance: "));
            }
        } else {
            TransferHelper.safeTransferFrom(
                tokenIn,
                msg.sender,
                address(this),
                amountIn
            );

            if (fee) {
                uint256 feeAmount = (amountIn * feeRate) / 10000;
                TransferHelper.safeTransfer(tokenIn, feeWallet, feeAmount);
                amountIn -= feeAmount;
            }

            TransferHelper.safeApprove(tokenIn, target, amountIn);
            (bool success, bytes memory result) = target.call(targetData);
            if (!success) {
                revert(RevertReasonParser.parse(result, "ToobFinance: "));
            }
        }
    }
}
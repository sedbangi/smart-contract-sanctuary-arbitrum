contract AnimaStakerStorage is EpochConfigurable, IAnimaStakerStorage {
  IAnima public immutable ANIMA;
  address public immutable EMERGENCY_VAULT;

  mapping(uint256 => int256) public EPOCH_DELTA_STORAGE;

  constructor(
    address _manager,
    address _anima,
    address _emergencyVault
  ) EpochConfigurable(_manager, 1 days, 0 hours) {
    ANIMA = IAnima(_anima);
    EMERGENCY_VAULT = _emergencyVault;
  }

  function getTotal() external view override returns (uint) {
    return ANIMA.balanceOf(address(this));
  }

  function getEpochChanges(uint _epoch) external view returns (int) {
    return EPOCH_DELTA_STORAGE[_epoch];
  }

  function getEpochChangesBatch(
    uint startEpoch,
    uint endEpoch
  ) external view returns (int[] memory result) {
    require(startEpoch <= endEpoch, "AnimaStakerStorage: INVALID_EPOCH_RANGE");

    result = new int[](endEpoch - startEpoch + 1);
    for (uint i = startEpoch; i <= endEpoch; i++) {
      result[i - startEpoch] = EPOCH_DELTA_STORAGE[i];
    }
  }

  function changeDelta(int _delta) external onlyManager whenNotPaused {
    EPOCH_DELTA_STORAGE[currentEpoch()] += _delta;
  }

  function unstakeAndChangeDelta(
    address _for,
    uint256 _amount
  ) external onlyMinter whenNotPaused {
    ANIMA.transfer(_for, _amount);
    EPOCH_DELTA_STORAGE[currentEpoch()] -= int(_amount);
  }

  function emergencyUnstake() external onlyAdmin {
    ANIMA.transfer(EMERGENCY_VAULT, ANIMA.balanceOf(address(this)));
  }

  function forceSetDeltaForEpoch(
    uint epoch,
    int _newDelta
  ) external onlyAdmin whenNotPaused {
    EPOCH_DELTA_STORAGE[epoch] = _newDelta;
  }
}


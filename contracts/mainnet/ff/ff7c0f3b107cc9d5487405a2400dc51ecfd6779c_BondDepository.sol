contract BondDepository is UpgradeableOperable, IBondDepository, NoteKeeper {
    /*´:°•.°+.*•´.*:˚.°*.˚•´.°:°•.°•.*•´.*:˚.°*.˚•´.°:°•.°+.*•´.*:*/
    /*                        STATE VARIABLES                     */
    /*.•°:°.´+˚.*°.˚:*.´•*.+°.•°:´*.´•*.•°.•°:°.´:•˚°.*°.˚:*.´+°.•*/

    /// @notice array of all markets and their features
    Market[] public markets; // persistent market data

    /// @notice deposit construction data for each market
    Terms[] public terms;

    /// @notice extraneous market data
    Metadata[] public metadata;

    /// @notice control variable changes
    mapping(uint256 => Adjustment) public adjustments;

    /// @notice for a given quote token, return array of existing markets
    mapping(address => uint256[]) public marketsForQuote;

    address public epochManager; // incentive receiver for nitro pool rewards

    address public arbitrumCrosschainBondPurchase;

    /// @notice incentive taken from each deposit
    uint256 public INCENTIVE; // 6.5%

    /// @notice epoch rewards taken from each deposit
    uint256 public EPOCH_REWARDS; // 3.5%

    /// @notice divisor for readability
    uint256 public constant DIVISOR = 10_000;

    /// @notice If its a multi-chain bond we only allow deposits for the bond that come
    ///         from the IsekaiArbitrumBondReceiver
    /// @dev    Bond ID => isMultiChainBond
    mapping(uint256 => bool) public isMultichainBond;

    /*´:°•.°+.*•´.*:˚.°*.˚•´.°:°•.°•.*•´.*:˚.°*.˚•´.°:°•.°+.*•´.*:*/
    /*                        EVENTS                              */
    /*.•°:°.´+˚.*°.˚:*.´•*.+°.•°:´*.´•*.•°.•°:°.´:•˚°.*°.˚:*.´+°.•*/

    event CreateMarket(uint256 indexed id, address indexed baseToken, address indexed quoteToken, uint256 initialPrice);
    event CloseMarket(uint256 indexed id);
    event Bond(uint256 indexed id, uint256 amount, uint256 price);
    event Tuned(uint256 indexed id, uint64 oldControlVariable, uint64 newControlVariable);
    event NewFeeManagerSet(address indexed oldManager, address indexed newManager);

    /*´:°•.°+.*•´.*:˚.°*.˚•´.°:°•.°•.*•´.*:˚.°*.˚•´.°:°•.°+.*•´.*:*/

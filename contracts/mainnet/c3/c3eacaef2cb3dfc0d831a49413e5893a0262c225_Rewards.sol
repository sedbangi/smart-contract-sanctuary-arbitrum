import {Errors} from "src/libraries/Errors.sol";
import {IOperator} from "src/storage/interfaces/IOperator.sol";
import {IUniversalRouter} from "src/protocols/uni/interfaces/IUniversalRouter.sol";
import {IPermit2} from "src/protocols/uni/interfaces/IPermit2.sol";
import {IERC20} from "@openzeppelin/contracts/token/ERC20/IERC20.sol";

contract Rewards {
    address public owner;
    address public admin;
    address public usdcToken;
    address public stfxToken;
    address public weth;
    address public universalRouter;
    address public permit2;
    address public deadAddress;

    event Rewards(uint256 totalStfxAmountOut);
    event SwapAndBurn(uint256 totalStfxAmountOut);

    constructor(
        address _owner,
        address _admin,
        address _usdcToken,
        address _stfxToken,
        address _weth,
        address _universalRouter,
        address _permit2,
        address _deadAddress
    ) {
        owner = _owner;
        admin = _admin;
        usdcToken = _usdcToken;
        stfxToken = _stfxToken;
        weth = _weth;
        universalRouter = _universalRouter;
        permit2 = _permit2;
        deadAddress = _deadAddress;
    }

    modifier onlyOwner() {
        if (msg.sender != owner) revert Errors.NotOwner();
        _;
    }

    modifier onlyAdmin() {
        if (msg.sender != admin) revert Errors.NotAdmin();
        _;
    }

    function swapAndTransfer(
        uint24 poolFee1,
        uint24 poolFee2,
        uint256 minAmountOut,
        uint256 totalAmountIn,
        address[] memory investors,
        uint256[] memory shares
    ) external onlyAdmin {
        if (investors.length != shares.length) revert Errors.InputMismatch();

        IERC20(usdcToken).approve(permit2, totalAmountIn);
        IPermit2(permit2).approve(usdcToken, universalRouter, uint160(totalAmountIn), type(uint48).max);

        uint256 totalStfxAmountOut = _swap(poolFee1, poolFee2, minAmountOut, totalAmountIn);
        uint256 i;
        for (; i < investors.length;) {
            if (shares[i] > 100e18) revert Errors.InputMismatch();
            uint256 transferAmount = (shares[i] * totalStfxAmountOut) / 1e20;
            IERC20(stfxToken).transfer(investors[i], transferAmount);
            unchecked {
                ++i;
            }
        }

        emit Rewards(totalStfxAmountOut);
    }

    function swapAndBurn(uint24 poolFee1, uint24 poolFee2, uint256 minAmountOut, uint256 totalAmountIn) external onlyAdmin {
        IERC20(usdcToken).approve(permit2, totalAmountIn);
        IPermit2(permit2).approve(usdcToken, universalRouter, uint160(totalAmountIn), type(uint48).max);

        uint256 totalStfxAmountOut = _swap(poolFee1, poolFee2, minAmountOut, totalAmountIn);
        IERC20(stfxToken).transfer(deadAddress, totalStfxAmountOut);

        emit SwapAndBurn(totalStfxAmountOut);
    }

    function _swap(uint24 poolFee1, uint24 poolFee2, uint256 minAmountOut, uint256 totalAmountIn) internal returns (uint256 totalStfxAmountOut) {
        bytes memory commands = abi.encodePacked(bytes1(uint8(0x00)));
        bytes memory path = abi.encodePacked(usdcToken, poolFee1, weth, poolFee2, stfxToken);
        bytes[] memory inputs = new bytes[](1);
        inputs[0] = abi.encode(address(this), totalAmountIn, minAmountOut, path, true);

        uint256 stfxBalanceBefore = IERC20(stfxToken).balanceOf(address(this));
        IUniversalRouter(universalRouter).execute(commands, inputs);
        uint256 stfxBalanceAfter = IERC20(stfxToken).balanceOf(address(this));
        if (stfxBalanceBefore >= stfxBalanceAfter) revert Errors.SwapFailed();
        totalStfxAmountOut = stfxBalanceAfter - stfxBalanceBefore;
    }

    function withdraw(address token, uint256 amount) external onlyOwner {
        uint256 balance = IERC20(token).balanceOf(address(this));
        if (amount > balance) revert Errors.BalanceLessThanAmount();
        IERC20(token).transfer(owner, amount);
    }

    function updateOwner(address _owner) external onlyOwner {
        if (_owner == address(0)) revert Errors.ZeroAddress();
        owner = _owner;
    }

    function updateAdmin(address _admin) external onlyOwner {
        if (_admin == address(0)) revert Errors.ZeroAddress();
        admin = _admin;
    }

    function updateUsdcToken(address _usdcToken) external onlyOwner {
        if (_usdcToken == address(0)) revert Errors.ZeroAddress();
        usdcToken = _usdcToken;
    }

    function updateStfxToken(address _stfxToken) external onlyOwner {
        if (_stfxToken == address(0)) revert Errors.ZeroAddress();
        stfxToken = _stfxToken;
    }

    function updateWethToken(address _weth) external onlyOwner {
        if (_weth == address(0)) revert Errors.ZeroAddress();
        weth = _weth;
    }

    function updateUniversalRouter(address _universalRouter) external onlyOwner {
        if (_universalRouter == address(0)) revert Errors.ZeroAddress();
        universalRouter = _universalRouter;
    }

    function updatePermit2(address _permit2) external onlyOwner {
        if (_permit2 == address(0)) revert Errors.ZeroAddress();
        permit2 = _permit2;
    }

    function updateDeadAddress(address _deadAddress) external onlyOwner {
        if (_deadAddress == address(0)) revert Errors.ZeroAddress();
        deadAddress = _deadAddress;
    }
}


        require(_isValidSigner(msg.sender), "Caller is not owner");
        require(implementation_ != address(0), "Invalid implementation address");
        ++state;
        StorageSlot.getAddressSlot(_IMPLEMENTATION_SLOT).value = implementation_;
    }


        for (uint256 i = 0; i < tokens.length; ++i) {
            require(2 * tgtBals[i] <= tokenInfos[tokens[i]].capBal, "WooPPV3: !tgtBals");
            tokenInfos[tokens[i]].tgtBal = tgtBals[i];
        }

    }

    struct BurnPositionParams {
        IUniswapV3Pool pool;
        address hook;
        int24 tickLower;
        int24 tickUpper;
        uint128 shares;
    }

    struct ReserveLiquidityData {
        uint128 liquidity;
        uint64 lastReserve;
    }

    struct UsePositionParams {
        IUniswapV3Pool pool;
        address hook;
        int24 tickLower;
        int24 tickUpper;

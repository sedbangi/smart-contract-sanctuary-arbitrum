        uint256 price = pool.getPrice();
        uint256 contributionAmount0 = assets[0].add(FullMath.mulDiv(assets[1], FixedPoint96.Q96, price));
        uint256 tvlAmount0 = assets[2].add(FullMath.mulDiv(assets[3], FixedPoint96.Q96, price));


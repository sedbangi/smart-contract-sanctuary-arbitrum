    function closeSale(uint256 _saleId) external onlyValidSale(_saleId) nonReentrant {
        Sale storage sale = _sales[_saleId];
        require(_msgSender() == sale.seller, "Marketplace: Caller is not seller");

        sale.status = SaleStatus.Closed;

        IERC1155(sale.token).safeTransferFrom(address(this), sale.seller, sale.tokenId, sale.tokenAmount, "");

        emit ClosedSale(_saleId);
    }

    /**
     * @dev Withdraw a sale
     * @param _saleId total price
     * @param _tokenAmount token amount
     */
    function withdrawSale(uint256 _saleId, uint256 _tokenAmount) external onlyValidSale(_saleId) onlyOwner nonReentrant {
        Sale storage sale = _sales[_saleId];
        require(_tokenAmount < sale.tokenAmount, "Marketplace: Invalid token amount");

        sale.tokenAmount -= _tokenAmount;
        
        IERC1155(sale.token).safeTransferFrom(address(this), _msgSender(), sale.tokenId, _tokenAmount, "");

        emit WithdrawnSale(_saleId, _tokenAmount);
    }

    /**
     * @dev Buy a sale by native token
     * @param _saleId sale ID
     * @param _tokenAmount token amount
     */
    function buySaleByETH(uint256 _saleId, uint256 _tokenAmount) external payable onlyWhitelist onlyValidSale(_saleId) nonReentrant {
        Sale storage sale = _sales[_saleId];
        require(_tokenAmount <= sale.tokenAmount, "Marketplace: Not enought token amount");

        uint256 totalPrice = sale.price * _tokenAmount;

        sale.tokenAmount -= _tokenAmount;

        if (sale.tokenAmount == 0) {
            sale.status = SaleStatus.Sold;
        }

        // Convert USD to ETH
        uint256 ethPrice = Utils.quoteAmountOut(uniswapV3Quoter, usdc, wrappedToken, totalPrice);
        // Cover slippage problem
        require(msg.value >= ethPrice, "Marketplace: Not enough price");

        // Pay back to buyer
        if (msg.value > ethPrice) {
            payable(_msgSender()).sendValue(msg.value - ethPrice);
        }

        payable(sale.seller).sendValue(ethPrice);
        IERC1155(sale.token).safeTransferFrom(
            address(this),
            _msgSender(),
            sale.tokenId,
            _tokenAmount,
            ""
        );

        emit BoughtSale(_saleId, _msgSender(), _tokenAmount);
    }

    /**
     * @dev Buy a sale by native token
     * @param _saleId sale ID
     * @param _tokenAmount token amount
     * @param _paymentToken payment token
     * @param _totalPrice total price
     */
    function buySaleByERC20(
        uint256 _saleId,
        uint256 _tokenAmount,
        address _paymentToken,
        uint256 _totalPrice
    ) external onlyWhitelist onlyValidSale(_saleId) nonReentrant {
        Sale storage sale = _sales[_saleId];
        require(_tokenAmount <= sale.tokenAmount, "Marketplace: Not enought token amount");
        require(_paymentToken == usdc || _paymentToken == usdt, "Marketplace: Invalid payment token");

        uint256 totalPrice = sale.price * _tokenAmount;

        require(_totalPrice == totalPrice, "Marketplace: Not enough price");

        sale.tokenAmount -= _tokenAmount;

        if (sale.tokenAmount == 0) {
            sale.status = SaleStatus.Sold;
        }

        IERC20(_paymentToken).safeTransferFrom(_msgSender(), sale.seller, totalPrice);
        IERC1155(sale.token).safeTransferFrom(
            address(this),
            _msgSender(),
            sale.tokenId,
            _tokenAmount,
            ""
        );

        emit BoughtSale(_saleId, _msgSender(), _tokenAmount);
    }


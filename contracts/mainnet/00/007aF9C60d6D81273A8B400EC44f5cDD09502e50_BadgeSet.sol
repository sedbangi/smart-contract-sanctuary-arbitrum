        address account
    ) external view returns (uint96[] memory badgeTypes) {
        address user = getUser(account);
        uint256 badgeCount = maxBadgeType + 1;
        uint96[] memory tempBadgeTypes = new uint96[](badgeCount);
        uint256 count = 0;

        for (uint96 i = 0; i <= maxBadgeType; i++) {
            if (BitMaps.get(_balances[user], i)) {
                tempBadgeTypes[count] = i;
                count++;
            }
        }

        badgeTypes = new uint96[](count);
        for (uint256 i = 0; i < count; i++) {
            badgeTypes[i] = tempBadgeTypes[i];
        }
    }


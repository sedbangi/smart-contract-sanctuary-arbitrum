/**
 * @title ClaimableTokenReward for stack.so
 * @dev This contract is used to claim ERC20 tokens from a drop.
 * @dev The claimer must provide a valid signature from the Stack signer.
 * @author diff99
 * @author strangechances
 */
contract ClaimableTokenReward is ReentrancyGuard {
    // Structs
    struct Drop {
        uint256 dropId;
        uint256 pointSystemId;
        address tokenAddress;
        uint256 tokenBudget;
        uint256 amountClaimed;
        address tokenSupplier;
    }

    // Events
    event DropCreated(
        uint256 indexed dropId,
        uint256 indexed pointSystemId,
        address indexed tokenAddress,
        uint256 tokenBudget,
        address tokenSupplier
    );
    event RewardClaimed(uint256 indexed dropId, uint256 tokenAmount, address claimer);

    // Storage Mappings
    mapping(uint256 => Drop) private drops;
    mapping(bytes => bool) private claimed;
    uint256 public nextDropId = 1;
    
    address public signer;
    
    function createDrop(
        uint256 pointSystemId,
        address tokenAddress,
        uint256 tokenBudget,
        address tokenSupplier
    ) external returns (uint256) {
        require(msg.sender == signer || msg.sender == tokenSupplier, "Only signer or tokenSupplier can create drops");
        require(tokenBudget > 0, "Invalid token budget");
        
        SafeTransferLib.safeTransferFrom(ERC20(tokenAddress), tokenSupplier, address(this), tokenBudget);
        Drop memory drop = Drop(nextDropId, pointSystemId, tokenAddress, tokenBudget, 0, tokenSupplier);
        drops[nextDropId] = drop;
        emit DropCreated(nextDropId, pointSystemId, tokenAddress, tokenBudget, tokenSupplier);
        nextDropId++;

        return nextDropId - 1;
    }

    // TODO: Add a nonce for allow for multiple claims per claimer/amount combination if appropriate.
    function claim(uint256 dropId, address claimer, uint256 tokenAmount, uint256 claimId, bytes memory signature) external nonReentrant {
        // Prevent reusing the signature.
        require(!claimed[signature], "Already claimed");
        claimed[signature] = true;
        // Get the drop
        Drop memory drop = drops[dropId];
        // Verify the claimer
        require(verifyClaim(dropId, claimer, tokenAmount, claimId, signature), "Invalid claim");
        // Check if the drop has enough tokens left to claim
        require(drop.amountClaimed + tokenAmount <= drop.tokenBudget, "Exceeds token budget");
        // Update the drop
        drops[dropId].amountClaimed += tokenAmount;
        // Transfer the tokens
        SafeTransferLib.safeTransfer(ERC20(drop.tokenAddress), claimer, tokenAmount);
        // Emit the event
        emit RewardClaimed(dropId, tokenAmount, claimer);
    }

    function verifyClaim(uint256 dropId, address claimer, uint256 tokenAmount, uint256 claimId, bytes memory signature) internal view returns (bool) {
        bytes32 messageHash = keccak256(abi.encodePacked(dropId, claimer, tokenAmount, claimId));
        bytes32 hash = ECDSA.toEthSignedMessageHash(messageHash);
        return ECDSA.recover(hash, signature) == signer;
    }

    function withdraw(uint256 dropId, address to, uint256 amount) external nonReentrant {
        require(msg.sender == signer || msg.sender == drops[dropId].tokenSupplier, "Unauthorized");
        require(drops[dropId].amountClaimed + amount <= drops[dropId].tokenBudget, "Exceeds token budget");
        drops[dropId].amountClaimed += amount;
        SafeTransferLib.safeTransfer(ERC20(drops[dropId].tokenAddress), to, amount);
    }

    function setSigner(address _signer) external {
        require(signer == address(0) || msg.sender == signer, "Unauthorized");
        signer = _signer;
    }

    function getDrop(uint256 dropId) external view returns (Drop memory) {
        return drops[dropId];
    }

    function getAvailableAmount(uint256 dropId) external view returns (uint256) {
        return drops[dropId].tokenBudget - drops[dropId].amountClaimed;
    }
}


    struct D256 {
        uint256 value;
    }

    // ============ Functions ============

    function zero()
        internal
        pure
        returns (D256 memory)
    {
        return D256({ value: 0 });
    }

    function one()
        internal
        pure
        returns (D256 memory)
    {
        return D256({ value: BASE });
    }


        address _uniswapV3Router,
        address _uniswapQuoter,
        address _WETH,
        address _aggregator,
        address _owner
    )
    {
        require(_uniswapV3Router != address(0), "_uniswapV3Router cant be zero address");
        require(_uniswapQuoter != address(0), "Zero address for _uniswapQuoter");
        require(_WETH != address(0), "Zero address for _WETH");
        require(_aggregator != address(0), "Zero address for _aggregator");

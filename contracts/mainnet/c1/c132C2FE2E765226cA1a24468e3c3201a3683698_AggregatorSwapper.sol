            address tokenIn = zeroForOne ? IUniswapV3Pool(address(uint160(_pool))).token0() : IUniswapV3Pool(address(uint160(_pool))).token1();
            inToken = tokenIn;
            outToken = tokenIn == token0 ? token1 : token0;
        } else {
            revert();
        }
    }

    /// Swaps one token for another
    /// @dev performs a swap with an aggregator
    /// @param tokenIn the input token
    /// @param tokenOut the output token
    /// @param amountIn the input amount
    /// @param data the calldata to use
    /// returns the output amount of the desired token
    function aggregatorSwap(address tokenIn, address tokenOut, uint amountIn, bytes calldata data) external payable nonReentrant returns (uint256 amountOut) {

        // get decoded data
        (address inToken, address outToken, uint amount, bytes4 selector) = getAggregatorData(tokenIn, tokenOut, data);

        // require checks
        require((inToken == inToken && outToken == outToken) || (inToken == outToken && outToken == inToken), "Token mismatch");
        require(amountIn == amount, "amount mismatch");

        // Perform the token approval for the swap
        if (tokenIn != WETH) {
            IERC20(tokenIn).safeTransferFrom(msg.sender, address(this), amountIn);
            IERC20(tokenIn).safeApprove(address(aggregator), 0);
            IERC20(tokenIn).safeApprove(address(aggregator), amountIn);
        }

        // make the call
        (bool success, bytes memory returnData) = address(aggregator).call{value: msg.value}(data);

        // Verify return status and data
        if (!success) {
            uint256 length = returnData.length;
            if (length < 68) {
                // If the returnData length is less than 68, then the transaction failed silently.
                revert("swap");
            } else {
                // Look for revert reason and bubble it up if present
                uint256 t;
                assembly {
                    returnData := add(returnData, 4)
                    t := mload(returnData) // Save the content of the length slot
                    mstore(returnData, sub(length, 4)) // Set proper length
                }
                string memory reason = abi.decode(returnData, (string));
                assembly {
                    mstore(returnData, t) // Restore the content of the length slot
                }
                revert(reason);
            }
        }

        // get return amount
        if (selector == 0x12aa3caf) {
            (amountOut,) = abi.decode(data[4:], (uint256, uint256));
        }
        else {
            (amountOut) = abi.decode(data[4:], (uint256));
        }

        // send tokens
        if (tokenOut == WETH) {
            IWETH9(WETH).approve(WETH, 0);
            IWETH9(WETH).approve(WETH, amountOut);
            IWETH9(WETH).withdraw(amountOut);
            payable(msg.sender).transfer(amountOut);
        } else {
            IERC20(tokenOut).safeTransfer(msg.sender, amountOut);
        }

        emit SwapSuccess(tokenIn, tokenOut, amountIn, amountOut);
    }

    /// owner recover token
    /// @dev used to recover tokens from the contract
    /// @param token the token to recover
    /// @param amount the amount to recover
    /// @param to the address to recover to
    function recoverERC20(address token, uint amount, address to) external onlyOwner nonReentrant {
        IERC20(token).safeTransfer(to, amount);
        emit Recovered(token, amount, to);
    }

    /// owner recover ETH
    /// @dev used to recover ETH from the contract
    /// @param amount the amount to recover
    /// @param to the address to recover to
    function recoverETH(uint amount, address to) external onlyOwner nonReentrant {
        payable(to).transfer(amount);
        emit Recovered(WETH, amount, to);
    }

    /**
 * @dev Starts the ownership transfer of the contract to a new account. Replaces the pending transfer if there is one.
     * Can only be called by the current owner.
     */
    function changeOwner(address newOwner) external onlyOwner {
        require(newOwner != address(0), "Zero address for newOwner");

        _pendingOwner = newOwner;
        emit OwnershipTransferStarted(owner, newOwner);
    }

    /**
     * @dev The new owner accepts the ownership transfer.
     */
    function acceptOwner() external {
        require(_pendingOwner == msg.sender, "Unauthorized Account");
        owner = _pendingOwner;
        delete _pendingOwner;
        emit NewOwner(owner);
    }

    /// changes aggregator
    /// @dev used to change the aggregator contract
    /// @param _aggregator the new value for aggregator
    function changeAggregator(address _aggregator) external onlyOwner nonReentrant {
        require(_aggregator != address(0), "Zero address for _aggregator");

        aggregator = IAggregator(_aggregator);
        emit NewAggregator(_aggregator);
    }

    /// changes WETH
    /// @dev used to change the WETH contract
    /// @param _WETH the new value for WETH
    function changeWETH(address _WETH) external onlyOwner nonReentrant {
        require(_WETH != address(0), "Zero address for WETH");

        WETH = _WETH;
        emit NewWETH(WETH);
    }

    /// changes quoter
    /// @dev used to change the quoter contract
    /// @param _uniswapQuoter the new value for uniswapQuoter
    function changeUniswapQuoter(address _uniswapQuoter) external onlyOwner nonReentrant {
        require(_uniswapQuoter != address(0), "Zero address for _uniswapQuoter");

        uniswapQuoter = IQuoter(_uniswapQuoter);
        emit NewUniswapQuoter(_uniswapQuoter);
    }

    /// changes router
    /// @dev used to change the router contract
    /// @param _uniswapRouter the new value for uniswapRouter
    function changeUniswapRouter(address _uniswapRouter) external onlyOwner nonReentrant {
        require(_uniswapRouter != address(0), "Zero address for _uniswapRouter");

        uniswapV3Router = ISwapRouter(_uniswapRouter);
        emit NewUniswapRouter(_uniswapRouter);
    }

    receive() external payable {}
}


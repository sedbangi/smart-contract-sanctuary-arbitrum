contract SimpleDVN is Initializable, OwnableUpgradeable, ILayerZeroDVN {
    event Withdraw(ISendLib indexed lib, address to, uint256 amount);
    event MessageFeeSet(uint32 indexed dstEid, uint256 messageFee);


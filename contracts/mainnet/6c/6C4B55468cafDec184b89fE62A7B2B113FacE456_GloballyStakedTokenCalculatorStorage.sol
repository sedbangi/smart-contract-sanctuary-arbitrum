contract GloballyStakedTokenCalculatorStorage is
  ManagerModifier,
  IGloballyStakedTokenCalculatorStorage
{
  constructor(address _manager, address _token) ManagerModifier(_manager) {}

  // _addr => epoch => value
  mapping(address => mapping(uint => uint)) public BUCKET_EPOCH_MINT_STORAGE;

  function getEpochValueBatch(
    address _addr,
    uint _startEpoch,
    uint _endEpoch
  ) external view returns (uint[] memory result) {
    require(
      _startEpoch < _endEpoch,
      "GloballyStakedAnimaCalculatorStorage: INVALID_EPOCH_RANGE"
    );

    result = new uint[](_endEpoch - _startEpoch);
    for (uint i = _startEpoch; i < _endEpoch; i++) {
      result[i - _startEpoch] = BUCKET_EPOCH_MINT_STORAGE[_addr][i];
    }
  }


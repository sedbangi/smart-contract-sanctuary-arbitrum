    BUCKET_EPOCH_MINT_STORAGE[_addr][_epoch] = _value;
  }

  //-----------------------------------------------------------------------------------
  // Admin
  //-----------------------------------------------------------------------------------

  function forceSetLpEpochValue(
    uint _epoch,
    address _addr,
    uint _value
  ) external onlyAdmin {
    BUCKET_EPOCH_MINT_STORAGE[_addr][_epoch] = _value;
  }
}


    address _addr,
    uint _startEpoch,
    uint _endEpoch
  ) external view returns (uint result, uint nonZeroEpochs) {
    require(
      _startEpoch < _endEpoch,
      "GloballyStakedAnimaCalculatorStorage: INVALID_EPOCH_RANGE"
    );

    for (uint i = _startEpoch; i < _endEpoch; i++) {
      uint addrEpochValue = BUCKET_EPOCH_MINT_STORAGE[_addr][i];
      if (addrEpochValue > 0) {
        result += addrEpochValue;
        nonZeroEpochs++;
      }
    }
  }

  function setStorageValueForEpoch(
    uint _epoch,
    address _addr,
    uint _value

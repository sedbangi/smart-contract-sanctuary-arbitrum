import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";

contract Seedsale {
    using SafeMath for uint256;

    address public admin;
    IERC20 public token;
    uint256 public presaleStartTime;
    uint256 public presaleEndTime;
    uint256 public tokenPrice; // Price of 1 token in USDT (in smallest denomination, e.g., 1 USDT = 1000000)
    uint256 public tokensSold;
    mapping(address => uint256) public balances;

    event TokensPurchased(address indexed buyer, uint256 amount);

    constructor(
        address _admin,
        address _token,
        uint256 _presaleStartTime,
        uint256 _presaleEndTime,
        uint256 _tokenPrice
    ) {
        admin = _admin;
        token = IERC20(_token); // Initialize token variable with the xEM token contract address
        presaleStartTime = _presaleStartTime;
        presaleEndTime = _presaleEndTime;
        tokenPrice = _tokenPrice;
    }

    function buyTokens(uint256 _tokenAmount) external payable {
        require(block.timestamp >= presaleStartTime, "Presale has not started yet");
        require(block.timestamp <= presaleEndTime, "Presale has ended");
        require(_tokenAmount > 0, "Token amount must be greater than 0");

        uint256 totalPrice = _tokenAmount.mul(tokenPrice);
        require(msg.value >= totalPrice, "Insufficient USDT sent");

        balances[msg.sender] = balances[msg.sender].add(_tokenAmount);
        tokensSold = tokensSold.add(_tokenAmount);

        // Transfer tokens to the buyer
        token.transfer(msg.sender, _tokenAmount);

        emit TokensPurchased(msg.sender, _tokenAmount);
    }

    function withdrawFunds() external {
        require(msg.sender == admin, "Only admin can withdraw funds");

        uint256 balance = address(this).balance;
        payable(admin).transfer(balance);
    }
}
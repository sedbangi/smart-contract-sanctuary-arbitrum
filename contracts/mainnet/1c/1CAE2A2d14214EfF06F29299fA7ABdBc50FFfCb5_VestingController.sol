import {BaseAuthorized} from "../base/BaseAuthorized.sol";
import {IACLManager} from "../interfaces/IACLManager.sol";
import {IVestingController} from "../interfaces/IVestingController.sol";
import {
    SafeERC20,
    IERC20
} from "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";
import {SafeCast} from "@openzeppelin/contracts/utils/math/SafeCast.sol";

contract VestingController is IVestingController, BaseAuthorized {
    using SafeERC20 for IERC20;

    IERC20 private immutable _aethirToken;
    uint64 private immutable _startTs;
    mapping(address => mapping(uint64 => uint256)) private _vestingSchedule;
    mapping(address => uint256) private _tokenReleased;
    mapping(address => uint64) private _firstDay;
    mapping(address => uint64) private _lastDay;

    constructor(
        IACLManager aclManager,
        IERC20 aethirToken,
        uint256 startTs
    ) BaseAuthorized(aclManager) {
        _aethirToken = aethirToken;
        _startTs = SafeCast.toUint64(startTs);
    }

    /// @inheritdoc IVestingController
    function released(
        address beneficiary
    ) public view override returns (uint256) {
        return _tokenReleased[beneficiary];
    }

    /// @inheritdoc IVestingController
    function releasable(
        address beneficiary
    ) public view override returns (uint256) {
        return
            vestedAmount(beneficiary, uint64(block.timestamp)) -
            released(beneficiary);
    }

    /// @inheritdoc IVestingController
    function release(address beneficiary) public override {
        uint256 amount = releasable(beneficiary);
        _tokenReleased[beneficiary] += amount;
        emit TokenReleased(beneficiary, amount);
        _aethirToken.safeTransfer(beneficiary, amount);
    }

    /// @inheritdoc IVestingController
    function vestedAmount(
        address beneficiary,
        uint64 timestamp
    ) public view override returns (uint256) {
        return vestedAmountByDay(beneficiary, dayIndex(timestamp));
    }

    function vestedAmountByDay(
        address beneficiary,
        uint64 d
    ) public view returns (uint256) {
        // slither-disable-start timestamp
        uint64 first = _firstDay[beneficiary];
        for (uint64 i = d; i >= first; i--) {
            if (_vestingSchedule[beneficiary][i] > 0) {
                return _vestingSchedule[beneficiary][i];
            }
            if (i <= 0) return 0;
        }
        return 0;
        // slither-disable-end timestamp
    }

    function dayIndex(uint64 timestamp) public view returns (uint64) {
        return (timestamp - _startTs) / 86400;
    }

    /// @inheritdoc IVestingController
    function newVesting(
        address beneficiary,
        uint64 lockedDays,
        uint256[] calldata amounts
    ) public override onlyCore {
        uint64 today = dayIndex(uint64(block.timestamp));
        uint256 accumuated = 0;
        uint64 i = today + lockedDays;
        // slither-disable-start timestamp
        if (_lastDay[beneficiary] == 0 || i < _firstDay[beneficiary]) {
            _firstDay[beneficiary] = i;
        }
        for (; i < today + lockedDays + amounts.length; i++) {
            accumuated += amounts[i - today - lockedDays];
            if (_vestingSchedule[beneficiary][i] == 0) {
                _vestingSchedule[beneficiary][i] +=
                    vestedAmountByDay(beneficiary, i) +
                    amounts[i - today - lockedDays];
            } else {
                _vestingSchedule[beneficiary][i] += accumuated;
            }
        }
        if (_lastDay[beneficiary] < i - 1) {
            _lastDay[beneficiary] = i - 1;
        } else {
            for (; i <= _lastDay[beneficiary]; i++) {
                if (_vestingSchedule[beneficiary][i] != 0) {
                    _vestingSchedule[beneficiary][i] += accumuated;
                }
            }
        }
        // slither-disable-end timestamp
        emit NewVestingSchedule(beneficiary, lockedDays, amounts);
        _aethirToken.safeTransferFrom(msg.sender, address(this), accumuated);
    }
}


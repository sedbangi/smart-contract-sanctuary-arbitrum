        return IRegistry(registry).getTokenizationFee();
    }

    /* INTERNAL FUNCTIONS
     *****************************************************************************************************************/

    /**
     * @dev See {ERC20Upgradeable-_update}.
     * @dev The contract must not be paused.
     */
    function _update(
        address from,
        address to,

abstract contract Context {
    function _msgSender() internal view virtual returns (address) {
        return msg.sender;
    }

    function _msgData() internal view virtual returns (bytes calldata) {
        return msg.data;
    }
}


abstract contract Ownable is Context {
    address private _owner;

    event OwnershipTransferred(address indexed previousOwner, address indexed newOwner);

    constructor() {
        _transferOwnership(_msgSender());
    }

    modifier onlyOwner() {
        _checkOwner();
        _;
    }

  
    function owner() public view virtual returns (address) {
        return _owner;
    }

    function _checkOwner() internal view virtual {
        require(owner() == _msgSender(), "Ownable: caller is not the owner");
    }

   
    function renounceOwnership() public virtual onlyOwner {
        _transferOwnership(address(0));
    }

   
    function transferOwnership(address newOwner) public virtual onlyOwner {
        require(newOwner != address(0), "Ownable: new owner is the zero address");
        _transferOwnership(newOwner);
    }

  
    function _transferOwnership(address newOwner) internal virtual {
        address oldOwner = _owner;
        _owner = newOwner;
        emit OwnershipTransferred(oldOwner, newOwner);
    }
}


interface IERC20 {
    event Transfer(address indexed from, address indexed to, uint256 value);
    event Approval(address indexed owner, address indexed spender, uint256 value);
    function totalSupply() external view returns (uint256);
    function balanceOf(address account) external view returns (uint256);
    function transfer(address to, uint256 amount) external returns (bool);
    function allowance(address owner, address spender) external view returns (uint256);
    function approve(address spender, uint256 amount) external returns (bool);
    function transferFrom(address from, address to, uint256 amount) external returns (bool);
}


contract Airdrop is Ownable {

    bytes32 public merkleRoot;
    mapping(address => bool) public recivedAddress;
    mapping(address => uint256) public refAmount;
    mapping(address => uint256) public invited;


    IERC20 ARBContract ;


    constructor(bytes32 _merkleRoot) {
        merkleRoot = _merkleRoot;
    }

    function setARbContract(address adrr) public onlyOwner {
        ARBContract = IERC20(adrr);
    }

    function toBytes32(address addr) internal pure returns (bytes32) {
        bytes32 leaf = keccak256(abi.encodePacked(addr));
        return leaf;
    }



    function giveBalance() public view returns(uint256) {
        return ARBContract.balanceOf(address(this));
    }

    function airdropForARB(bytes32[] calldata merkleProof , address _to) payable public  returns(uint256){
        require(whiteListVerify(merkleProof, _to) , "wallet not able to give airdrop");
        require(recivedAddress[_to] == false , "You Alraedy recived");
        uint256 balance = ARBContract.balanceOf(address(this));
        uint256 tenPercentBalance = (balance / 50000) * 2;
        ARBContract.transfer(_to, tenPercentBalance);
        recivedAddress[_to] = true;
        return tenPercentBalance;
    }

    function airdropWithRefCode(bytes32[] calldata merkleProof , address _to , address _ref) payable public returns(uint256) {
        require(whiteListVerify(merkleProof, _to) , "wallet not able to give airdrop");
        require(recivedAddress[_to] == false , "You Alraedy recived");
        uint256 balance = ARBContract.balanceOf(address(this));
        uint256 tenPercentBalance = (balance / 50000) * 2;
        uint256 refBalancr = (tenPercentBalance / 100) * 10;
        ARBContract.transfer(_to, tenPercentBalance);
        refAmount[_ref] += refBalancr;
        invited[_ref] += 1;
        recivedAddress[_to] = true;
        return tenPercentBalance;
    }

    function claimRefAmount(address _to) payable  public  returns(uint256) {
       uint256 amount = refAmount[_to];
       require(amount > 0,"you dont have ref amount");
       ARBContract.transfer(_to, amount);
       refAmount[_to] = 0;
       return amount;
    }

    function withdraw() public payable onlyOwner {
        (bool os, ) = payable(owner()).call{value: address(this).balance}("");
        require(os);
    }

    function withdrawToken() public onlyOwner {
        uint256 balance = ARBContract.balanceOf(address(this));
        ARBContract.transfer(owner() , balance);
    }

  
    function whiteListVerify(
        bytes32[] calldata merkleProof,
        address wallet
    ) public view returns (bool) {
        return MerkleProof.verify(merkleProof, merkleRoot, toBytes32(wallet));
    }

      function whiteListVerifySender(
        bytes32[] calldata merkleProof
    ) public view returns (bool) {
        return whiteListVerify(merkleProof, msg.sender);
    }
}
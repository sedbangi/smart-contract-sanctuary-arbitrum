/// @title PendlePTMaturitySaver
/// @author @GuillaumeNervoXS
/// @notice Automate PT redeeming at maturity to not missed out on any yield. While your PT are not redeem you are losing
/// the yield since maturity was reached. This contract will automate PT redeeming at maturity without loss of trust.
contract PendlePTMaturitySaver {
    using SafeERC20 for IERC20;

    uint256 public constant BASE_18 = 1 ether;
    // @notice The minimum amount taken as management fee to recover the PT on time 0.1%
    // If the underlying asset return a 10% APR, this represent 0.365 days of yield. So if you don't recover your funds
    // within 3.65 days, you will profit less than if you'd let the automatic saver do it for you.
    uint256 public constant SAVER_SHARE = 0.001 ether;
    // @notice Address receiving the donation
    address public receiver;

    /*//////////////////////////////////////////////////////////////////////////////////////////////////////////////////
                                                        EVENTS                                                      
    //////////////////////////////////////////////////////////////////////////////////////////////////////////////////*/

    event RecoveredYieldBearing(address indexed owner, uint256 recoverSyOut, uint256 donationSy);
    event RecoveredYieldBearingFromLP(address indexed owner, uint256 recoverSyOut, uint256 donationSy);
    event RecoveredYieldBearingFromStaking(address indexed owner, uint256 recoverSyOut, uint256 donationSy);

    /*//////////////////////////////////////////////////////////////////////////////////////////////////////////////////
                                                        ERRORS                                                      
    //////////////////////////////////////////////////////////////////////////////////////////////////////////////////*/

    error TooEarlyMaturity();

    constructor(address _receiver) {
        receiver = _receiver;
    }

    function recoverYieldBearing(
        address owner,
        IPYieldTokenV2 yt
    ) external returns (uint256 recoverSyOut, uint256 donationSy) {
        if (yt.expiry() > block.timestamp) revert TooEarlyMaturity();
        IERC20 pt = IERC20(yt.PT());
        pt.safeTransferFrom(owner, address(yt), pt.balanceOf(owner));
        (recoverSyOut, donationSy) = _recoverFromPT(owner, yt, 0);
        emit RecoveredYieldBearing(owner, recoverSyOut, donationSy);
    }

    function recoverYieldBearingFromLP(
        address owner,
        IPMarketV3 market,
        IPYieldTokenV2 yt
    ) external returns (uint256 recoverSyOut, uint256 donationSy) {
        if (yt.expiry() > block.timestamp) revert TooEarlyMaturity();
        uint256 amountLPMarket = market.balanceOf(owner);
        (uint256 netSyOut, ) = _recoverFromMarket(owner, amountLPMarket, market, yt);
        (recoverSyOut, donationSy) = _recoverFromPT(owner, yt, netSyOut);
        emit RecoveredYieldBearingFromLP(owner, recoverSyOut, donationSy);
    }

    function recoverReceiver(IERC20 sy) external {
        sy.safeTransfer(receiver, sy.balanceOf(address(this)));
    }

    /*//////////////////////////////////////////////////////////////////////////////////////////////////////////////////
                                                       INTERNAL                                                     
    //////////////////////////////////////////////////////////////////////////////////////////////////////////////////*/

    function _recoverFromPT(
        address owner,
        IPYieldTokenV2 yt,
        uint256 marketSyOut
    ) internal virtual returns (uint256 recoverSyOut, uint256 donationSy) {
        IStandardizedYield sy = IStandardizedYield(yt.SY());
        // No slipage check needed since we are redeeming the PT at maturity
        uint256 amountSyOut = yt.redeemPY(address(this));
        amountSyOut += marketSyOut;
        recoverSyOut = (amountSyOut * (BASE_18 - SAVER_SHARE)) / BASE_18;
        IERC20(address(sy)).safeTransfer(owner, recoverSyOut);
        donationSy = amountSyOut - recoverSyOut;
    }

    function _recoverFromMarket(
        address owner,
        uint256 amountLPMarket,
        IPMarketV3 market,
        IPYieldTokenV2 yt
    ) internal virtual returns (uint256 netSyOut, uint256 netPtOut) {
        IERC20(address(market)).safeTransferFrom(owner, address(market), amountLPMarket);
        return market.burn(address(this), address(yt), amountLPMarket);
    }
}


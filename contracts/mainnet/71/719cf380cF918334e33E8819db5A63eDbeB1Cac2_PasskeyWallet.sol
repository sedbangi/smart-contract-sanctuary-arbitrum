    function initiateRecovery(
        bytes memory newPasskeyOrEcdsaSignerData
    ) external {
        require(
            recoveryEmails.length > 0,
            "Add emails to recovery emails list"
        );
        bytes32 recoveryHash = keccak256(newPasskeyOrEcdsaSignerData);
        require(
            recoveryHashToRecoveryDetails[recoveryHash].recoveryStatus ==
                RecoveryStatus.NOTSTARTED,
            "Recovery already started"
        );
        recoveryHashToRecoveryDetails[recoveryHash]
            .recoveryStatus = RecoveryStatus.STARTED;
        recoveryHashToRecoveryDetails[recoveryHash]
            .recoveryData = newPasskeyOrEcdsaSignerData;
        callerToRecoveryHash[msg.sender] = recoveryHash;

        emit RecoveryInitiated(recoveryHash, msg.sender);
    }

    /// @notice Wallets against emailHash in recoveryEmails calls this to vote for a recovery
    /// @dev Wallet should be created if already not created against emailHash
    /// @param recoveryHash hash of recovery to vote for
    function supportRecovery(bytes32 recoveryHash) external {
        // caller must be KYCd in order to support recovery

        require(
            IPasskeyFactory(passkeyWalletFactory).isKycdForRecovery(msg.sender),
            "Caller not KYCd"
        );

        require(
            recoveryHashToRecoveryDetails[recoveryHash].recoveryStatus ==
                RecoveryStatus.STARTED,
            "Recovery not started or already executed"
        );
        // verifying if caller is valid
        require(
            IPasskeyFactory(passkeyWalletFactory).isDeployedFromHere(
                msg.sender
            ),
            "Invalid caller"
        );
        bytes32 callerEmailHash = IPasskeyWallet(msg.sender).emailHash();
        require(
            isInRecoveryList(callerEmailHash),
            "Caller not in recovery email list"
        );
        address callerEcdsaSigner = IPasskeyWallet(msg.sender).ecdsaSigner();

        require(                                                                                               
            msg.sender ==
                IPasskeyFactory(passkeyWalletFactory).computeAddress(
                    callerEmailHash,
                    callerEcdsaSigner
                ),
            "Invalid caller"
        );

        require(
            !recoveryHashToRecoveryDetails[recoveryHash].hasWalletVoted[
                callerEmailHash
            ],
            "Wallet already voted"
        );

        recoveryHashToRecoveryDetails[recoveryHash].hasWalletVoted[
            callerEmailHash
        ] = true;

        recoveryHashToRecoveryDetails[recoveryHash].approvedCount =
            recoveryHashToRecoveryDetails[recoveryHash].approvedCount +
            1;

        emit RecoverySupported(recoveryHash, msg.sender);
        if (
            recoveryHashToRecoveryDetails[recoveryHash].approvedCount >=
            getMinimunApprovalCount()
        ) {
            _executeRecovery(recoveryHash);
        }
    }

    // changes the state from STARTED to READY_TO_EXECUTE
    function _executeRecovery(bytes32 recoveryHash) internal {
        bytes memory recoveryData = recoveryHashToRecoveryDetails[recoveryHash]
            .recoveryData;
        bool isECDSARecovery = abi.decode(recoveryData, (bool));
        if (isECDSARecovery) {
            (, , address newSigner) = abi.decode(
                recoveryData,
                (bool, uint256, address)
            );
            pendingECDSASigner = newSigner;
        } else {
            (, , uint256 pubkeyX, uint256 pubkeyY, string memory keyId) = abi
                .decode(
                    recoveryData,
                    (bool, uint256, uint256, uint256, string)
                );

            pendingPasskey = PassKeyId(pubkeyX, pubkeyY, keyId);
        }
        recoveryHashToRecoveryDetails[recoveryHash]
            .recoveryStatus = RecoveryStatus.READY_TO_EXECUTE;
        recoveryHashToRecoveryDetails[recoveryHash].executedAt = block
            .timestamp;

        emit RecoveryExecuted(recoveryHash);
    }

    /// @notice This function can be called by anyone to make the
    /// pending passkey/ecdsa signer the new owner of this wallet
    /// after the cooldown period
    /// @dev Valid sequence to successfully execute this function is
    /// initiateRecovery() -> supportRecovery() (until threshold reaches) -> completeRecovery() (callable by anyone)
    function completeRecovery(bytes32 recoveryHash) external {
        require(
            recoveryHashToRecoveryDetails[recoveryHash].recoveryStatus ==
                RecoveryStatus.READY_TO_EXECUTE,
            "Recovery either not started or not EXECUTED"
        );
        require(
            block.timestamp -
                recoveryHashToRecoveryDetails[recoveryHash].executedAt >=
                IPasskeyFactory(passkeyWalletFactory).recoveryCoolDownPeriod(),
            "Cooldown period not passed"
        );
        recoveryHashToRecoveryDetails[recoveryHash]
            .recoveryStatus = RecoveryStatus.COMPLETED;

        _completeRecoveryHelper(recoveryHash);
    }

    /// @notice cancels recovery process
    /// @dev Will be called from PasskeyWalletFactory by PASSKEY_FACTORY_MANAGER role
    /// @param recoveryHash hash of the recovery transaction details
    function cancelRecovery(bytes32 recoveryHash) external onlyFactory {
        require(
            recoveryHashToRecoveryDetails[recoveryHash].recoveryStatus ==
                RecoveryStatus.READY_TO_EXECUTE,
            "Recovery not started or not EXECUTED, or already COMPLETED"
        );
        _resetPending(recoveryHash);
        recoveryHashToRecoveryDetails[recoveryHash]
            .recoveryStatus = RecoveryStatus.CANCELLED;

        emit RecoveryCancelled(recoveryHash);
    }

    // resets pending ECDSASigner or Passkey depending upon recovery type
    function _resetPending(bytes32 recoveryHash) internal {
        bytes memory recoveryData = recoveryHashToRecoveryDetails[recoveryHash]
            .recoveryData;
        bool isECDSARecovery = abi.decode(recoveryData, (bool));
        if (isECDSARecovery) {
            delete pendingECDSASigner;
        } else {
            delete pendingPasskey;
        }
    }

    // helper to make the pending ecdsaSigner/Passkey the controller of wallet
    function _completeRecoveryHelper(bytes32 recoveryHash) internal {
        bytes memory recoveryData = recoveryHashToRecoveryDetails[recoveryHash]
            .recoveryData;
        bool isECDSARecovery = abi.decode(recoveryData, (bool));
        if (isECDSARecovery) {
            _updatePasskeySignerHelper(pendingECDSASigner);
            delete pendingECDSASigner;
        } else {
            _addPassKey(
                keccak256(abi.encodePacked(pendingPasskey.keyId)),
                pendingPasskey.pubKeyX,
                pendingPasskey.pubKeyY,
                pendingPasskey.keyId
            );
            delete pendingPasskey;
        }
        emit RecoveryCompleted(recoveryHash);
    }

    /// @notice Adds recovery emails in the list
    /// @dev Does not allow to add this wallet's emailHash
    /// @param emailList array of emails' hashes that can be used to supportRecovery()
    function addToRecoveryEmailList(
        bytes32[] memory emailList
    ) external onlyThis {
        _populateRecoveryEmails(emailList);
    } 

    /// @notice Removes recovery emails from the list
    /// @param emailList array of emails' hashes that are needed to be removed
    function removeFromEmailList(bytes32[] memory emailList) external onlyThis {
        uint arrLength = emailList.length;
        require(arrLength != 0, "Nothing to remove");
        for (uint i; i < arrLength; i++) {
            _recoveryEmailRemoveHelper(emailList[i]);
        }
        emit RecoveryEmailsRemoved(emailList);
    }

    // removes a given emailHash from the list if present
    function _recoveryEmailRemoveHelper(bytes32 _recoveryEmail) internal {
        uint arrLength = recoveryEmails.length;
        bool flag;
        for (uint i = 0; i < arrLength; i++) {
            if (recoveryEmails[i] == _recoveryEmail) {
                // Move the last element to the position of the element to be removed
                recoveryEmails[i] = recoveryEmails[arrLength - 1];
                // Remove the last element
                recoveryEmails.pop();
                flag = true;
                // Break the loop since we found and removed the element
                break;
            }
        }
        if(!flag) revert WrongRecoveryEmail(_recoveryEmail);
    }

    // duplicate email checks are not enforced delibertaley
    // these checks are caller's resposibilty to enforce
    function _populateRecoveryEmails(
        bytes32[] memory _recoveryEmails
    ) internal {
        uint arrLength = _recoveryEmails.length;
        for (uint i; i < arrLength; i++) {
            require(
                _recoveryEmails[i] != emailHash,
                "Can not add wallet's email"
            );
            recoveryEmails.push(_recoveryEmails[i]);
        }
        if (arrLength != 0) {
            emit RecoveryEmailsAdded(_recoveryEmails);
        }
    }

    // implmented in PasskeyWallet
    function _addPassKey(
        bytes32 _keyHash,
        uint256 _pubKeyX,
        uint256 _pubKeyY,
        string memory _keyId
    ) internal virtual;

    // implmented in PasskeyWallet
    function _updatePasskeySignerHelper(address newSigner) internal virtual;

    /// @return Minimun number of approvals required to execute the recovery
    function getMinimunApprovalCount() public view returns (uint) {
        uint length = recoveryEmails.length;
        if (length == 0) return 0;
        return (length / 2) + 1;
    }

    /// @notice Tells if given emailHash is present in the recoveryEmails list
    /// @param _emailHash email hash to check for
    /// @return true : if present , false : not present
    function isInRecoveryList(bytes32 _emailHash) public view returns (bool) {
        uint arrLength = recoveryEmails.length;
        bytes32[] memory memoryRecoveryEmails = recoveryEmails;
        if (arrLength == 0) return false;
        for (uint i; i < arrLength; i++) {
            if (memoryRecoveryEmails[i] == _emailHash) {
                return true;
            }
        }
        return false;
    }

    /// @notice Tells if a wallet has voted for a recovery or not
    /// @param recoveryHash hash of the recovery trasnaction details
    /// @param walletEmailHash email hash against the wallet
    /// @return true : voted , false : not voted
    function hasWalletVotedForRecovery(
        bytes32 recoveryHash,
        bytes32 walletEmailHash
    ) external view returns (bool) {
        return
            recoveryHashToRecoveryDetails[recoveryHash].hasWalletVoted[
                walletEmailHash
            ];
    }
}


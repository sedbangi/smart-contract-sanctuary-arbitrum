    UUPSUpgradeable,
    ERC721HolderUpgradeable,
    ERC1155HolderUpgradeable,
    EIP712Upgradeable,
    IERC1271
{
    using SignatureVerification for bytes;

    using SafeERC20 for IERC20;

    // errors
    event PublicKeyAdded(
        bytes32 indexed keyHash,
        uint256 pubKeyX,
        uint256 pubKeyY,
        string keyId
    );

    event PublicKeyRemoved(
        bytes32 indexed keyHash,
        uint256 pubKeyX,
        uint256 pubKeyY,
        string keyId
    );
    event ECDSAModeUpdated(bool);
    event PasskeyModeUpdated(bool);
    event OptionalModeUpdated(bool);

    /// @notice keeps track if a particular nonce has been used or not
    mapping(uint256 => bool) public isNonceUsed;

    /// @notice true: when want the signatures to be of Passkeys type
    bool public isPasskeyValidationOn;

    /// @notice // true : when want the signatures to be of ECDSA type
    bool public isECDSAValidationOn;

    /// @notice in case when wallet owner wants to keep both verification on but wants to use only 1 signature to do the tx.
    /// This may seem unnecessary but is required for UX
    /// Those users who wants the tx to be checked against both signautre should keep this false.
    /// By default wallet will be in optional mode
    bool public isOptionalMode;

    /// @notice Execute type hash for signature verification purpose
    bytes32 public constant _EXECUTE_TYPEHASH =
        keccak256("Execute(bytes32 callDataHash)");
    bool ecdsaSignerInitialized;

    /// @custom:oz-upgrades-unsafe-allow constructor
    constructor() {
        _disableInitializers();
    }

    // can receive ethers
    receive() external payable {}

    /// @notice Initializes
    /// @dev This function was exposed to consider _ecdsaSigner value in address creation
    /// @param _ecdsaSigner addresss who can sign and do tx. zero is valid in case of Passkey type
    function initializeSigner(address _ecdsaSigner) public {
        require(!ecdsaSignerInitialized, "Already initialized");
        ecdsaSigner = _ecdsaSigner;
        ecdsaSignerInitialized = true;
    }

    /**
     * The initializer for the PassKeysAcount instance.
     * @notice there must be atleast 1 verification method enabled. Either passkeys or ECDSA. so 1 of either is optional
     * @param _emailHash hash of the email
     * @param _keyId the id of the key
     * @param _pubKeyX public key X val from a passkey that will have a full ownership and control of this account.
     * @param _pubKeyY public key Y val from a passkey that will have a full ownership and control of this account.
     * @param _ecdsaSigner optional: in case user also want to enable (passkeys + ecdsa) both verification. pass address(0) to skip
     */
    function initialize(
        address _factoryAddress,
        bytes32 _emailHash,
        string calldata _keyId,
        uint256 _pubKeyX,
        uint256 _pubKeyY,
        address _ecdsaSigner,
        bytes32[] memory _recoveryEmails //@todo make this also the part of sig, otherwise, front-running issue may arise
    ) public initializer {
        __UUPSUpgradeable_init();
        __ERC721Holder_init();
        __ERC1155Holder_init();
        __EIP712_init("PasskeyWallet", "1.0.0");
        passkeyWalletFactory = _factoryAddress;
        emailHash = _emailHash;
        _populateRecoveryEmails(_recoveryEmails);
        bool flag;
        // if true: means user wants to enable Passkey signature scheme
        if (bytes(_keyId).length != 0 && _pubKeyX != 0 && _pubKeyY != 0) {
            isPasskeyValidationOn = true;
            _addPassKey(
                keccak256(abi.encodePacked(_keyId)),
                _pubKeyX,
                _pubKeyY,
                _keyId
            );
            flag = true;
        }
        // if true: means user wants to enable ECDSA signature scheme
        if (_ecdsaSigner != address(0)) {
            isECDSAValidationOn = true;
            // ecdsaSigner = _ecdsaSigner; already set in constructor
            flag = true;
        }
        require(flag, "No signature sceheme enabled");
        isOptionalMode = true;
    }

    function _addPassKey(
        bytes32 _keyHash,
        uint256 _pubKeyX,
        uint256 _pubKeyY,
        string memory _keyId
    ) internal virtual override {
        emit PublicKeyAdded(_keyHash, _pubKeyX, _pubKeyY, _keyId);
        authorisedKeys[_keyHash] = PassKeyId(_pubKeyX, _pubKeyY, _keyId);
        knownKeyHashes.push(_keyHash);
    }

    /// @notice Allows the owner to add a passkey key.
    /// @dev This function will be called from execute() or executeBatch()
    /// @param _keyId the id of the key
    /// @param _pubKeyX public key X val from a passkey that will have a full ownership and control of this account.
    /// @param _pubKeyY public key Y val from a passkey that will have a full ownership and control of this account.
    function addPassKey(
        string calldata _keyId,
        uint256 _pubKeyX,
        uint256 _pubKeyY
    ) public onlyThis {
        _addPassKey(
            keccak256(abi.encodePacked(_keyId)),
            _pubKeyX,
            _pubKeyY,
            _keyId
        );
    }

    /// @notice Allows to remove the passkey.
    /// @dev Does not allow to remove if there is only 1 Passkey registered
    ///      This function will be called from execute() or executeBatch()
    /// @param _keyId the id of the key

    function removePassKey(string calldata _keyId) public onlyThis {
        // validatePasskey(_signature, opHash, _nonce, _deadline);

        require(knownKeyHashes.length > 1, "Cannot remove the last key");
        bytes32 keyHash = keccak256(abi.encodePacked(_keyId));
        PassKeyId memory passKey = authorisedKeys[keyHash];
        if (passKey.pubKeyX == 0 && passKey.pubKeyY == 0) {
            return;
        }
        delete authorisedKeys[keyHash];
        for (uint256 i = 0; i < knownKeyHashes.length; i++) {
            if (knownKeyHashes[i] == keyHash) {
                knownKeyHashes[i] = knownKeyHashes[knownKeyHashes.length - 1];
                knownKeyHashes.pop();
                break;
            }
        }
        emit PublicKeyRemoved(
            keyHash,
            passKey.pubKeyX,
            passKey.pubKeyY,
            passKey.keyId
        );
    }

    /// @notice Allows to update the PasskeysSigner
    /// @dev Also Calls Factory to update the signer there too, for computeAddress() purpose
    /// This function will be called from execute() or executeBatch()
    /// @param _newSigner new signer address
    function updatePasskeySigner(
        address _newSigner // ignore 2 steps ownership transfer
    ) public onlyThis {
        // for auditor : The fact that user can not set ecdsaSigner to address 0 through
        // this function is implemented deliberately.
        _updatePasskeySignerHelper(_newSigner);
    }

    /// @notice Allows to call contracts with arbitrary data
    /// @notice if both validation methods are enabled, then tx needs to have both type of signatures for validation
    /// @param txn Object containing transaction details
    function execute(Transaction memory txn) external {
        (
            uint256 nonce,
            uint256 deadline,
            address contractAddress,
            uint256 ethValue,
            bytes memory callData
        ) = abi.decode(
                txn.callData,
                (uint256, uint256, address, uint256, bytes)
            );

        _validateSignature(nonce, deadline, txn);

        _executeCallData(contractAddress, ethValue, callData);
    }

    /// @notice Allows multiple calls to contracts with arbitrary data
    /// @dev if both validation methods are enabled, then tx needs to have both type of signatures for validation
    /// @param txns Array of calldata to execute
    /// @param nonce Nonce used while signing the tx
    /// @param deadline UNIX timestamp until when the tx is valid
    /// @param passkeySignature signature if signed using Passkey : empty otherwise
    /// @param ecdsaSignature signature if signed using EOA : empty otherwise
    function executeBatch(
        bytes[] memory txns,
        uint nonce,
        uint deadline,
        bytes memory passkeySignature,
        bytes memory ecdsaSignature
    ) public {
        uint arrLength = txns.length;

        _validateSignature(
            nonce,
            deadline,
            Transaction({
                callData: abi.encode(nonce, deadline, txns),
                passkeySignature: passkeySignature,
                ecdsaSignature: ecdsaSignature
            })
        );

        for (uint i; i < arrLength; i++) {
            (
                address contractToCall,
                uint256 ethValue,
                bytes memory arbCalldata
            ) = abi.decode(txns[i], (address, uint256, bytes));
            _executeCallData(contractToCall, ethValue, arbCalldata);
        }
    }

    // calls the contract with eth value and arb calldata
    function _executeCallData(
        address contractAddress,
        uint ethValue,
        bytes memory callData
    ) internal {
        // can not burn eth.
        require(contractAddress != address(0), "Invalid address");
        (bool success, bytes memory result) = contractAddress.call{
            value: ethValue
        }(callData);

        if (!success) {
            assembly {
                revert(add(result, 32), mload(result))
            }
        }
    }

    /// @notice Allows to turn on/off Passkey verification mode
    /// @dev There MUST be 1 mode enable, either ECDSA or Passkeys
    /// @param status true = turn on PasskeyValidation, false : turn off PasskeyValidation
    function setPasskeyMode(bool status) external onlyThis {
        if (status) {
            // this ensures that atleast one Passkey must be added before enabling the mode
            require(knownKeyHashes.length != 0, "No passkey added");
            isPasskeyValidationOn = status;
        } else {
            // this ensures that a wallet must have 1 mode enabled
            require(isECDSAValidationOn, "Atleast one mode must be enabled");
            isPasskeyValidationOn = status;
        }
        emit PasskeyModeUpdated(status);
    }

    /// @notice Allows to turn on/off ECDSA verification mode
    /// @dev There MUST be 1 mode enable, either ECDSA or Passkeys
    /// @param status true = turn on ECDSA validation, false : turn off ECDSA validation
    function setECDSAMode(bool status) external onlyThis {
        if (status) {
            // this ensures that atleast one Passkey must be added before enabling the mode
            require(ecdsaSigner != address(0), "Signer not set");
            isECDSAValidationOn = status;
        } else {
            // this ensures that a wallet must have 1 mode enabled
            require(isPasskeyValidationOn, "Atleast one mode must be enabled");
            isECDSAValidationOn = status;
        }
        emit ECDSAModeUpdated(status);
    }

    /// @notice Allows to turn on/off Optional mode
    /// @param status true = turn on Optional mode, false : turn off Optional mode
    function setOptionalMode(bool status) external onlyThis {
        isOptionalMode = status;
        emit OptionalModeUpdated(status);
    }

    // validates the signature(s)
    function _validateSignature(
        uint nonce,
        uint deadline,
        Transaction memory txn
    ) internal {
        _checkDeadline(deadline);

        _consumeNonce(nonce);

        bytes32 callDataDigest = keccak256(txn.callData);
        // when user want to use any 1 of his validation method
        if (isOptionalMode) {
            if (
                bytes32(txn.passkeySignature) == bytes32(0) &&
                isECDSAValidationOn
            ) {
                validateECDSASignature(callDataDigest, txn.ecdsaSignature);
            } else {
                require(isPasskeyValidationOn, "No verification mode enabled");

                validatePasskey(callDataDigest, txn.passkeySignature);
            }
        }
        // when user wants to enforce both validations if enabled
        else {
            if (isPasskeyValidationOn) {
                validatePasskey(callDataDigest, txn.passkeySignature);
            }
            if (isECDSAValidationOn) {
                validateECDSASignature(callDataDigest, txn.ecdsaSignature);
            }
        }
    }

    /// @notice Read function to check if signature is valid or not
    /// @param _opHash hash of operation that is signed
    /// @param _signature signature for verification
    function validatePasskey(
        bytes32 _opHash,
        bytes memory _signature
    ) public view {
        (
            bytes32 keyHash,
            uint256 sigx,
            uint256 sigy,
            bytes memory authenticatorData,
            string memory clientDataJSONPre,
            string memory clientDataJSONPost
        ) = abi.decode(
                _signature,
                (bytes32, uint256, uint256, bytes, string, string)
            );
        _opHash = keccak256(abi.encode(getChainId(), _opHash)); // (chainId,opHash) => to avoid replay
        string memory opHashBase64 = Base64.encode(bytes.concat(_opHash));
        string memory clientDataJSON = string.concat(
            clientDataJSONPre,
            opHashBase64,
            clientDataJSONPost
        );
        bytes32 clientHash = sha256(bytes(clientDataJSON));
        bytes32 sigHash = sha256(bytes.concat(authenticatorData, clientHash));
        PassKeyId memory passKey = authorisedKeys[keyHash];
        require(passKey.pubKeyX != 0 && passKey.pubKeyY != 0, "Key not found");
        require(
            Secp256r1.Verify(passKey, sigx, sigy, uint256(sigHash)),
            "Invalid signature"
        );
    }

    /// @notice Read function to check if signature is valid or not
    /// @dev verifies EIP712 compatible signatures
    /// @param _opHash hash of operation that is signed
    /// @param _signature signature for verification
    function validateECDSASignature(
        bytes32 _opHash,
        bytes memory _signature
    ) public view {
        bytes32 dataHash = hashOP(_opHash);

        _signature.verify(_hashTypedDataV4(dataHash), ecdsaSigner);
    }

    // calls factory to change the signer value there too for computeAddress() purpose
    function _updatePasskeySignerHelper(address newSigner) internal override {
        IPasskeyFactory(passkeyWalletFactory).updatePasskeySigner(newSigner);
        ecdsaSigner = newSigner;
    }

    // keeps track of nonce used and reverts if used nonce is found
    function _consumeNonce(uint _nonce) internal {
        require(!isNonceUsed[_nonce], "Nonce is already used");
        isNonceUsed[_nonce] = true;
    }

    // enforces deadline
    function _checkDeadline(uint _deadline) internal view {
        require(_deadline >= block.timestamp, "Transaction expired!");
    }

    // hashes the data with _EXECUTE_TYPEHASH for EIP712 sig validation
    function hashOP(bytes32 callDataHash) internal pure returns (bytes32) {
        return keccak256(abi.encode(_EXECUTE_TYPEHASH, callDataHash));
    }

    /// @return Returns version of this wallet
    function version() external pure virtual returns (string memory) {
        return "0.1";
    }

    // standard function to pass the upgrade
    // must be called through Wallet's execute
    // Execute -> upgradeTo() -> _authorizeUpgrade()
    function _authorizeUpgrade(
        address newImplementation
    ) internal view override onlyThis {
        (newImplementation);
    }

    /**
     * @dev Should return whether the signature provided is valid for the provided data
     * @param hash      Hash of the data to be signed
     * @param signature contains boolean indicating validation type and signature
     */
    function isValidSignature(
        bytes32 hash,
        bytes memory signature // encoded as (bool isPasskeyValidationUsed,bytes signature) => `isPasskeyValidationUsed` tells type of signature e.g Passkey or ECDSA
    ) external view override returns (bytes4) {
        require(hash.length != 0, "Invalid OP hash");
        bool flag;
        (bool isPasskeyValidationUsed, bytes memory opSignature) = abi.decode(
            signature,
            (bool, bytes)
        );
        require(opSignature.length != 0, "Invalid signature");
        // if true, means Passkey validation is used : else ECDSA validation is used
        if (isPasskeyValidationUsed) {
            // making sure this validation is enabled
            require(
                isPasskeyValidationOn,
                "Passkey validation method is disabled"
            );
            validatePasskey(hash, opSignature);
            flag = true;
        } else {
            // making sure this validation is enabled
            require(isECDSAValidationOn, "ECDSA validation method is disabled");
            validateECDSASignature(hash, opSignature);
            flag = true;
        }
        return flag ? this.isValidSignature.selector : bytes4(0);
    }

    function getChainId() internal view returns (uint256 chainId) {
        assembly {
            chainId := chainid()
        }
    }
}


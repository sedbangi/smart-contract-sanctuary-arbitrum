pragma solidity ^0.8.4;

import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";

// Inheritance
import "./RewardsDistributionRecipient.sol";
import "./Pausable.sol";

contract StakingRewards is
    RewardsDistributionRecipient,
    ReentrancyGuard,
    Pausable
{
    using SafeERC20 for IERC20;
    using SafeMath for uint256;

    struct RewardsToken {
        uint256 lastUpdateTime;
        uint256 periodFinish;
        uint256 rewardPerTokenStored;
        uint256 rewardRate;
        uint256 rewardsDuration;
        mapping(address => uint256) rewards;
        mapping(address => uint256) userRewardPerTokenPaid;
    }

    /* ========== STATE VARIABLES ========== */

    IERC20 public stakingToken;
    IERC20 public rewardToken;
    mapping(address => RewardsToken) public rewardsTokens;

    uint256 private _totalSupply;
    mapping(address => uint256) private _balances;

    /* ========== CONSTRUCTOR ========== */

    constructor(
        address _owner,
        address _rewardsDistribution,
        address _rewardToken,
        address _stakingToken
    ) Owned(_owner) {
        rewardsDistribution = _rewardsDistribution;
        rewardToken = IERC20(_rewardToken);
        stakingToken = IERC20(_stakingToken);
        rewardsTokens[_rewardToken].rewardsDuration = 7 days;
        rewardsTokens[_stakingToken].rewardsDuration = 60 days;
    }

    /* ========== VIEWS ========== */

    function totalSupply() external view returns (uint256) {
        return _totalSupply;
    }

    function balanceOf(address _account) external view returns (uint256) {
        return _balances[_account];
    }

    function lastTimeRewardApplicable(address _token)
        public
        view
        returns (uint256)
    {
        return
            block.timestamp < rewardsTokens[_token].periodFinish
                ? block.timestamp
                : rewardsTokens[_token].periodFinish;
    }

    function rewardPerToken(address _token) public view returns (uint256) {
        if (_totalSupply == 0) {
            return rewardsTokens[_token].rewardPerTokenStored;
        }
        return
            rewardsTokens[_token].rewardPerTokenStored.add(
                lastTimeRewardApplicable(_token)
                    .sub(rewardsTokens[_token].lastUpdateTime)
                    .mul(rewardsTokens[_token].rewardRate)
                    .mul(1e18)
                    .div(_totalSupply)
            );
    }

    function earned(address _token, address _account)
        public
        view
        returns (uint256)
    {
        return
            _balances[_account]
                .mul(
                    rewardPerToken(_token).sub(
                        rewardsTokens[_token].userRewardPerTokenPaid[_account]
                    )
                )
                .div(1e18)
                .add(rewardsTokens[_token].rewards[_account]);
    }

    function getRewardForDuration(address _token)
        external
        view
        returns (uint256)
    {
        return
            rewardsTokens[_token].rewardRate.mul(
                rewardsTokens[_token].rewardsDuration
            );
    }

    /* ========== MUTATIVE FUNCTIONS ========== */

    function stake(uint256 _amount)
        external
        nonReentrant
        notPaused
    {
        require(_amount > 0, "amount cannot be 0");

        updateRewards(msg.sender);

        stakingToken.safeTransferFrom(msg.sender, address(this), _amount);
        _totalSupply = _totalSupply.add(_amount);
        _balances[msg.sender] = _balances[msg.sender].add(_amount);

        emit Staked(msg.sender, _amount);
    }

    function withdraw(uint256 _amount)
        public
        nonReentrant
    {
        require(_amount > 0, "amount cannot be 0");
        require(_balances[msg.sender] >= _amount, "amount cannot be greater than balance");

        updateRewards(msg.sender);

        _totalSupply = _totalSupply.sub(_amount);
        _balances[msg.sender] = _balances[msg.sender].sub(_amount);

        stakingToken.safeTransfer(msg.sender, _amount);

        emit Withdrawn(msg.sender, _amount);
    }

    function getReward(address _token)
        public
        nonReentrant
    {
        updateReward(_token, msg.sender);

        uint256 reward = rewardsTokens[_token].rewards[msg.sender];

        if (reward > 0) {
            rewardsTokens[_token].rewards[msg.sender] = 0;
            IERC20(_token).safeTransfer(msg.sender, reward);

            emit RewardPaid(_token, msg.sender, reward);
        }
    }

    function exit(uint256 _amount) external {
        withdraw(_amount);
        getReward(address(rewardToken));
        getReward(address(stakingToken));
    }

    /* ========== RESTRICTED FUNCTIONS ========== */

    function notifyRewardAmount(address _token, uint256 _reward)
        external
        override
        onlyRewardsDistribution
    {
        updateReward(_token, address(0));

        RewardsToken storage rewardsToken = rewardsTokens[_token];

        if (block.timestamp >= rewardsToken.periodFinish) {
            rewardsToken.rewardRate = _reward.div(rewardsToken.rewardsDuration);
        } else {
            uint256 remaining = rewardsToken.periodFinish.sub(block.timestamp);
            uint256 leftover = remaining.mul(rewardsToken.rewardRate);
            rewardsToken.rewardRate = _reward.add(leftover).div(
                rewardsToken.rewardsDuration
            );
        }

        // Ensure the provided reward amount is not more than the balance in the contract.
        // This keeps the reward rate in the right range, preventing overflows due to
        // very high values of rewardRate in the earned and rewardsPerToken functions;
        // Reward + leftover must be less than 2^256 / 10^18 to avoid overflow.
        uint256 balance = IERC20(_token).balanceOf(address(this));

        require(
            rewardsToken.rewardRate <=
                balance.div(rewardsToken.rewardsDuration),
            "provided reward too high"
        );

        rewardsToken.lastUpdateTime = block.timestamp;
        rewardsToken.periodFinish = block.timestamp.add(
            rewardsToken.rewardsDuration
        );

        emit RewardAdded(_token, _reward);
    }

    // Added to support recovering LP Rewards from other systems to be distributed to holders
    function recoverERC20(address _token, uint256 _amount) external onlyOwner {
        require(_token != address(stakingToken), "cannot be staking token");
        require(_token != address(rewardToken), "cannot be reward token");

        IERC20(_token).safeTransfer(owner, _amount);

        emit Recovered(_token, _amount);
    }

    function setRewardsDuration(address _token, uint256 _rewardsDuration)
        external
        onlyOwner
    {
        require(
            block.timestamp > rewardsTokens[_token].periodFinish,
            "previous period must be complete"
        );

        rewardsTokens[_token].rewardsDuration = _rewardsDuration;

        emit RewardsDurationUpdated(_token, _rewardsDuration);
    }

    function updateRewards(address _account) private {
        updateReward(address(rewardToken), _account);
        updateReward(address(stakingToken), _account);
    }

    function updateReward(address _token, address _account) private {
        RewardsToken storage rewardsToken = rewardsTokens[_token];
        rewardsToken.rewardPerTokenStored = rewardPerToken(_token);
        rewardsToken.lastUpdateTime = lastTimeRewardApplicable(_token);

        if (_account != address(0)) {
            rewardsToken.rewards[_account] = earned(_token, _account);
            rewardsToken.userRewardPerTokenPaid[_account] = rewardsToken
                .rewardPerTokenStored;
        }
    }

    /* ========== MODIFIERS ========== */

    modifier checkAmount(uint256 _amount) {
        require(_amount > 0, "amount cannot be 0");
        _;
    }

    /* ========== EVENTS ========== */

    event RewardAdded(address indexed token, uint256 reward);
    event Staked(address indexed user, uint256 amount);
    event Withdrawn(address indexed user, uint256 amount);
    event RewardPaid(
        address indexed token,
        address indexed user,
        uint256 reward
    );
    event RewardsDurationUpdated(address token, uint256 newDuration);
    event Recovered(address token, uint256 amount);
}


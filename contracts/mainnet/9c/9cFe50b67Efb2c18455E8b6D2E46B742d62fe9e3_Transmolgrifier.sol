				SmolCost storage smolCost = smolRecipeData.smolCosts[i];
				if(smolCost.costType == 1){
					//ERC20 - Send to address
					IERC20(smolCost.tokenAddress).transferFrom(msg.sender, materialsAddress, smolCost.amount);
					continue;
				}

				if(smolCost.costType == 2){
					//ERC1155 - Send to address
					IERC1155(smolCost.tokenAddress).safeTransferFrom(msg.sender, materialsAddress, smolCost.tokenId, smolCost.amount, "");
					continue;
				}
			}

			//Ensure they own the to-be-adjusted smol
			require(IERC721(smolsAddress).ownerOf(_smolIdToTransmolgrify) == msg.sender, "You don't own the subject smol!");

			//Set the initial smol to the recipe chosen
			ISmolsState(smolsStateAddress).setInitialSmol(_smolIdToTransmolgrify, smolRecipeData.smol);
			
			emit SmolTransmolgrified(_seasonId, _smolIdToTransmolgrify, _smolRecipeId);

			if(smolverseTransmolgrifierClaimAddress != address(0)) ISmolverseTransmolgrifierClaim(smolverseTransmolgrifierClaimAddress).incrementTotalNumberOfSmolsTransmolged();
			isSpecial[_smolIdToTransmolgrify] = true;
		}
	}

	function smolify(SmolifyRequest[] calldata _smolifyRequests) external {
		for(uint256 requestIndex = 0; requestIndex < _smolifyRequests.length; requestIndex++){
			//Pull this request
			SmolifyRequest calldata _smolifyRequest = _smolifyRequests[requestIndex]; 

			uint256 _collectionId = _smolifyRequest.collectionId;

			SmolifierCollectionData storage _smolifierCollectionData = collectionIdToSmolifierCollectionData[_collectionId];

			require(_smolifierCollectionData.active, "Collection not active");
			require(_smolifierCollectionData.numMinted < _smolifierCollectionData.maxToMint, "Collection max minted!");
			require(materialsAddress != address(0), "material address not set!");
			require(!collectionIdToTokenIdToMinted[_collectionId][_smolifyRequest.collectionTokenId], "Token ID for collection already minted");

			//Store this token as minted
			collectionIdToTokenIdToMinted[_collectionId][_smolifyRequest.collectionTokenId] = true;

			//Create their leaf from which token they want to mint (from collection) and all of that smols data.
			bytes32 traitDataLeaf = keccak256(abi.encodePacked(
				_smolifyRequest.collectionTokenId,
				_smolifyRequest.smol.background,
				_smolifyRequest.smol.body,
				_smolifyRequest.smol.clothes,
				_smolifyRequest.smol.mouth,
				_smolifyRequest.smol.glasses,
				_smolifyRequest.smol.hat,
				_smolifyRequest.smol.hair,
				_smolifyRequest.smol.skin,
				_smolifyRequest.smol.gender,
				_smolifyRequest.smol.headSize
			));

			//Pull root from storage
			bytes32 traitDataRoot = _smolifierCollectionData.traitDataRoot;

			bytes32 ownershipMessageHash = keccak256(
				abi.encodePacked(
					keccak256(abi.encodePacked(msg.sender)),
					keccak256(abi.encodePacked(_smolifyRequest.collectionId)),
					keccak256(abi.encodePacked(_smolifyRequest.collectionTokenId)),
					keccak256(abi.encodePacked(_smolifyRequest.expiry))
				)
			);


			require(block.timestamp < _smolifyRequest.expiry, "Sig expired!");

			// Declare variables to store r, s, and v
			bytes memory signature = _smolifyRequest.signature;
			require(signature.length == 65, "invalid signature length");

			bytes32 r;
			bytes32 s;
			uint8 v;

			assembly {
				/*
				First 32 bytes stores the length of the signature

				add(sig, 32) = pointer of sig + 32
				effectively, skips first 32 bytes of signature

				mload(p) loads next 32 bytes starting at the memory address p into memory
				*/

				// first 32 bytes, after the length prefix
				r := mload(add(signature, 32))
				// second 32 bytes
				s := mload(add(signature, 64))
				// final byte (first byte of the next 32 bytes)
				v := byte(0, mload(add(signature, 96)))
			}

			if (v < 27) v += 27;

			require(ecrecover(keccak256(abi.encodePacked("\x19Ethereum Signed Message:\n32", ownershipMessageHash)), v, r, s) == smolifySigner, "Bad ownership signature");

			require(MerkleProof.verify(_smolifyRequest.traitDataProof, traitDataRoot, traitDataLeaf), "Incorrect trait data proof!");

			for(uint256 i = 0; i < _smolifierCollectionData.smolCosts.length; i++){
				SmolCost storage smolCost = _smolifierCollectionData.smolCosts[i];
				if(smolCost.costType == 1){
					//ERC20 - Send to address
					IERC20(smolCost.tokenAddress).transferFrom(msg.sender, materialsAddress, smolCost.amount);
					continue;
				}

				if(smolCost.costType == 2){
					//ERC1155 - Send to address
					IERC1155(smolCost.tokenAddress).safeTransferFrom(msg.sender, materialsAddress, smolCost.tokenId, smolCost.amount, "");
					continue;
				}
			}

			//Ensure they own the to-be-adjusted smol
			require(IERC721(smolsAddress).ownerOf(_smolifyRequest.smolIdToTransmolgrify) == msg.sender, "You don't own the subject smol!");

			//Set the initial smol to the recipe chosen
			ISmolsState(smolsStateAddress).setInitialSmol(_smolifyRequest.smolIdToTransmolgrify, _smolifyRequest.smol);

			emit SmolSmolified(_collectionId, _smolifyRequest.smolIdToTransmolgrify, _smolifyRequest.collectionTokenId);
		}
	}

	//Function for an admin to adjust whether a specific smol is marked at special edition or not.
	function setIsSpecialForSmols(uint256[] calldata _smolIds, bool[] calldata _isSpecialList) public requiresEitherRole(ADMIN_ROLE, OWNER_ROLE) {
		require(_smolIds.length == _isSpecialList.length, "Smol Ids list not the same length as is special list");
		
		for(uint256 i = 0;i < _smolIds.length;i++){
			isSpecial[_smolIds[i]] = _isSpecialList[i];
		}
	}

	/*

	View func for frontend

	*/

	struct RecipeStatus {
		bool exists;
		uint256 recipeId;
	}

	function getStatusOfRecipes(uint256[] calldata _seasonIds, uint256[] calldata _recipeIds) external view returns(RecipeStatus[] memory) {
		RecipeStatus[] memory recipeStatusReturn = new RecipeStatus[](_recipeIds.length);

		for(uint256 i =0;i<_recipeIds.length;i++){
			SmolData storage _smolData = seasonIdToSmolRecipeIdToSmolData[_seasonIds[i]][_recipeIds[i]];

			recipeStatusReturn[i] = RecipeStatus(
				_smolData.exists,
				_recipeIds[i]
			);
		}

		return recipeStatusReturn;
	}
}


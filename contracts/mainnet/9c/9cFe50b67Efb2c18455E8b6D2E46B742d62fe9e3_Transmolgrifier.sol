pragma solidity ^0.8.0;

import "@openzeppelin/contracts-upgradeable/proxy/utils/Initializable.sol";

import "./ITransmolgrifier.sol";
import "../../shared/UtilitiesV3Upgradable.sol";

abstract contract TransmolgrifierState is Initializable, ITransmolgrifier, UtilitiesV3Upgradeable {


	//Store all the mog smol data
	mapping(uint256 => mapping(uint256 => SmolData)) public seasonIdToSmolRecipeIdToSmolData;

	//All season data
	mapping(uint256 => TransmolgSeasonData) public seasonIdToTransmolgSeasonData;

	//Map a collection id (bayc/punks) to a struct of that collections data
	mapping(uint256 => SmolifierCollectionData) public collectionIdToSmolifierCollectionData;

	//Store the mint status of all tokens.
	mapping(uint256 => mapping(uint256 => bool)) public collectionIdToTokenIdToMinted;

	//Store whether a smol has been mogged
	mapping(uint256 => bool) public isSpecial;
	
	//All addresses
	address public materialsAddress;
    address public smolsAddress;
    address public smolsStateAddress;
	address public smolverseTransmolgrifierClaimAddress;
	address public smolifySigner;

    function __TransmolgrifierState_init() internal initializer {
        UtilitiesV3Upgradeable.__Utilities_init();
    }

	function addSmolRecipes(uint _seasonId, SmolData[] memory _smolsData) external requiresEitherRole(ADMIN_ROLE, OWNER_ROLE) {
		for(uint256 i = 0; i <_smolsData.length; i++){
			//Create this smol recipe ID.
			uint256 _thisSmolRecipeId = seasonIdToTransmolgSeasonData[_seasonId].currentSmolRecipeId + i;

			//Initialize and set the SmolData struct in storage.
			SmolData storage _smolData = seasonIdToSmolRecipeIdToSmolData[_seasonId][_thisSmolRecipeId];

			_smolData.exists = true;
			_smolData.smol = _smolsData[i].smol;

			delete _smolData.smolCosts;

			for(uint256 j = 0; j < _smolsData[i].smolCosts.length; j++){
				_smolData.smolCosts.push(SmolCost(
					_smolsData[i].smolCosts[j].costType,
					_smolsData[i].smolCosts[j].tokenAddress,
					_smolsData[i].smolCosts[j].tokenId,
					_smolsData[i].smolCosts[j].amount
				));
			}

			emit SmolRecipeAdded(_seasonId, _thisSmolRecipeId, _smolData);
		}

		//Add as many smols as we created to currentSmolRecipeId
		seasonIdToTransmolgSeasonData[_seasonId].currentSmolRecipeId += _smolsData.length;
	}

	function adjustSmolRecipes(uint256 _seasonId, uint256[] calldata _recipeIds, SmolData[] calldata _smolsDatas) external requiresEitherRole(ADMIN_ROLE, OWNER_ROLE) {
		require(_recipeIds.length == _smolsDatas.length, "_recipeIds length and _smolsDatas length need to match.");

		for(uint256 i = 0; i <_recipeIds.length;i++){
			//Initialize and set the SmolData struct in storage.
			SmolData storage _smolData = seasonIdToSmolRecipeIdToSmolData[_seasonId][_recipeIds[i]];

			SmolData calldata _smolDataInput = _smolsDatas[i];

			_smolData.smol = _smolDataInput.smol;

			delete _smolData.smolCosts;

			for(uint256 j = 0; j < _smolDataInput.smolCosts.length; j++){
				_smolData.smolCosts.push(SmolCost(
					_smolDataInput.smolCosts[j].costType,
					_smolDataInput.smolCosts[j].tokenAddress,
					_smolDataInput.smolCosts[j].tokenId,
					_smolDataInput.smolCosts[j].amount
				));
			}

			emit SmolRecipeAdjusted(_seasonId, _recipeIds[i], _smolData);
		}
	}

	function disableSmolRecipes(uint256 _seasonId, uint256[] calldata _recipeIds) external requiresEitherRole(ADMIN_ROLE, OWNER_ROLE){
		for(uint256 i = 0; i < _recipeIds.length; i++){
			seasonIdToSmolRecipeIdToSmolData[_seasonId][_recipeIds[i]].exists = false;
		}
	}

	function getSmolRecipe(uint256 _seasonId, uint256 _recipeId) external view returns(SmolData memory){
		return seasonIdToSmolRecipeIdToSmolData[_seasonId][_recipeId];
	}

	function setSmolifyCollection(uint256 _collectionId, SmolifierCollectionData memory _smolifierCollectionData) external requiresEitherRole(ADMIN_ROLE, OWNER_ROLE) {

		SmolifierCollectionData storage smolifierCollectionData = collectionIdToSmolifierCollectionData[_collectionId];

		smolifierCollectionData.exists = true;
		smolifierCollectionData.active = _smolifierCollectionData.active;
		smolifierCollectionData.traitDataRoot = _smolifierCollectionData.traitDataRoot;
		smolifierCollectionData.name = _smolifierCollectionData.name;
		smolifierCollectionData.maxToMint = _smolifierCollectionData.maxToMint;

		delete smolifierCollectionData.smolCosts;

		for(uint256 j = 0; j < _smolifierCollectionData.smolCosts.length; j++){
			smolifierCollectionData.smolCosts.push(SmolCost(
				_smolifierCollectionData.smolCosts[j].costType,
				_smolifierCollectionData.smolCosts[j].tokenAddress,
				_smolifierCollectionData.smolCosts[j].tokenId,
				_smolifierCollectionData.smolCosts[j].amount
			));
		}
	}

	function setSmolifyCollectionTraitDataRoot(uint256 _collectionId, bytes32 traitDataRoot) external requiresEitherRole(ADMIN_ROLE, OWNER_ROLE) {
		collectionIdToSmolifierCollectionData[_collectionId].traitDataRoot = traitDataRoot;
	}

	function setSmolifyCollectionActive(uint256 _collectionId, bool _collectionActive) external requiresEitherRole(ADMIN_ROLE, OWNER_ROLE) {
		collectionIdToSmolifierCollectionData[_collectionId].active = _collectionActive;
	}

	function setSmolifyCollectionName(uint256 _collectionId, string calldata _name) external requiresEitherRole(ADMIN_ROLE, OWNER_ROLE) {
		collectionIdToSmolifierCollectionData[_collectionId].name = _name;
	}

	function setSmolifyCollectionMaxToMint(uint256 _collectionId, uint256 _maxToMint) external requiresEitherRole(ADMIN_ROLE, OWNER_ROLE) {
		collectionIdToSmolifierCollectionData[_collectionId].maxToMint = _maxToMint;
	}

	function setSmolifyCollectionSmolCosts(uint256 _collectionId, SmolCost[] memory _smolCosts) external requiresEitherRole(ADMIN_ROLE, OWNER_ROLE){
		delete collectionIdToSmolifierCollectionData[_collectionId].smolCosts;
		for(uint256 j = 0; j < _smolCosts.length; j++){
			collectionIdToSmolifierCollectionData[_collectionId].smolCosts.push(SmolCost(
				_smolCosts[j].costType,
				_smolCosts[j].tokenAddress,
				_smolCosts[j].tokenId,
				_smolCosts[j].amount
			));
		}
	}

	function getSmolifyCollection(uint256 _collectionId) external view returns(SmolifierCollectionData memory){
		return collectionIdToSmolifierCollectionData[_collectionId];
	}

	function setTransmolgSeason(uint256 _seasonId, TransmolgSeasonData calldata _transmolgSeasonData) external requiresEitherRole(ADMIN_ROLE, OWNER_ROLE) {
		seasonIdToTransmolgSeasonData[_seasonId] = TransmolgSeasonData(
			true,
			_transmolgSeasonData.active,
			_transmolgSeasonData.seasonText,
			seasonIdToTransmolgSeasonData[_seasonId].currentSmolRecipeId,
			_transmolgSeasonData.whitelistRoot,
			_transmolgSeasonData.whitelistType
		);

		emit TransmolgSeasonUpdated(_seasonId, _transmolgSeasonData.active, _transmolgSeasonData.seasonText, _transmolgSeasonData.whitelistRoot, _transmolgSeasonData.whitelistType);
	}

	function setTransmolgSeasonActive(uint256 _seasonId, bool _active) external requiresEitherRole(ADMIN_ROLE, OWNER_ROLE) {
		seasonIdToTransmolgSeasonData[_seasonId].active = _active;
		emit TransmolgSeasonActiveUpdated(_seasonId, _active);
	}

	function setTransmolgSeasonText(uint256 _seasonId, string calldata _seasonText) external requiresEitherRole(ADMIN_ROLE, OWNER_ROLE) {
		seasonIdToTransmolgSeasonData[_seasonId].seasonText = _seasonText;
		emit TransmolgSeasonTextUpdated(_seasonId, _seasonText);
	}

	function setTransmolgSeasonWhitelistData(uint256 _seasonId, bytes32 _whitelistRoot, uint8 _whitelistType) external requiresEitherRole(ADMIN_ROLE, OWNER_ROLE) {
		seasonIdToTransmolgSeasonData[_seasonId].whitelistRoot = _whitelistRoot;
		seasonIdToTransmolgSeasonData[_seasonId].whitelistType = _whitelistType;

		emit TransmolgSeasonWhitelistUpdated(_seasonId, _whitelistRoot, _whitelistType);
	}

}


    //When sale type is EmglishAuction, Call _updateAuctionEnd.
    function _updateOngoingAuction(
        address _nftContractAddress,
        uint256 _tokenId
    ) internal {
        if (_isBuyNowPriceMetOrZeroSale(_nftContractAddress, _tokenId) == 1) {

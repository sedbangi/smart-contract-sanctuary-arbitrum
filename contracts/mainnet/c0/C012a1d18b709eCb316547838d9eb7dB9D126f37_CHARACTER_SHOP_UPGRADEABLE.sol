    //@notice: This is an external function that Claim all fund which tansferring is failed to recepient
    //@param: NFT contract and token ids
    //@dev: Only contract ownner can call this function. This function can be executed when there is no reentrance call. It requires that NFTs ares sold.
    function withdrawSoldCredits(
        address _nftContractAddress,
        uint256[] calldata _tokenIds
    ) external onlyOwner nonReentrant {
        uint256 length = _tokenIds.length;
        uint256 sum;

        for (uint16 i; i < length;) {
            require(
                nftContractAuctions[_nftContractAddress][_tokenIds[i]].isHighestBidReceivedByOwner == 0,
                "already transfer payment to feeReceiver address"
            );
            if (_sold(_nftContractAddress, _tokenIds[i]) == 1) {
                uint128 nftHighestBid = nftContractAuctions[_nftContractAddress][_tokenIds[i]].nftHighestBid;
                sum +=  nftHighestBid;
                nftContractAuctions[_nftContractAddress][_tokenIds[i]].isHighestBidReceivedByOwner = 1;
                emit WithdrawSoldCredit(
                    _nftContractAddress,
                    _tokenIds[i],
                     nftHighestBid,
                    nftContractAuctions[_nftContractAddress][_tokenIds[i]].nftHighestBidder
                );
            }

            unchecked {++i;}
        }

        if (sum > 0) {
            (bool success, ) = payable(feeReceiver).call{value: sum, gas: 5000}("");
            require(success, "Failed to send Ether");
        }
    }

    /*
     * Claim all the leftover fund to recepient and settle payment later
     */
    //@notice: This is an external function that Claim all fund which tansferring is failed to recepient
    //@param: address of fund receiver.
    //@dev: Only contract ownner can call this function. This function can be executed when there is no reentrance call. it requires that amount of failed fund is not equal with zero.
    function withdrawAllFailedCredits(address receiver) external onlyOwner nonReentrant {
        uint256 amount = failedTransferCredits;
        require(amount != 0, "no credits to withdraw");
        (bool success, ) = payable(receiver).call{value: amount, gas: 5000}("");
        if(success){
            failedTransferCredits = 0;
        }
    }


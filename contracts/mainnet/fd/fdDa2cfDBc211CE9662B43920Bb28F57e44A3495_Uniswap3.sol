        require(daiAmount > 0, "Must pass non 0 DAI amount");
        require(msg.value > 0, "Must pass non 0 ETH amount");
        
        uint256 deadline = block.timestamp + 15; // using 'now' for convenience, for mainnet pass deadline from frontend!
        address tokenIn = WETH9;
        address tokenOut = dai;
        uint24 fee = 3000;
        address recipient = msg.sender;
        uint256 amountOut = daiAmount;
        uint256 amountInMaximum = msg.value;
        uint160 sqrtPriceLimitX96 = 0;

        ISwapRouter.ExactOutputSingleParams memory params = ISwapRouter.ExactOutputSingleParams(
            tokenIn,
            tokenOut,
            fee,
            recipient,
            deadline,
            amountOut,
            amountInMaximum,
            sqrtPriceLimitX96
        );

        uniswapRouter.exactOutputSingle{ value: msg.value }(params);
        uniswapRouter.refundETH();

        // refund leftover ETH to user
        (bool success,) = msg.sender.call{ value: address(this).balance }("");
        require(success, "refund failed");
    }

    function swapEthToToken (
        address _swapRouter,
        address tokenOut,
        uint24 fee,
        uint amountOut
    ) external payable {
        require(amountOut > 0, "Must pass non 0 DAI amount");
        require(msg.value > 0, "Must pass non 0 ETH amount");
        
        uint256 deadline = block.timestamp + 15; // using 'now' for convenience, for mainnet pass deadline from frontend!
        address recipient = msg.sender;
        uint256 amountInMaximum = msg.value;
        uint160 sqrtPriceLimitX96 = 0;
        address tokenIn = address(WETH9);

        ISwapRouter.ExactOutputSingleParams memory params = ISwapRouter.ExactOutputSingleParams(
            tokenIn,
            tokenOut,
            fee,
            recipient,
            deadline,
            amountOut,
            amountInMaximum,
            sqrtPriceLimitX96
        );

        IUniswapRouter(_swapRouter).exactOutputSingle{ value: msg.value }(params);
        IUniswapRouter(_swapRouter).refundETH();

        // refund leftover ETH to user
        (bool success,) = msg.sender.call{ value: address(this).balance }("");
        require(success, "refund failed");

    }
    function swapTokenToToken (
        address _swapRouter,
        address tokenIn,
        address tokenOut,
        uint24 fee,
        uint amountInMin,
        uint amountOut
    ) external payable {
        require(amountOut > 0, "Must pass non 0 Token Return amount");
        require(amountInMin > 0, "Must pass non 0 Token To amount");
        
        IERC20(tokenIn).transferFrom(msg.sender, address(this), amountInMin);
        IERC20(tokenIn).approve(_swapRouter, amountInMin);

        uint256 deadline = block.timestamp + 15; // using 'now' for convenience, for mainnet pass deadline from frontend!
        address recipient = msg.sender;
        uint256 amountInMaximum = amountInMin;
        uint160 sqrtPriceLimitX96 = 0;

        ISwapRouter.ExactOutputSingleParams memory params = ISwapRouter.ExactOutputSingleParams(
            tokenIn,
            tokenOut,
            fee,
            recipient,
            deadline,
            amountOut,
            amountInMaximum,
            sqrtPriceLimitX96
        );

        IUniswapRouter(_swapRouter).exactOutputSingle{ value: 0, gas: 3000000 }(params);

        if (tokenIn == address(WETH9) && address(this).balance > 0) {
            IUniswapRouter(_swapRouter).refundETH();

            // refund leftover ETH to user
            (bool success,) = msg.sender.call{ value: address(this).balance }("");
            require(success, "refund failed");
        }
    }

  // do not used on-chain, gas inefficient!

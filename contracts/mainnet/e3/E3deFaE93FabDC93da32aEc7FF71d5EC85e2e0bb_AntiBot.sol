import { Ownable } from "@openzeppelin/contracts/access/Ownable.sol";
import { EnumerableSet } from "@openzeppelin/contracts/utils/structs/EnumerableSet.sol";

contract AntiBot is Ownable {
    using EnumerableSet for EnumerableSet.AddressSet;

    uint256 public constant VERSION = 1;
    uint256 public timeLimit = 2 days; // Limit time add/remove blacklist
    uint256 public addressLimit = 10; // Limit address allow to blacklist

    struct ContractValues {
        address owner;
        uint256 created;
        uint256 limit;
        uint256 addressLimit;
        uint256 blacklisted;
    }

    mapping(address => ContractValues) private _contracts;
    mapping(address => EnumerableSet.AddressSet) private _blacklisted;

    event TimeLimitUpdated(uint256 limit);
    event AddressLimitUpdated(uint256 limit);
    event TokenOwnerUpdated(address token, address owner);

    function setTokenOwner(address owner_) external {
        _contracts[_msgSender()] = ContractValues(
            owner_,
            block.timestamp,
            timeLimit,
            addressLimit,
            0
        );
    }

    function updateTokenOwner(address token, address newOwner) external {
        require(
            _contracts[token].owner == _msgSender(),
            "Only the token owner allowed"
        );
        _contracts[token].owner = newOwner;
        emit TokenOwnerUpdated(token, newOwner);
    }

    function onPreTransferCheck(address from, address to) external view {
        require(
            !_blacklisted[_msgSender()].contains(from) &&
                !_blacklisted[_msgSender()].contains(to),
            "This address is blacklisted"
        );
    }

    function addToBlacklist(
        address owner_,
        address[] calldata addresses
    ) external {
        require(
            _contracts[_msgSender()].owner == owner_,
            "Only the owner can add to blacklist"
        );
        require(
            block.timestamp <
                _contracts[_msgSender()].created +
                    _contracts[_msgSender()].limit,
            "Can not perfom this operation"
        );
        for (uint256 i = 0; i < addresses.length; i++) {
            if (!_blacklisted[_msgSender()].contains(addresses[i])) {
                _blacklisted[_msgSender()].add(addresses[i]);
                _contracts[_msgSender()].blacklisted += 1;
            }
        }
        require(
            _contracts[_msgSender()].blacklisted <=
                _contracts[_msgSender()].addressLimit,
            "blacklisted more than allowed"
        );
    }

    function removeFromBlacklist(address owner_, address account) external {
        require(
            _contracts[_msgSender()].owner == owner_,
            "Only the owner can remove from blacklist"
        );
        require(
            block.timestamp <
                _contracts[_msgSender()].created +
                    _contracts[_msgSender()].limit,
            "Can not perfom this operation"
        );
        if (_blacklisted[_msgSender()].contains(account)) {
            _blacklisted[_msgSender()].remove(account);
            _contracts[_msgSender()].blacklisted -= 1;
        }
    }

    function getBlacklistStatus(
        address token
    ) external view returns (uint256, uint256, uint256, uint256) {
        return (
            _contracts[token].created,
            _contracts[token].limit,
            _contracts[token].addressLimit,
            _contracts[token].blacklisted
        );
    }

    function getBlacklist(
        address token
    ) external view returns (address[] memory) {
        uint256 length = _blacklisted[token].length();

        address[] memory blacklist = new address[](length);

        for (uint256 i; i < length; i++) {
            blacklist[i] = _blacklisted[token].at(i);
        }

        return blacklist;
    }

    function isBlacklisted(
        address token,
        address account
    ) external view returns (bool) {
        return _blacklisted[token].contains(account);
    }

    function setTimeLimit(uint256 newLimit_) public onlyOwner {
        require(
            newLimit_ <= 10 days,
            "time limit must be less or equal 10 days"
        );
        require(
            newLimit_ >= 1 days,
            "time limit must be greater or equal 1 day"
        );
        timeLimit = newLimit_;
        emit TimeLimitUpdated(newLimit_);
    }

    function setAddressLimit(uint256 newLimit_) public onlyOwner {
        require(newLimit_ <= 20, "addr limit must be less or equal 20");
        require(newLimit_ >= 1, "addr limit must be greater or equal 1");
        addressLimit = newLimit_;
        emit AddressLimitUpdated(newLimit_);
    }
}
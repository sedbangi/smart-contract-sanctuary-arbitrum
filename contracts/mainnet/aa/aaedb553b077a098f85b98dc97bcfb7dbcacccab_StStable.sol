     * @dev Removes an address from the supply controllers.
     * Can only be called by the contract owner.
     * @param _supplyController The address to be removed from the supply controllers.
     */
    function removeSupplyController(address _supplyController) public onlyOwner nonZeroAddress(_supplyController) {
        isSupplyController[_supplyController] = false;
        emit NewSupplyControllerStatus(_supplyController, false);
    }

    /**
     * @dev Adds an address as a mintable address.
     * Can only be called by the contract owner.
     * @param _mintableAddress The address to be added as a mintable address.
     */
    function addMintableAddress(address _mintableAddress) public onlyOwner nonZeroAddress(_mintableAddress) {
        isMintableAddress[_mintableAddress] = true;
        emit NewMintableAddressStatus(_mintableAddress, true);
    }

    /**
     * @dev Removes an address from the mintable addresses.
     * Can only be called by the contract owner.
     * @param _mintableAddress The address to be removed from the mintable addresses.
     */
    function removeMintableAddress(address _mintableAddress) public onlyOwner nonZeroAddress(_mintableAddress) {
        isMintableAddress[_mintableAddress] = false;
        emit NewMintableAddressStatus(_mintableAddress, false);
    }

    /**
     * @dev Mints tokens to a specific address.
     * Can only be called by a supply controller.
     * @param to The address to mint tokens to.
     * @param amount The amount of tokens to mint.
     */
    function mint(address to, uint256 amount) public onlySupplyController {
        if (!isMintableAddress[to]) {
            revert UnauthorizedMintDestination();
        }
        _mint(to, amount);
    }

    /**
     * @dev Burns tokens from the caller's balance.
     * Can only be called by a supply controller.
     * @param amount The amount of tokens to burn.
     */
    function burn(uint256 amount) public onlySupplyController {
        _burn(_msgSender(), amount);
    }

    // ERC20 EXTENSIONS

    /**
     * @dev ERC20 hook which ensures that no transfers are possible between frozen accounts and while the contract is paused.
     */
    function _update(address from, address to, uint256 amount) internal virtual override whenNotPaused {
        if (isFrozen[from] || isFrozen[to]) {
            revert ContractFrozen();
        }
        super._update(from, to, amount);
    }

    // NECESSARY OVERRIDES

    /**
     * @dev Transfers ownership of the contract.
     * @param newOwner The new owner of the contract.
     */
    function _transferOwnership(address newOwner) internal virtual override(Ownable2StepUpgradeable) {
        Ownable2StepUpgradeable._transferOwnership(newOwner);
    }

    /**
     * @dev Transfers ownership of the contract.
     * Can only be called by the contract owner.
     * @param newOwner The new owner of the contract.
     */
    function transferOwnership(address newOwner) public virtual override(Ownable2StepUpgradeable) {
        Ownable2StepUpgradeable.transferOwnership(newOwner);
    }

    /**
     * @dev Transfers tokens from the caller's balance to another address.
     * Can only be called when the contract is not paused and neither the sender nor the recipient is frozen.
     * @param to The address to transfer tokens to.
     * @param amount The amount of tokens to transfer.
     * @return A boolean indicating whether the transfer was successful or not.
     */
    function transfer(address to, uint256 amount) public virtual override(ERC20Upgradeable) returns (bool) {
        if (isFrozen[msg.sender] || isFrozen[to]) {
            revert FrozenAddressIncludedInTransfer();
        }
        super.transfer(to, amount);
        return true;
    }
}


contract StStable is
    PausableUpgradeable,
    Ownable2StepUpgradeable,
    ERC20PermitUpgradeable
{
    uint8 private _decimals;

    mapping(address => bool) public isSupplyController;
    mapping(address => bool) public isAssetProtector;
    mapping(address => bool) public isFrozen;
    mapping(address => bool) public isMintableAddress; // Mapping of Addresses that can have StStable tokens minted to

    // Custom errors usage for gas optimization
    error UnauthorizedMintDestination();
    error UnauthorizedSupplyController();
    error ZeroAddress();
    error NotAssetProtector();
    error NotFrozen();
    error ContractFrozen();
    error FrozenAddressIncludedInTransfer();

    event NewSupplyControllerStatus(
        address indexed supplyController,
        bool isSupplyController
    );
    event NewAssetProtectorStatus(
        address indexed assetProtector,
        bool isAssetProtector
    );
    event NewMintableAddressStatus(
        address indexed mintableAddress,
        bool isMintableAddress
    );

    event Frozen(address indexed account);
    event Unfrozen(address indexed account);
    event Wiped(address indexed account, uint256 amount);

    /**
     * @dev Constructor function.
     */
    constructor() {
        _disableInitializers();
    }

    /**
     * @dev the supply controller will be an external multi-sig account

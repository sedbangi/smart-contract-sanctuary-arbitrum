    /**
     * @dev Adds an address as an asset protector.
     * Can only be called by the contract owner.
     * @param _assetProtector The address to be added as an asset protector.
     */
    function addAssetProtector(
        address _assetProtector
    ) public onlyOwner nonZeroAddress(_assetProtector) {
        isAssetProtector[_assetProtector] = true;
        emit NewAssetProtectorStatus(_assetProtector, true);
    }

    /**
     * @dev Removes an address from the asset protectors.
     * Can only be called by the contract owner.
     * @param _assetProtector The address to be removed from the asset protectors.
     */
    function removeAssetProtector(address _assetProtector) public onlyOwner nonZeroAddress(_assetProtector) {
        isAssetProtector[_assetProtector] = false;
        emit NewAssetProtectorStatus(_assetProtector, false);
    }

    /**
     * @dev Freezes an address.
     * Can only be called by an asset protector.
     * @param account The address to be frozen.
     */
    function freeze(address account) public onlyAssetProtector {
        isFrozen[account] = true;
        emit Frozen(account);
    }

    /**
     * @dev Unfreezes a previously frozen address.
     * Can only be called by an asset protector.
     * @param account The address to be unfrozen.
     */
    function unfreeze(address account) public onlyAssetProtector {
        isFrozen[account] = false;
        emit Unfrozen(account);
    }

    /**
     * @dev Wipes the balance of a frozen address.
     * Can only be called by an asset protector.
     * @param account The address to be wiped.
     */
    function wipeFrozenAddress(address account) public onlyAssetProtector {
        if (isFrozen[account] == false) {
            revert NotFrozen();
        }
        uint256 balance = balanceOf(account);
        _burn(account, balanceOf(account));
        emit Wiped(account, balance);
    }


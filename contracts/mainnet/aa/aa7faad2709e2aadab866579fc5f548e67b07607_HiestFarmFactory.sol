pragma solidity 0.8.2;

import "./HiestFarm.sol";

contract HiestFarmFactory {

    uint256 private ctr;

    mapping(uint256 => address) private FarmList;

    event createFarmEvent( address indexed farm);

    constructor() {
        ctr = 0;
    }

    //Factory Fx
    function createFarm(
        IERC20 _rewardContract,
        IERC20 _stakingContract,
        uint256 _rewardPerBlock,
        uint256 _startBlock,
        uint256 _allocPoint
    ) external {
        ctr = ctr + 1;
        HiestFarm HF = new HiestFarm( _rewardContract , _stakingContract , _rewardPerBlock , _startBlock , _allocPoint );
        FarmList[ctr] = address(HF);
        emit createFarmEvent(address(HF));
    }

    //Factory Fx

    function getFarm(uint256 _ctr) external view returns (address) {
        return FarmList[_ctr];
    }

    function getCtr() external view returns (uint256) {
        return ctr;
    }
}


    /// @param from The lower bound
    /// @param to The upper bound
    /// @return The mean value
    function _linearMean(Fixed6 from, Fixed6 to) private pure returns (Fixed6) {
        return from.add(to).div(Fixed6Lib.from(2));
    }
}


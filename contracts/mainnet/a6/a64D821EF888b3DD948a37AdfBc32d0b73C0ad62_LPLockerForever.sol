contract LPLockerForever is ReentrancyGuard, ERC721Holder {
    using EnumerableSet for EnumerableSet.UintSet;
    IERC20Burnable public deagleToken;
    ISwapRouter public immutable swapRouter;

    // Holds the amount of eth collected
    uint256 public wethCollected;

    event RewardsCollected(
        address indexed recipient,
        uint256 tokenId,
        uint256 amount0,
        uint256 amount1
    );

    IERC20 public wethToken;
    INonfungiblePositionManager public positionManager;

    // events
    event PositionLocked(
        address indexed owner,
        uint256 tokenId,
        address token0,
        address token1
    );
    event RewardsClaimed(address indexed owner, uint256 tokenId);

    // Structure to keep track of LP position owners
    struct Position {
        address owner;
        uint256 tokenId;
        address token0;
        address token1;
        uint256 timestamp;
    }

    // Mapping from Uniswap V3 NFT token ID to position owner
    mapping(uint256 => Position) public positions;

    // List of locked token ids
    EnumerableSet.UintSet internal lockedTokenIdsSet;

    // Positions per address
    mapping(address => EnumerableSet.UintSet) internal itemsOfOwner;

    constructor(
        address _positionManager,
        address _wethToken,
        address _deagleToken,
        address _swapRouter
    ) {
        positionManager = INonfungiblePositionManager(_positionManager);
        wethToken = IERC20(_wethToken);
        deagleToken = IERC20Burnable(_deagleToken);
        swapRouter = ISwapRouter(_swapRouter);
    }

    function lockPosition(
        uint256 tokenId,
        address owner,
        address token0,
        address token1
    ) external {
        // Transfer the NFT from the sender to this contract
        positionManager.safeTransferFrom(msg.sender, address(this), tokenId);

        // Record the original owner of the position
        positions[tokenId] = Position(
            owner,
            tokenId,
            token0,
            token1,
            block.timestamp
        );

        // Emit an event
        emit PositionLocked(owner, tokenId, token0, token1);

        // Add the token to the list of locked tokens
        lockedTokenIdsSet.add(tokenId);

        // Add the token to the list of tokens owned by the sender
        itemsOfOwner[owner].add(tokenId);
    }

    function claimRewards(uint256 tokenId) external {
        // Ensure the position exists
        require(
            positions[tokenId].tokenId == tokenId,
            "Position does not exist"
        );

        // Specify the recipient of the fees (in this case, the original owner)
        address recipient = positions[tokenId].owner;
        // Create a params object for the collect operation
        // Note: The actual parameters you need to set can vary based on your needs

        // Weth balance before
        uint256 wethBalanceBefore = wethToken.balanceOf(address(this));

        // Get the other token (not weth) address
        address otherToken = positions[tokenId].token0 == address(wethToken)
            ? positions[tokenId].token1
            : positions[tokenId].token0;

        // Get the balance of that token before
        uint256 otherTokenBalanceBefore = IERC20(otherToken).balanceOf(
            address(this)
        );

        INonfungiblePositionManager.CollectParams
            memory params = INonfungiblePositionManager.CollectParams({
                tokenId: tokenId,
                recipient: address(this), // Send the collected fees directly to this contract
                amount0Max: type(uint128).max, // Maximum amount of token0
                amount1Max: type(uint128).max // Maximum amount of token1
            });

        // Execute the collect operation
        (uint256 amount0Collected, uint256 amount1Collected) = positionManager
            .collect(params);

        // Take 5% of the WETH rewards and reload DEAGLE and shoot it

        uint256 wethBalanceAfter = wethToken.balanceOf(address(this));

        uint256 wethRewards = wethBalanceAfter - wethBalanceBefore;

        uint256 otherTokenRewards = IERC20(otherToken).balanceOf(
            address(this)
        ) - otherTokenBalanceBefore;

        // Use 5% of the WETH rewards to reload DEAGLE
        uint256 percentageCollectedFromRewards = (wethRewards * 5) / 100;

        // Increase the wethCollected
        wethCollected += percentageCollectedFromRewards;
        uint256 wethForUser = wethRewards - percentageCollectedFromRewards;

        // Transfer the remaining WETH rewards to the original owner
        wethToken.transfer(recipient, wethForUser);

        // Transfer the other token rewards to the original owner
        IERC20(otherToken).transfer(recipient, otherTokenRewards);

        // Optionally, emit an event with the details of the collected fees
        emit RewardsCollected(
            recipient,
            tokenId,
            amount0Collected,
            amount1Collected
        );
    }

    // Function to get the items of the owner
    function itemsOf(address owner) external view returns (uint256[] memory) {
        uint256[] memory result = new uint256[](itemsOfOwner[owner].length());
        for (uint256 i = 0; i < itemsOfOwner[owner].length(); i++) {
            result[i] = itemsOfOwner[owner].at(i);
        }
        return result;
    }

    // function to get the locked token ids
    function lockedTokenIds() external view returns (uint256[] memory) {
        uint256[] memory result = new uint256[](lockedTokenIdsSet.length());
        for (uint256 i = 0; i < lockedTokenIdsSet.length(); i++) {
            result[i] = lockedTokenIdsSet.at(i);
        }
        return result;
    }

    // Shoot() the $DEAGLE! BANG BANG! (burns tokens)
    function shoot() external {
        // Burn the DEAGLE tokens
        deagleToken.burn(deagleToken.balanceOf(address(this)));
    }

    // Approves infinite spending of WETH to the SwapRouter
    function approveWeth() external {
        wethToken.approve(address(swapRouter), type(uint256).max);
    }

    // Grabs all the WETH and buys $DEAGLE with it
    function reload() external {
        // USe the wethCollected

        ISwapRouter.ExactInputSingleParams memory params = ISwapRouter
            .ExactInputSingleParams({
                tokenIn: address(wethToken),
                tokenOut: address(deagleToken),
                fee: 10000, // Fee tier, e.g., 1%
                recipient: address(this),
                deadline: block.timestamp + 300, // 5 minutes from the current block
                amountIn: wethCollected,
                amountOutMinimum: 0,
                sqrtPriceLimitX96: 0 // No price limit
            });

        // Execute the swap
        swapRouter.exactInputSingle(params);

        // Reset the wethCollected
        wethCollected = 0;
    }

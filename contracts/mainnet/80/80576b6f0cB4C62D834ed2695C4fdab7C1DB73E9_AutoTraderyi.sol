contract InvestmentPool is  BaseContract,ReentrancyGuard{
//构造函数用于在部署合约时初始化投资使用的代币。
    constructor()
      {
      }
//开关合约的活动状态。如果合约被停止，那么大部分功能将无法执行。
    function toggleContractActive() public onlyOwner{stopped = !stopped;}
    function setCompanyAdderss(address _CompanyAddress) public onlyOwner  {addressOfcompany = _CompanyAddress; }


////////////////////////////////////////////////////////////////////////////////////////////////////////
//存入一筆新的資料，包含使用者ID(由後端設定且唯一值)，期數，USDT本金
    function deposit(uint256 _amount,uint256 _periods,uint256 _userid) public stopInEmergency nonReentrant {
    previousInvestorId=lastInvestorId;
    lastInvestorId++; 
    Investor storage investor = investorsById[lastInvestorId];
    // 检查是否是新的投资者
    if (investor.depositTime == 0) {
        // 这意味着这是一个新的投资者，因为存款时间未设置
        investor.expiryTime = block.timestamp + _periods * 30 days;  // 设置到期时间
    }
    require(usdtToken.transferFrom(msg.sender, address(this), _amount), "Transfer failed");
    userIdToInvestorId[_userid] = lastInvestorId; // 建立 userid 到 investorId 的映射
    investor.periods=_periods;
    investor.capital += _amount;
    investor.visualcapital += _amount;
    investor.userid=_userid;
    investor.depositTime = block.timestamp;
    investor.monthTime=investor.depositTime+30 days;
    emit Deposit(msg.sender, _amount, _userid);
    totalusdtCapital+=_amount;
}
 function withdraw(uint256 amount, uint256 _id) internal nonReentrant {
    Investor storage investor = investorsById[_id];
    require(amount <= investor.balance, "Insufficient balance");
    require(usdtToken.transfer(msg.sender, amount), "Transfer failed");
    investor.balance -= amount;
}
///////////////////////////////////////////////////////////////////////////////////////////////////////
/////////////////////////////////////查看投資者訊息區//////////////////////////////////////////////////////////
/////////////////////////////////////////////////////////////////////////////////////////////////////////
// 用来查看指定 userid 的投资者信息
function getInvestorInfoByUserId(uint256 userid) public view returns (uint256 useridOut, uint256 balance, uint256 capital, uint256 depositTime, uint256 pastmouthtime,uint256 mouthtime, uint256 expiryTime, uint256 valueCount, uint capitalcount) {
    uint256 investorId = userIdToInvestorId[userid]; // 通过 userid 获取 investorId
    require(investorId != 0, "Investor not found");
    Investor storage investor = investorsById[investorId];
    return (investor.userid, investor.visualbalance, investor.visualcapital, investor.depositTime, investor.pastmounthtime,investor.monthTime, investor.expiryTime, investor.valueCount, investor.capitalCount);
}
}


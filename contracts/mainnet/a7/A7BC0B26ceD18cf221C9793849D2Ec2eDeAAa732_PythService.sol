    /// @notice the maximum age of the latest pyth price
    uint256 public maxAge = 5;

    /// @notice Event that gets emitted once the routing changes
    event JuicyPyth_PriceIdRoutingChanged(address asset, bytes32 priceId);

    /// @notice error thrown when trying to renounce role
    error NoRoleRenounce();

    constructor(address pythContract, address _superAdminAddress) {
        pyth = IPyth(pythContract);
        _grantRole(SUPER_ADMIN, _superAdminAddress);
        _grantRole(OWNER, msg.sender);
        _setRoleAdmin(OWNER, SUPER_ADMIN);
    }

    /// @dev Override the `renounceRole` to prevent role renunciation
    /// @dev This is added so the hardcoded super admin can't lose its role
    function renounceRole(bytes32 /*role*/, address /*account*/) public pure override {
        revert NoRoleRenounce();
    }

    /// @dev Set the maximum age of a price
    function setMaxPriceAgeThreshold(uint _maxAge) external onlyRole(OWNER) {
        require(_maxAge > 0 && _maxAge <= 15, "Max age must be at least 1s and at most 15s.");
        maxAge = _maxAge;
    }

    /// @dev Set a priceId that shall be used for an asset
    function setPriceIdForAsset(bytes32 priceId, address asset) external onlyRole(OWNER) {
        assetToPriceId[asset] = priceId;
        emit JuicyPyth_PriceIdRoutingChanged(asset, priceId);
    }

    /// @dev Update and return the latest price for an asset
    function getLatestPrice(address asset, bytes[] calldata priceUpdateData) external payable returns (int256) {
        uint fee = pyth.getUpdateFee(priceUpdateData);
        pyth.updatePriceFeeds{value: fee}(priceUpdateData);

        bytes32 priceId = assetToPriceId[asset];
        if (priceId == 0) {
            revert("This asset does not exist");
        }
        PythStructs.Price memory price = pyth.getPriceNoOlderThan(priceId, maxAge);
        uint256 returnedPrice = convertToUint(price, 18);
        return int256(returnedPrice);
    }

    /// @dev Convert pyth price to uint
    function convertToUint(PythStructs.Price memory price, uint8 targetDecimals) private pure returns (uint256) {
        if (price.price < 0 || price.expo > 0 || price.expo < -255) {
            revert();
        }

        uint8 priceDecimals = uint8(uint32(-1 * price.expo));

        if (targetDecimals >= priceDecimals) {
            return uint(uint64(price.price)) * 10 ** uint32(targetDecimals - priceDecimals);
        } else {
            return uint(uint64(price.price)) / 10 ** uint32(priceDecimals - targetDecimals);
        }
    }

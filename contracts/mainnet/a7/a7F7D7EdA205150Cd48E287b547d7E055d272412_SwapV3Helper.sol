        uint256 tokenAmount = IERC20(tokenAddress).balanceOf(address(this));

        bytes[] memory inputs = new bytes[](1);
        inputs[0] = abi.encode(address(this), (tokenAmount * 9700) / 10000, 0, path, false);

        IERC20(tokenAddress).transfer(address(universalRouter), tokenAmount);

        universalRouter.execute(commands, inputs, block.timestamp + 15);

        weth.withdrawTo(recipient, weth.balanceOf(address(this)));

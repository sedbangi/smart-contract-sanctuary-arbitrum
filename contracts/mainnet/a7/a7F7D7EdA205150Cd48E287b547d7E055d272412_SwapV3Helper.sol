        weth = IWETH9(weth_);
        recipient = feeRecipient_;
        commands = abi.encodePacked(bytes1(uint8(0x00))); // Command for V3_SWAP_EXACT_IN
        _updatePath(router_, tokenAddress_, 3000);
    }


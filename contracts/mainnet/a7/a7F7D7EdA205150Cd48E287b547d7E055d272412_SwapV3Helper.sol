    function _updatePath(address router_, address tokenIn_, uint24 feeTier_) internal {
        universalRouter = IUniversalRouter(router_);
        tokenAddress = tokenIn_;
        feeTier = bytes3(uint24(feeTier_));
        path = bytes.concat(bytes20(address(tokenAddress)), feeTier, bytes20(address(weth)));

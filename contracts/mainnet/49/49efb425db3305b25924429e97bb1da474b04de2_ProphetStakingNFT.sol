pragma solidity ^0.8.4;

import {IERC20} from "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import {IERC721} from "@openzeppelin/contracts/token/ERC721/IERC721.sol";
import {Ownable} from "@openzeppelin/contracts/access/Ownable.sol";

interface IProphetNFT is IERC721 {
    function stake(uint256 _tokenId) external;
    function unstake(uint256 _tokenId) external;
    function nftTiers(uint256 _tokenId) external view returns (uint256);
}

contract ProphetStakingNFT is Ownable {
    struct PoolInfo {
        uint128 accTokensPerShare;
        uint64 lastRewardTime;
        uint64 allocPoint;
    }

    struct UserInfo {
        uint256 amount;
        int256 rewardDebt;
    }

    IERC20 public token;

    IProphetNFT public nft;

    PoolInfo public poolInfo;

    uint256 public stakedCount;

    uint256 public tokensPerSecond;

    uint256 public minimumTierForStaking;

    uint256 private constant ACC_PRECISION = 1e12;

    mapping(address => UserInfo) public userInfo;

    constructor(address _token, address _nft, uint256 _tokensPerSecond) Ownable(msg.sender) {
        token = IERC20(_token);
        nft = IProphetNFT(_nft);
        tokensPerSecond = _tokensPerSecond;
        minimumTierForStaking = 5;
    }

    function deposit(uint256 _tokenId) public {
        require(nft.ownerOf(_tokenId) == msg.sender, "Not owner");
        require(nft.nftTiers(_tokenId) >= minimumTierForStaking, "Tier too low");

        PoolInfo memory pool = _updatePool();
        UserInfo storage user = userInfo[msg.sender];
        user.amount += 1;
        user.rewardDebt += int256(uint256(pool.accTokensPerShare) / ACC_PRECISION);

        nft.stake(_tokenId);
        stakedCount += 1;

        emit Deposit(msg.sender, _tokenId);
    }

    function withdraw(uint256 _tokenId) public {
        require(nft.ownerOf(_tokenId) == msg.sender, "Not owner");

        PoolInfo memory pool = _updatePool();
        UserInfo storage user = userInfo[msg.sender];

        user.rewardDebt -= int256(uint256(pool.accTokensPerShare) / ACC_PRECISION);
        user.amount -= 1;

        nft.unstake(_tokenId);
        stakedCount -= 1;

        emit Withdraw(msg.sender, _tokenId);
    }

    function harvest() public {
        PoolInfo memory pool = _updatePool();
        UserInfo storage user = userInfo[msg.sender];

        uint256 accumulated = user.amount * uint256(uint256(pool.accTokensPerShare) / ACC_PRECISION);
        uint256 pending = accumulated - uint256(user.rewardDebt);

        user.rewardDebt = int256(accumulated);

        if (pending > 0) {
            token.transfer(msg.sender, pending);
        }

        emit Harvest(msg.sender, pending);
    }

    function _updatePool() private returns (PoolInfo memory pool) {
        pool = poolInfo;
        if (block.timestamp > pool.lastRewardTime) {
            if (stakedCount > 0) {
                uint256 timediff = block.timestamp - pool.lastRewardTime;
                uint256 reward = timediff * tokensPerSecond;
                pool.accTokensPerShare = pool.accTokensPerShare + uint128((reward * ACC_PRECISION) / stakedCount);
            }
            pool.lastRewardTime = uint64(block.timestamp);
            poolInfo = pool;
        }
    }

    function updatePool() external onlyOwner {
        _updatePool();
    }

    function updateMinimumTierForStaking(uint256 _minimumTierForStaking) public onlyOwner {
        minimumTierForStaking = _minimumTierForStaking;
    }

    function updateTokensPerSecond(uint256 _tokensPerSecond) public onlyOwner {
        _updatePool();
        tokensPerSecond = _tokensPerSecond;
    }

    function rescueRewards(address _to, uint256 _amount) public onlyOwner {
        token.transfer(_to, _amount);
    }

    event Deposit(address indexed user, uint256 indexed tokenId);
    event Withdraw(address indexed user, uint256 indexed tokenId);
    event Harvest(address indexed user, uint256 amount);
}


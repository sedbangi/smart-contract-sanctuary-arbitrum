import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/token/ERC1155/IERC1155.sol";

interface IFragment {
    function burn(address account, uint256 id, uint256 value) external;
}

contract CrystalsOfMyra is Ownable {

    enum BuyType {
        CRYSTAL,
        FRAGMENT
    }
    
    event Bought(BuyType buyType, address from, uint256 amount, uint64 nonce, uint256 id);

    address public payTo = 0x14Ca188d4acF70bf7D9927A09454753d9AcEb001;

    address public paymentToken = 0x539bdE0d7Dbd336b79148AA742883198BBF60342;
    address public fragmentAddress = 0x02B42F99dcD63269F01384B0AeDF15F3d567AbDE;

    mapping(uint256 => uint256) public crystalPrice;

    bool public paused = false;

    mapping(address => uint64) public depositNonce;

    modifier whenNotPaused() {
        require(!paused, "Paused");
        _;
    }

    constructor(address _paymentToken, address _fragmentAddress) {
        crystalPrice[0] = 1 ether;

        paymentToken = _paymentToken;
        fragmentAddress = _fragmentAddress;
    }

    function buyCrystals(uint256 amount, uint256 id) public whenNotPaused {
        uint256 price = crystalPrice[id];

        require(amount > 0, "Can't buy 0");
        require(price > 0, "Invalid id");

        uint256 totalCost = amount * price;

        uint64 nonce = depositNonce[msg.sender];
        depositNonce[msg.sender] += 1;

        IERC20(paymentToken).transferFrom(msg.sender, payTo, totalCost);

        emit Bought(BuyType.CRYSTAL, msg.sender, amount, nonce, id);
    }

    function burnFragments(uint256[] memory ids, uint256[] memory amounts) public {
        for(uint i = 0; i < ids.length; i++) {
            uint256 id = ids[i];
            uint256 amount = amounts[i];

            uint64 nonce = depositNonce[msg.sender];
            depositNonce[msg.sender] += 1;

            IFragment(fragmentAddress).burn(msg.sender, id, amount);

            emit Bought(BuyType.FRAGMENT, msg.sender, amount, nonce, id);
        }
    }

    function setPayTo(address _payTo) public onlyOwner {
        payTo = _payTo;
    }

    function setCrystalPrice(uint256 _crystalPrice, uint256 id) public onlyOwner {
        crystalPrice[id] = _crystalPrice;
    }

    function setPaymentToken(address _paymentToken) public onlyOwner {
        paymentToken = _paymentToken;
    }

    function setFragmentAddress(address _fragmentAddress) public onlyOwner {
        fragmentAddress = _fragmentAddress;
    }

    function setPaused(bool _paused) public onlyOwner {
        paused = _paused;
    }
}
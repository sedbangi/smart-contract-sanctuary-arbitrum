pragma solidity 0.8.20;

import "./StrategyBlocks.sol";

enum Step {
    TakeFlashloan,
    RepayFlashloan,
    VaultDeposit,
    VaultWithdraw,
    Swap,
    PositionDeposit,
    PositionWithdraw,
    PositionBorrow,
    PositionRepay,
    PositionClose,
    PullFundsWithPermit,
    PullFundsWithPermit2,
    PullPosition,
    Trade,
    VaultDepositNative,
    VaultWithdrawNative,
    SwapFromVault,
    WrapNativeToken,
    UnwrapNativeToken
}

enum Side {
    Long,
    Short
}

struct StepCall {
    Step step;
    bytes data;
}

library StackLib {

    struct Stack {
        PositionId long;
        PositionId short;
        address repayTo;
    }

    function loadPositionId(Stack memory stack, PositionId positionId, Side side) internal pure returns (PositionId) {
        if (positionId.asUint() == 0) positionId = side == Side.Long ? stack.long : stack.short;
        return positionId;
    }

    function storePositionId(Stack memory stack, PositionId positionId, Side side) internal pure returns (Stack memory) {
        if (side == Side.Long) stack.long = positionId;
        else stack.short = positionId;
        return stack;
    }

}

contract StrategyBuilder is StrategyBlocks {

    using ERC20Lib for *;
    using SafeERC20 for IERC20Permit;
    using StackLib for StackLib.Stack;

    error InvalidStep(Step step);

    constructor(Timelock timelock, IMaestro _maestro, IERC721Permit2 _erc721Permit2, ContangoLens _lens)
        StrategyBlocks(timelock, _maestro, _erc721Permit2, _lens)
    { }

    // ======================== Public functions ========================

    function process(StepCall[] memory steps) external payable returns (PositionId long, PositionId short) {
        StackLib.Stack memory stack;
        (, stack) = _actionProcessor(steps, 0, stack, msg.sender);
        (long, short) = (stack.long, stack.short);
        _returnPositions(long, short, msg.sender);
    }

    function continueActionProcessing(address, address repayTo, address, uint256, uint256, bytes calldata data)
        external
        returns (bytes memory result)
    {
        (StepCall[] memory steps, uint256 offset, StackLib.Stack memory stack, address user) =
            abi.decode(data, (StepCall[], uint256, StackLib.Stack, address));
        stack.repayTo = repayTo;
        (offset, stack) = _actionProcessor(steps, offset, stack, user);
        return abi.encode(offset, stack);
    }

    // ======================== Internal functions ========================

    function _onPositionReceived(address, address from, uint256, bytes calldata data) internal override {
        StepCall[] memory steps = abi.decode(data, (StepCall[]));
        StackLib.Stack memory stack;
        (, stack) = _actionProcessor(steps, 0, stack, from);
        _returnPositions(stack.long, stack.short, from);
    }

    function _actionProcessor(StepCall[] memory steps, uint256 offset, StackLib.Stack memory stack, address user)
        internal
        returns (uint256 offset_, StackLib.Stack memory stack_)
    {
        stack_ = stack;
        for (offset_ = offset; offset_ < steps.length; offset_++) {
            StepCall memory step = steps[offset_];

            // TODO optimise payloads

            if (step.step == Step.VaultDeposit) {
                (IERC20 asset, uint256 amount) = abi.decode(step.data, (IERC20, uint256));
                _vaultDeposit(asset, amount);
            } else if (step.step == Step.VaultDepositNative) {
                _vaultDepositNative();
            } else if (step.step == Step.PullFundsWithPermit) {
                (address token, EIP2098Permit memory permit, uint256 amount, address to) =
                    abi.decode(step.data, (address, EIP2098Permit, uint256, address));
                _pullFundsWithPermit(token, permit, amount, user, to);
            } else if (step.step == Step.PullFundsWithPermit2) {
                (IERC20 token, EIP2098Permit memory permit, uint256 amount, address to) =
                    abi.decode(step.data, (IERC20, EIP2098Permit, uint256, address));
                _pullFundsWithPermit2(token, permit, amount, user, to);
            } else if (step.step == Step.VaultWithdraw) {
                (IERC20 asset, uint256 amount, address to) = abi.decode(step.data, (IERC20, uint256, address));
                _vaultWithdraw(asset, amount, to);
            } else if (step.step == Step.VaultWithdrawNative) {
                (uint256 amount, address payable to) = abi.decode(step.data, (uint256, address));
                _vaultWithdrawNative(amount, to);
            } else if (step.step == Step.WrapNativeToken) {
                _wrapNativeToken(abi.decode(step.data, (address)));
            } else if (step.step == Step.UnwrapNativeToken) {
                (uint256 amount, address payable to) = abi.decode(step.data, (uint256, address));
                _unwrapNativeToken(amount, to);
            } else if (step.step == Step.TakeFlashloan) {
                (IERC7399 flashLoanProvider, address asset, uint256 amount) = abi.decode(step.data, (IERC7399, address, uint256));
                (offset_, stack_) = abi.decode(
                    _takeFlashloan(flashLoanProvider, asset, amount, steps, offset_ + 1, stack_, user), (uint256, StackLib.Stack)
                );
            } else if (step.step == Step.RepayFlashloan) {
                (IERC20 asset, uint256 amount) = abi.decode(step.data, (IERC20, uint256));
                _vaultWithdraw(asset, amount, stack_.repayTo);
            } else if (step.step == Step.PositionDeposit) {
                (PositionId positionId, Side side, uint256 amount) = abi.decode(step.data, (PositionId, Side, uint256));
                stack_.storePositionId(_positionDeposit(stack_.loadPositionId(positionId, side), amount), side);
            } else if (step.step == Step.PositionBorrow) {
                (PositionId positionId, Side side, uint256 amount) = abi.decode(step.data, (PositionId, Side, uint256));
                stack_.storePositionId(_positionBorrow(stack_.loadPositionId(positionId, side), amount), side);
            } else if (step.step == Step.PositionWithdraw) {
                (PositionId positionId, Side side, uint256 amount) = abi.decode(step.data, (PositionId, Side, uint256));
                stack_.storePositionId(_positionWithdraw(stack_.loadPositionId(positionId, side), amount), side);
            } else if (step.step == Step.PositionRepay) {
                (PositionId positionId, Side side, uint256 amount) = abi.decode(step.data, (PositionId, Side, uint256));
                stack_.storePositionId(_positionRepay(stack_.loadPositionId(positionId, side), amount), side);
            } else if (step.step == Step.PositionClose) {
                (PositionId positionId, Side side) = abi.decode(step.data, (PositionId, Side));
                stack_.storePositionId(_positionClose(stack_.loadPositionId(positionId, side), user), side);
            } else if (step.step == Step.Swap) {
                (SwapData memory swapData, IERC20 tokenToSell, IERC20 tokenToBuy, address to) =
                    abi.decode(step.data, (SwapData, IERC20, IERC20, address));
                _swap(user, swapData, tokenToSell, tokenToBuy, to);
            } else if (step.step == Step.SwapFromVault) {
                (SwapData memory swapData, IERC20 tokenToSell, IERC20 tokenToBuy) = abi.decode(step.data, (SwapData, IERC20, IERC20));
                _swapFromVault(user, swapData, tokenToSell, tokenToBuy);
            } else if (step.step == Step.Trade) {
                (Side side, TradeParams memory tp, ExecutionParams memory ep) = abi.decode(step.data, (Side, TradeParams, ExecutionParams));
                stack_.storePositionId(_trade(tp, ep), side);
            } else if (step.step == Step.PullPosition) {
                _pullPosition(abi.decode(step.data, (PositionPermit)), user);
            } else {
                revert InvalidStep(step.step);
            }
        }
    }

    function _takeFlashloan(
        IERC7399 flashLoanProvider,
        address asset,
        uint256 amount,
        StepCall[] memory steps,
        uint256 offset,
        StackLib.Stack memory stack,
        address user
    ) internal returns (bytes memory) {
        return flashLoanProvider.flash(address(vault), asset, amount, abi.encode(steps, offset, stack, user), this.continueActionProcessing);
    }

}


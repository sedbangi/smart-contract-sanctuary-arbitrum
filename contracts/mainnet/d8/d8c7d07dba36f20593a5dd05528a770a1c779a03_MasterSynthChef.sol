    function setPausedSid(uint128 sid, bool enabledForDeposit, bool enabledForWithdrawal)
        public
        onlyRole(ADMIN_ROLE)
    {
        sidInfo[sid].isPausedForDeposit = enabledForDeposit;
        sidInfo[sid].isPausedForWithdraw = enabledForWithdrawal;
        emit SynthStateChanged(sid, enabledForDeposit, enabledForWithdrawal);
    }


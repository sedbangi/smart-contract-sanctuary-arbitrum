pragma solidity ^0.8.19;

import {UUPSUpgradeable} from "@openzeppelin/contracts-upgradeable/proxy/utils/UUPSUpgradeable.sol";
import {AccessControlUpgradeable} from
    "@openzeppelin/contracts-upgradeable/access/AccessControlUpgradeable.sol";
import {SafeERC20} from "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";
import {IERC20} from "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import {Initializable} from "@openzeppelin/contracts-upgradeable/proxy/utils/Initializable.sol";
import {OwnableUpgradeable} from "@openzeppelin/contracts-upgradeable/access/OwnableUpgradeable.sol";
import {SidLibrary} from "./lib/SidLibrary.sol";
import {IProtocolSynthChef} from "./interfaces/SynthChefs/IProtocolSynthChef.sol";
import {ICompounder} from "./interfaces/ICompounder.sol";
import {TrillionRouter} from "./TrillionRouter.sol";
import {CDTFactory} from "./CDTFactory.sol";

///@title MasterSynthChef
///@notice This contract manages the staking of LP tokens for synthetic assets in various protocols. Users can deposit LP tokens and earn rewards, and the contract can compound rewards automatically.
contract MasterSynthChef is
    Initializable,
    UUPSUpgradeable,
    AccessControlUpgradeable,
    OwnableUpgradeable
{
    using SafeERC20 for IERC20;
    ///@notice not lp staking sid : MasterSynthChef

    error MasterSynthChef__E1();
    ///@notice wrong protocol id : MasterSynthChef
    error MasterSynthChef__E3(uint32);
    ///@notice wrong pool Id : MasterSynthChef
    error MasterSynthChef__E4(uint32);
    ///@notice compounder address eq 0 : MasterSynthChef
    error MasterSynthChef__E5();
    ///@notice Protocol id already exists : MasterSynthChef
    error MasterSynthChef__E8();
    ///@notice chefAddress eq 0 : MasterSynthChef
    error MasterSynthChef__E9();
    ///@notice Amount eq 0 : MasterSynthChef
    error MasterSynthChef__E10();
    ///@notice recipient address eq 0 : MasterSynthChef
    error MasterSynthChef__E11();
    ///@notice Compound slippage error : MasterSynthChef
    error MasterSynthChef__E12();

    /// @notice Map with addresses ProtoSynthChefs protocols
    mapping(uint32 protocolId => address ProtoSynthChef) public chefs;

    ///@notice Compounder address
    ICompounder public compounder;

    ///@notice Admin role
    bytes32 public constant ADMIN = keccak256("ADMIN");
    ///@notice Depositor Role
    bytes32 public constant DEPOSITOR = keccak256("DEPOSITOR");
    ///@notice Compounder External owned account role
    bytes32 public constant COMPOUNDER_EOA = keccak256("COMPOUNDER_EOA");

    event DepositLP(uint128 sid, uint256 lpAmount, uint256 lpOnFarm);
    event WithdrawLP(uint128 sid, uint256 lpAmount, uint256 lpOnFarm);
    event NewCompounder(address newAddress);
    event NewProtoSynthChef(uint32 indexed protocolId, address chefAddress);
    event Compound(uint128 sid, uint256 lpOnFarm, uint256 newPrice);
    event WithdrawLPAndExtract(uint128 sid, uint256 lpAmount, address recipient, uint256 opId);

    ///@notice CDTFactory address
    CDTFactory public immutable cdtFactory;

    ///@notice Struct that reflects Data about ProtocolSynthChef
    struct ProtocolSynthChefData {
        uint32 protocolId;
        address synthChef;
    }

    ///@notice Struct for internal usage in compound process
    struct CompoundTempData {
        uint32 protocolId;
        uint32 poolId;
        address chef;
    }

    ///@notice Modifier that checks sid that it satisfies current requirements
    modifier sidCheck(uint128 sid) {
        (uint64 chainId, uint32 protoId, uint32 poolId) = SidLibrary.unpack(sid);
        if (chefs[protoId] == address(0)) revert MasterSynthChef__E3(protoId);
        if (!IProtocolSynthChef(chefs[protoId]).isPoolInitialized(poolId)) {
            revert MasterSynthChef__E4(poolId);
        }
        _;
    }

    constructor(address _cdtFactory) {
        _disableInitializers();
        cdtFactory = CDTFactory(_cdtFactory);
    }

    ///@notice Initializes the contract with initial parameters and sets up protocol-specific synthetic chefs.
    ///@param _admin Address of the admin.
    ///@param _compounderEOA Address of the EOA (externally owned account) for the compounder.
    ///@param _compounder Address of the compounder contract.
    ///@param _trillionRouter Address of the TrillionRouter contract.
    ///@param protocolSynthChefs Array of protocol synthetic chef data.
    function initialize(
        address _admin,
        address _compounderEOA,
        address _compounder,
        address _trillionRouter,
        ProtocolSynthChefData[] calldata protocolSynthChefs
    ) public initializer {
        __Ownable_init(_msgSender());
        __UUPSUpgradeable_init();
        // initial configuration
        _grantRole(ADMIN, _msgSender());
        for (uint256 i = 0; i < protocolSynthChefs.length; ++i) {
            ProtocolSynthChefData memory scd = protocolSynthChefs[i];
            addProtocolSynthChef(scd.protocolId, scd.synthChef);
        }
        setCompounder(_compounder);
        // revoke configuration access
        _revokeRole(ADMIN, _msgSender());
        transferOwnership(_admin);
        _grantRole(ADMIN, _admin);
        _grantRole(DEFAULT_ADMIN_ROLE, _admin);
        _grantRole(COMPOUNDER_EOA, _compounderEOA);
        _grantRole(DEPOSITOR, _trillionRouter);
    }

    function _authorizeUpgrade(address) internal override onlyOwner {}

    ///@notice Sets the address of the compounder contract.
    ///@param _compounder New address of the compounder contract.
    function setCompounder(address _compounder) public onlyRole(ADMIN) {
        if (_compounder == address(0)) revert MasterSynthChef__E5();
        compounder = ICompounder(_compounder);
        emit NewCompounder(_compounder);
    }

    ///@notice Adds a new synthetic chef for a specific protocol.
    ///@param protocolId Inner ID of the new protocol.
    ///@param chefAddress Address of the synthetic chef.
    function addProtocolSynthChef(uint32 protocolId, address chefAddress) public onlyRole(ADMIN) {
        if (chefs[protocolId] != address(0)) revert MasterSynthChef__E8();
        if (chefAddress == address(0)) revert MasterSynthChef__E9();
        chefs[protocolId] = chefAddress;
        emit NewProtoSynthChef(protocolId, chefAddress);
    }

    ///@notice Retrieves the total LP token balance for a specific SID.
    ///@param sid Trillion's sid of the pool
    ///@return lpTokenBalance Total LP token balance.
    function getLpTokenTotalBalance(uint128 sid)
        public
        view
        sidCheck(sid)
        returns (uint256 lpTokenBalance)
    {
        (, uint32 protId, uint32 poolId) = SidLibrary.unpack(sid);
        lpTokenBalance = IProtocolSynthChef(chefs[protId]).getTotalLpBalance(poolId);
    }

    ///@notice Retrieves the address of the LP token for a specific SID.
    ///@param sid Trillion's sid of the pool
    ///@return token Address of the LP token.
    function getLpToken(uint128 sid) public view sidCheck(sid) returns (address token) {
        (, uint32 protoId, uint32 poolId) = SidLibrary.unpack(sid);
        token = IProtocolSynthChef(chefs[protoId]).lpTokenAddress(poolId);
    }

    /**
     * LOGIC FUNCTIONS **
     */

    /// @notice Transfer lp tokens to ProtocolSynthChef to stake them into farm
    /// @param sid Trillion's sid of the pool
    /// @param lpTokenAmount amount of lp tokens to deposit
    function depositLP(uint128 sid, uint256 lpTokenAmount)
        external
        onlyRole(DEPOSITOR)
        sidCheck(sid)
    {
        if (lpTokenAmount == 0) revert MasterSynthChef__E10();
        (, uint32 protoId, uint32 poolId) = SidLibrary.unpack(sid);
        address lpToken = IProtocolSynthChef(chefs[protoId]).lpTokenAddress(poolId);
        IERC20(lpToken).safeTransferFrom(_msgSender(), chefs[protoId], lpTokenAmount);
        IProtocolSynthChef(chefs[protoId]).depositLP(poolId, lpTokenAmount);
        uint256 newLPBalance = IProtocolSynthChef(chefs[protoId]).getTotalLpBalance(poolId);
        emit DepositLP(sid, lpTokenAmount, newLPBalance);
    }

    /// @notice unstake lp tokens and transfer them to recipient address
    /// @param sid Trillion's sid of the pool
    /// @param lpTokenAmount amount of lp tokens to withdraw
    /// @param recipient lp tokens recipient
    function withdrawLP(uint128 sid, uint256 lpTokenAmount, address recipient)
        external
        onlyRole(DEPOSITOR)
        sidCheck(sid)
    {
        if (lpTokenAmount == 0) revert MasterSynthChef__E10();
        if (recipient == address(0)) revert MasterSynthChef__E11();
        (, uint32 protoId, uint32 poolId) = SidLibrary.unpack(sid);
        address lpToken = IProtocolSynthChef(chefs[protoId]).lpTokenAddress(poolId);
        IProtocolSynthChef(chefs[protoId]).withdrawLP(poolId, lpTokenAmount);
        IERC20(lpToken).safeTransfer(recipient, lpTokenAmount);
        uint256 newLPBalance = IProtocolSynthChef(chefs[protoId]).getTotalLpBalance(poolId);
        emit WithdrawLP(sid, lpTokenAmount, newLPBalance);
    }

    /// @notice unstake lp tokens, unwraps them to underlying assets and transfer underlying assets to recipient address. Only for liquidator's usage.
    /// @param sid Trillion's sid of the pool
    /// @param lpTokenAmount amount of lp tokens to withdraw
    /// @param recipient lp tokens recipient
    function withdrawLPAndExtract(uint128 sid, uint256 lpTokenAmount, address recipient)
        external
        onlyRole(DEPOSITOR)
        returns (uint256[] memory values, address[] memory tokens)
    {
        (, uint32 protoId, uint32 poolId) = SidLibrary.unpack(sid);
        values = IProtocolSynthChef(chefs[protoId]).withdraw(poolId, lpTokenAmount, recipient);
        tokens = IProtocolSynthChef(chefs[protoId]).getPoolTokens(poolId);
        uint256 newLPBalance = IProtocolSynthChef(chefs[protoId]).getTotalLpBalance(poolId);
        emit WithdrawLP(sid, lpTokenAmount, newLPBalance);
    }

    /// @dev this function should be called from a special backend script
    /// that preconfigures all the data including compound fee transferring and approvals needed
    function compound(
        uint128 sid,
        ICompounder.PreconfiguredCallConfig[] calldata callConfigs,
        uint256 minLP,
        bool reinvest
    ) external onlyRole(COMPOUNDER_EOA) sidCheck(sid) returns (uint256 lpCompounded) {
        CompoundTempData memory ctd;
        (, ctd.protocolId, ctd.poolId) = SidLibrary.unpack(sid);
        ctd.chef = chefs[ctd.protocolId];
        lpCompounded = compounder.compound(ctd.chef, ctd.poolId, callConfigs, reinvest);
        if (minLP > lpCompounded) {
            revert MasterSynthChef__E12();
        }
        // local variables overflow workaround
        _emitCompound(ctd.chef, sid, ctd.poolId);
    }

    ///@dev Function that emits special event required for handle metrics on Trillion's front
    function _emitCompound(address chef, uint128 sid, uint32 poolId) internal {
        emit Compound(
            sid, IProtocolSynthChef(chef).getTotalLpBalance(poolId), cdtFactory.getPrice(sid)
        );
    }
}


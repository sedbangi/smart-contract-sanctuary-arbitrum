pragma solidity ^0.8.15;

import {AccessControlUpgradeable} from
    "@openzeppelin/contracts-upgradeable/access/AccessControlUpgradeable.sol";
import {Initializable} from "@openzeppelin/contracts-upgradeable/proxy/utils/Initializable.sol";
import {UUPSUpgradeable} from "@openzeppelin/contracts-upgradeable/proxy/utils/UUPSUpgradeable.sol";
import {OwnableUpgradeable} from "@openzeppelin/contracts-upgradeable/access/OwnableUpgradeable.sol";
import {TrillionCDT} from "./TrillionCDT.sol";
import {SidLibrary} from "./lib/SidLibrary.sol";
import {MasterSynthChef} from "./MasterSynthChef.sol";
import {IERC20} from "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import {Math} from "@openzeppelin/contracts/utils/math/Math.sol";

///@title CDTFactory
///@notice CDTFactory manages CDT creation, price fetching, commission handling
contract CDTFactory is
    Initializable,
    AccessControlUpgradeable,
    UUPSUpgradeable,
    OwnableUpgradeable
{
    ///@notice Admin role
    bytes32 public constant ADMIN = keccak256("ADMIN");
    ///@notice Minter role
    bytes32 public constant MINTER = keccak256("MINTER");

    ///@notice struct that have sid and it's name
    struct SidConfig {
        uint128 sid;
        uint8 decimals;
        string name;
        string symbol;
    }

    ///@notice Struct that reflects Custom Fee Rates
    struct CustomFeeRate {
        uint64 feeRate;
        bool useCustomFeeRate;
    }
    ///@notice Struct that have information about active state of synth and also address of synth

    event Mint(uint128 sid, uint256 amount, address to);
    event Burn(uint128 sid, uint256 amount, address from);
    event SetPrice(uint128 sid, uint256 price);
    event NewFeeRate(uint256);
    event NewCustomFeeRate(uint128 sid, uint256 amount, bool);
    event NewCustomFeeRateForAddress(address _user, uint256 _feeRate, bool);
    event NewFeeCollector(address indexed newAddress);

    ///@notice Synth already delpoyed : CDTFactory
    error CDTFactory__E1();
    ///@notice SID is not active : CDTFactory
    error CDTFactory__E2();
    ///@notice New fee rate should less than or equal to FEE_BASE : CDTFactory
    error CDTFactory__E3();
    ///@notice Address of the new feeCollector equals to 0x0 : CDTFactory
    error CDTFactory__E4();

    constructor() {
        _disableInitializers();
    }

    ///@notice Initializes the contract with initial parameters and sets up protocol-specific synthetic chefs.
    ///@param msc Address of the MasterChef contract.
    ///@param admin Address of the admin.
    ///@param trillionRouter Address of the TrillionRouter contract.
    ///@param poolManager Address of the PoolManager contract.
    ///@param _feeCollector Address of the fee collector, where we collect all fees.
    ///@param _globalFeeRate Initial fee rate for sids across all chain
    ///@param sids Array with initial Synths
    function initialize(
        address msc,
        address admin,
        address trillionRouter,
        address poolManager,
        address _feeCollector,
        uint256 _globalFeeRate,
        SidConfig[] calldata sids
    ) public initializer {
        __Ownable_init(_msgSender());
        __UUPSUpgradeable_init();
        // initial configuration
        _grantRole(ADMIN, _msgSender());
        for (uint256 i = 0; i < sids.length; ++i) {
            deploySynth(sids[i]);
        }
        setFeeCollector(_feeCollector);
        setFeeRate(_globalFeeRate);
        _revokeRole(ADMIN, _msgSender());
        _grantRole(ADMIN, admin);
        _grantRole(ADMIN, poolManager);
        _grantRole(MINTER, trillionRouter);
        _grantRole(DEFAULT_ADMIN_ROLE, admin);
        masterSynthChef = MasterSynthChef(msc);
        transferOwnership(admin);
    }

    // Do we want to use _disableInitializers() here?
    /// @custom:oz-upgrades-unsafe-allow constructor
    // constructor() initializer {}

    function _authorizeUpgrade(address) internal override onlyOwner {}

    ///@notice Address of MasterSynthChef
    MasterSynthChef public masterSynthChef;

    ///@notice Mapping that link sid with SynthInfo(address of synth token, and info if it is active)
    mapping(uint128 => TrillionCDT) public synths;

    ///@notice Address of Trillion fee collector. The Address where we are accumulating all fees
    address public feeCollector;

    /// @notice Global commission rate
    uint256 public feeRate;

    ///@notice Array with all Sids
    uint128[] public allSids;

    /// @notice Mapping from Trillion sid to custom fee rates
    mapping(uint128 sid => CustomFeeRate) public customFeeRates;

    /// @notice Mapping from caller to custom fee rates. This fee rate has higher importance then regular rate and also then custom rate by sid
    mapping(address user => mapping(uint128 sid => CustomFeeRate)) public customFeeRatesByUser;

    ///@notice Fee divider for calculations of fees
    uint256 public constant FEE_BASE = 10000;

    ///@notice Modifier that checks if Synth is active
    ///@param sid Sid of the Synth token that should be checked
    modifier validSynth(uint128 sid) {
        if (address(synths[sid]) == address(0)) revert CDTFactory__E2();
        _;
    }

    ///@notice Function that managing the process of Synth token creation
    ///@param sidConfig struct with sid info that will be created
    ///@return Address of created Synth token
    function deploySynth(SidConfig memory sidConfig) public onlyRole(ADMIN) returns (address) {
        if (address(synths[sidConfig.sid]) != address(0)) revert CDTFactory__E1();
        TrillionCDT synth =
            new TrillionCDT(sidConfig.sid, sidConfig.symbol, sidConfig.name, sidConfig.decimals);
        synths[sidConfig.sid] = synth;
        // mint 1_000 tokens to prevent price manipulation
        /// @notice first depositor encounters a slight decrease of liquidity
        synth.mint(address(0xdead), 1_000);
        emit Mint(sidConfig.sid, 1_000, address(0xdead));
        allSids.push(sidConfig.sid);
        return address(synth);
    }

    ///@notice Mint function for the Synth token
    ///@param sid Sid of the Synth token that should be minted
    ///@param amount Amount of Synth token to mint
    ///@param to Recipient of frsh tokens
    function mint(uint128 sid, uint256 amount, address to)
        public
        validSynth(sid)
        onlyRole(MINTER)
    {
        synths[sid].mint(to, amount);
        emit Mint(sid, amount, to);
    }

    ///@notice Mint function for the Synth token
    ///@dev Due to Trillion grabs commission only when user withdraw his token, also, commission is calculated here. The commission is in CDT and we send it to feeCollector address.
    ///@param sid Sid of the Synth token that should be burned
    ///@param amount Amount of Synth token to burn
    ///@param from Address that will be burned
    ///@return feeGained the amount of Synth token that should be gained
    function burn(uint128 sid, uint256 amount, address from)
        public
        validSynth(sid)
        onlyRole(MINTER)
        returns (uint256 feeGained)
    {
        uint256 _feeRate = getFeeRate(sid, from);
        uint256 fee = (amount * _feeRate) / FEE_BASE;
        synths[sid].burn(from, amount);
        synths[sid].mint(feeCollector, fee);
        emit Burn(sid, amount, from);
        return fee;
    }

    ///@notice Function that returns address of Synth token associated with a given sid.
    ///@param sid Sid of Synth token
    ///@return Address of the Synth token
    function getSynth(uint128 sid) public view validSynth(sid) returns (TrillionCDT) {
        return synths[sid];
    }

    ///@notice Retrieves the current price of a synthetic asset.
    ///@dev The price is calculated as the ratio of the total locked LP token balance to the total supply of the synthetic asset.
    ///@param sid Compressed information required to identify the synthetic asset.
    ///@return The current price of the synthetic asset, expressed with 18 decimals.
    function getPrice(uint128 sid) public view validSynth(sid) returns (uint256) {
        require(block.chainid == SidLibrary.chainId(sid), "crosschain is not supported");
        uint256 supply = IERC20(synths[sid]).totalSupply();
        uint256 balance = masterSynthChef.getLpTokenTotalBalance(sid);
        if (supply == 0 || balance == 0) {
            return 1e18;
        }
        return balance * 1e18 / supply;
    }

    ///@notice Sets the fee rate percentage.
    ///@param _feeRate New fee rate percentage.
    function setFeeRate(uint256 _feeRate) public onlyRole(ADMIN) {
        if (_feeRate > FEE_BASE) revert CDTFactory__E3();
        feeRate = _feeRate;
        emit NewFeeRate(_feeRate);
    }

    ///@notice Sets custom fee rate for a specific SID.
    ///@param _sid Trillion's sid of the pool
    ///@param _feeRate New fee rate percentage.
    ///@param _useCustomFeeRate Flag to indicate whether to use the custom fee rate.
    function setCustomFeeRate(uint128 _sid, uint64 _feeRate, bool _useCustomFeeRate)
        public
        validSynth(_sid)
        onlyRole(ADMIN)
    {
        if (_feeRate > FEE_BASE) revert CDTFactory__E3();
        if (_useCustomFeeRate) {
            customFeeRates[_sid] = CustomFeeRate(_feeRate, true);
        } else {
            delete customFeeRates[_sid];
        }
        emit NewCustomFeeRate(_sid, _feeRate, _useCustomFeeRate);
    }

    ///@notice Sets custom fee rate for a specific SID.
    ///@param _user Address of a user for applying custom fee rate
    ///@param _feeRate New fee rate percentage.
    ///@param _useCustomFeeRate Flag to indicate whether to use the custom fee rate.
    function setCustomFeeRateForAddress(
        address _user,
        uint128 sid,
        uint64 _feeRate,
        bool _useCustomFeeRate
    ) public onlyRole(ADMIN) {
        if (_feeRate > FEE_BASE) revert CDTFactory__E3();
        if (_useCustomFeeRate) {
            customFeeRatesByUser[_user][sid] = CustomFeeRate(_feeRate, true);
        } else {
            delete customFeeRatesByUser[_user][sid];
        }
        emit NewCustomFeeRateForAddress(_user, _feeRate, _useCustomFeeRate);
    }

    ///@notice Sets the fee collector address.
    ///@param _feeCollector New fee collector address.
    function setFeeCollector(address _feeCollector) public onlyRole(ADMIN) {
        if (_feeCollector == address(0)) revert CDTFactory__E4();
        feeCollector = _feeCollector;
        emit NewFeeCollector(_feeCollector);
    }

    ///@notice Calculates the fee for a given SID and address.
    function getFeeRate(uint128 sid, address from) public view returns (uint256 fee) {
        CustomFeeRate memory _cfrByUser = customFeeRatesByUser[from][sid];
        CustomFeeRate memory _cfrBySid = customFeeRates[sid];
        fee = _cfrByUser.useCustomFeeRate
            ? (
                _cfrBySid.useCustomFeeRate
                    ? Math.min(_cfrByUser.feeRate, _cfrBySid.feeRate)
                    : _cfrByUser.feeRate
            )
            : (_cfrBySid.useCustomFeeRate ? _cfrBySid.feeRate : feeRate);
    }

    ///@dev Converts synthetic tokens to LP tokens for a given SID with fee.
    ///@param sid SID to convert synthetic tokens for.
    ///@param synthAmount Amount of synthetic tokens to convert.
    ///@param caller Address of the caller.
    ///@return lpAmount Amount of LP tokens obtained.
    function convertSynthToLpWithFee(uint128 sid, uint256 synthAmount, address caller)
        external
        view
        returns (uint256 lpAmount)
    {
        uint256 price = getPrice(sid);
        uint256 _feeRate = getFeeRate(sid, caller);
        lpAmount = (synthAmount * price) / 1e18;
        lpAmount -= lpAmount * (_feeRate) / FEE_BASE;
    }

    ///@notice Returns the number of all SIDs
    function allSidsLength() external view returns (uint256 len) {
        len = allSids.length;
    }

    /// @notice Returns all SIDs
    function getAllSids() external view returns (uint128[] memory) {
        return allSids;
    }
}


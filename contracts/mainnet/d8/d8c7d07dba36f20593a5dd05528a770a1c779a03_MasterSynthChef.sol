        onlyHomeChain(sid)
        isPausedForDeposit(sid)
        nonReentrant
    {
        if (lpAmount == 0) revert TrillionRouter__E5();
        // capture the price before deposit
        uint256 price = cdtFactory.getPrice(sid);
        IERC20 lpToken = IERC20(masterSynthChef.getLpToken(sid));
        lpToken.safeTransferFrom(msg.sender, address(this), lpAmount);
        lpToken.forceApprove(address(masterSynthChef), 0); // usdt case
        lpToken.forceApprove(address(masterSynthChef), lpAmount);
        masterSynthChef.depositLP(sid, lpAmount);

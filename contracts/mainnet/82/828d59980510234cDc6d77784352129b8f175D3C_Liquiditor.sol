import {EthSwapper} from "./Swapper.sol";

import {IERC20} from "@openzeppelin/contracts/token/ERC20/IERC20.sol";

import {IUniswapV2Router01} from '@uniswap/v2-periphery/contracts/interfaces/IUniswapV2Router01.sol';

/**
 * @title Liquiditor
 * @notice Perfom swap.
 */
contract Liquiditor {
  // Uniswap router
  IUniswapV2Router01 public immutable router;

  // Eth swapper
  EthSwapper public immutable swapper;

  // Weth address
  IERC20 public immutable weth;

  constructor(address _router, address _swapper, address _weth) {
    router = IUniswapV2Router01(_router);
    swapper = EthSwapper(_swapper);
    weth = IERC20(_weth);
  }

  function pushLiquidity(
    address _asset,
    uint256 _amount,
    uint256 _minEthAmount,
    uint256 _fee,
    address _recipient
  ) external {
    IERC20(_asset).transferFrom(msg.sender, address(this), _amount);

    uint256 swapToEthAmount = _amount / 2;

    IERC20(_asset).approve(address(swapper), swapToEthAmount);
  
    uint256 swappedAmount = swapper.swapToEth(_asset, swapToEthAmount, _minEthAmount, _fee, address(this));
    weth.approve(address(router), swappedAmount);

    uint256 forLiquidityAmount = _amount - swapToEthAmount;
    IERC20(_asset).approve(address(router), forLiquidityAmount);

    router.addLiquidity(
      _asset, 
      address(weth),
      forLiquidityAmount,
      swappedAmount,
      0,
      0,
      _recipient,
      block.timestamp
    );
  }
}


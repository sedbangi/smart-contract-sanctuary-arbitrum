pragma solidity ^0.8.15;

import {IERC20} from "@openzeppelin/contracts/token/ERC20/IERC20.sol";

import {ISwapRouter} from '@uniswap/v3-periphery/contracts/interfaces/ISwapRouter.sol';

interface IWeth is IERC20 {
    function withdrawTo(address recepient, uint256 amount) external;
}

/**
 * @title EthSwapper
 * @notice Perfom swap.
 */
contract EthSwapper {
  // Uniswap router
  ISwapRouter public immutable router;

  // Weth address
  IWeth public immutable weth;

  constructor(address _router, address _weth) {
    router = ISwapRouter(_router);
    weth = IWeth(_weth);
  }

  /** @notice Swap _asset to _weth and perform withdraw.
    * @param _asset Base asset.
    * @param _amount Base asset amount.
    * @param _minEthAmount Weth minimum amount.
    * @param _fee Swap fee.
    * @param _recipient Eth reciever.
    */
  function swapToEth(
    address _asset,
    uint256 _amount,
    uint256 _minEthAmount,
    uint256 _fee,
    address _recipient
  ) external returns (uint256) {
    IERC20(_asset).transferFrom(msg.sender, address(this), _amount);

    IERC20(_asset).approve(address(router), _amount);

    ISwapRouter.ExactInputSingleParams memory params = 
        ISwapRouter.ExactInputSingleParams({
            tokenIn: _asset,
            tokenOut: address(weth),
            fee: uint24(_fee),
            recipient: address(this),
            deadline: block.timestamp,
            amountIn: _amount,
            amountOutMinimum: _minEthAmount,
            sqrtPriceLimitX96: 0
        });

    uint256 wethAmount = router.exactInputSingle(params);
    // weth.withdrawTo(_recipient, wethAmount);
    weth.transfer(_recipient, wethAmount);

    return wethAmount;
  }
}
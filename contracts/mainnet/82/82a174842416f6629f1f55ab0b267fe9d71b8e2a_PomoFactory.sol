import {IPomoUtility} from "./interface/IPomoUtility.sol";
import {ERC1155Upgradeable} from "@openzeppelin/contracts-upgradeable/token/ERC1155/ERC1155Upgradeable.sol";
import {ERC1155URIStorageUpgradeable} from
    "@openzeppelin/contracts-upgradeable/token/ERC1155/extensions/ERC1155URIStorageUpgradeable.sol";
import {ERC1155SupplyUpgradeable} from
    "@openzeppelin/contracts-upgradeable/token/ERC1155/extensions/ERC1155SupplyUpgradeable.sol";

contract PomoUtility is IPomoUtility, ERC1155URIStorageUpgradeable, ERC1155SupplyUpgradeable {
    string public name;
    string public symbol;

    mapping(uint256 => bool) private _tokenSoulBound;

    address public admin;
    address public owner;
    address public minter;

    modifier onlyAdmin() {
        require(msg.sender == admin, "PomoProject: Unauthorized admin");
        _;
    }

    modifier onlyMinterOrOwner() {
        address operator = _msgSender();
        if (operator != owner && operator != minter) {
            revert PomoUtilityUnauthorized();
        }
        _;
    }

    function initialize(
        string memory _name,
        string memory _symbol,
        string memory _uri,
        address _admin,
        address _owner,
        address _minter
    ) public initializer {
        require(_admin != address(0), "PomoUtility: invalid admin address");
        admin = _admin;
        owner = _owner;
        minter = _minter;
        __ERC1155_init(_uri);
        name = _name;
        symbol = _symbol;
    }

    /// @inheritdoc IPomoUtility
    function mint(address to, uint256 id, uint256 amount, bytes memory data) public onlyMinterOrOwner {
        _mint(to, id, amount, data);
    }

    /// @inheritdoc IPomoUtility
    function mintBatch(address to, uint256[] memory ids, uint256[] memory amounts, bytes memory data)
        public
        onlyMinterOrOwner
    {
        if (ids.length != amounts.length) {
            revert PomoUtilityInvalidArrayLength(ids.length, amounts.length);
        }
        _mintBatch(to, ids, amounts, data);
    }

    /// @inheritdoc IPomoUtility
    function burn(address from, uint256 id, uint256 amount) public {
        address operator = _msgSender();
        if (operator != from && operator != owner && operator != admin) {
            revert PomoUtilityUnauthorized();
        }
        if (balanceOf(from, id) < amount) {
            revert PomoUtilityInsufficientBalance(operator, id, amount);
        }
        _burn(from, id, amount);
    }

    /// @inheritdoc IPomoUtility
    function burnBatch(address from, uint256[] memory ids, uint256[] memory amounts) public {
        address operator = _msgSender();
        if (ids.length != amounts.length) {
            revert PomoUtilityInvalidArrayLength(ids.length, amounts.length);
        }
        if (operator != from && operator != owner && operator != admin) {
            revert PomoUtilityUnauthorized();
        }
        for (uint256 i = 0; i < ids.length; i++) {
            if (balanceOf(from, ids[i]) < amounts[i]) {
                revert PomoUtilityInsufficientBalance(from, ids[i], amounts[i]);
            }
        }
        _burnBatch(from, ids, amounts);
    }

    function safeTransferFrom(address from, address to, uint256 id, uint256 amount, bytes memory data)
        public
        virtual
        override(ERC1155Upgradeable)
    {
        address sender = _msgSender();
        if (from != sender && !isApprovedForAll(from, sender)) {
            revert ERC1155MissingApprovalForAll(sender, from);
        }
        if (isSoulBound(id)) {
            revert PomoUtilityTokenSoulBound(from, id);
        }

        _safeTransferFrom(from, to, id, amount, data);
    }

    function safeBatchTransferFrom(
        address from,
        address to,
        uint256[] memory ids,
        uint256[] memory amounts,
        bytes memory data
    ) public virtual override(ERC1155Upgradeable) {
        address sender = _msgSender();
        if (from != sender && !isApprovedForAll(from, sender)) {
            revert ERC1155MissingApprovalForAll(sender, from);
        }
        if (ids.length != amounts.length) {
            revert PomoUtilityInvalidArrayLength(ids.length, amounts.length);
        }
        for (uint256 i = 0; i < ids.length; i++) {
            if (isSoulBound(ids[i])) {
                revert PomoUtilityTokenSoulBound(from, ids[i]);
            }
        }

        _safeBatchTransferFrom(from, to, ids, amounts, data);
    }

    /// @inheritdoc IPomoUtility
    function mintBatchToAccounts(address[] calldata accounts, uint256[] calldata tokenIds, uint256[] calldata amounts)
        public
        override
        onlyMinterOrOwner
    {
        if (accounts.length != tokenIds.length || accounts.length != amounts.length) {
            revert PomoUtilityInvalidArrayLength(accounts.length, tokenIds.length);
        }
        for (uint256 i = 0; i < accounts.length; i++) {
            _mint(accounts[i], tokenIds[i], amounts[i], new bytes(0));
        }
    }

    /// @inheritdoc IPomoUtility
    function mintBatchUtils(address[] calldata accounts, uint256[] calldata tokenIds, uint256[] calldata amounts)
        public
        override
        onlyMinterOrOwner
    {
        for (uint256 i = 0; i < accounts.length; i++) {
            if (accounts[i] != address(0)) {
                _mintBatch(accounts[i], tokenIds, amounts, new bytes(0));
            }
        }
    }

    /// @inheritdoc IPomoUtility
    function setMinter(address _minter) public onlyAdmin {
        minter = _minter;
    }

    /// @inheritdoc IPomoUtility
    function setURI(string memory uri_) public onlyAdmin {
        _setURI(uri_);
    }

    /// @inheritdoc IPomoUtility
    function setTokenURI(uint256 tokenId, string memory tokenURI) public onlyAdmin {
        _setURI(tokenId, tokenURI);
    }

    /// @inheritdoc IPomoUtility
    function setSoulBound(uint256[] memory ids, bool[] memory soulBounds) public onlyAdmin {
        if (ids.length != soulBounds.length) {
            revert PomoUtilityInvalidArrayLength(ids.length, soulBounds.length);
        }
        for (uint256 i = 0; i < ids.length; i++) {
            _tokenSoulBound[ids[i]] = soulBounds[i];
        }
    }

    /// @inheritdoc IPomoUtility
    function isSoulBound(uint256 id) public view override returns (bool) {
        return _tokenSoulBound[id];
    }

    function uri(uint256 tokenId)
        public
        view
        virtual
        override(ERC1155URIStorageUpgradeable, ERC1155Upgradeable)
        returns (string memory)
    {
        return super.uri(tokenId);
    }

    function supportsInterface(bytes4 interfaceId) public view virtual override(ERC1155Upgradeable) returns (bool) {
        return super.supportsInterface(interfaceId);
    }

    function _update(address from, address to, uint256[] memory ids, uint256[] memory amounts)
        internal
        virtual
        override(ERC1155Upgradeable, ERC1155SupplyUpgradeable)
    {
        super._update(from, to, ids, amounts);
    }
}


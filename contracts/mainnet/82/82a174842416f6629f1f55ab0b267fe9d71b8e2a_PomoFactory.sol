pragma solidity ^0.8.20;

import {Ownable} from "@openzeppelin/contracts/access/Ownable.sol";
import {ERC1967Proxy} from "@openzeppelin/contracts/proxy/ERC1967/ERC1967Proxy.sol";
import {PomoProject} from "../PomoProject.sol";
import {PomoUtility} from "../PomoUtility.sol";

contract PomoFactory is Ownable {
    address public immutable pomoProjectImplementation;
    address public immutable pomoUtilityImplementation;
    address public erc6551Registry;
    address public erc6551Impl;

    event PomoProjectDeployed(
        address indexed pomoProject,
        address indexed owner,
        address minter,
        uint256 indexed index
    );

    event PomoUtilityDeployed(
        address indexed pomoUtility,
        address indexed owner,
        address minter,
        uint256 indexed index
    );

    constructor(
        address _pomoProjectimplementation,
        address _pomoUtilityimplementation,
        address _erc6551Registry,
        address _erc6551Impl,
        address _admin
    ) Ownable(_admin) {
        erc6551Registry = _erc6551Registry;
        erc6551Impl = _erc6551Impl;
        pomoProjectImplementation = _pomoProjectimplementation;
        pomoUtilityImplementation = _pomoUtilityimplementation;
    }

    function createPomoProject(
        address pomoProjectOwner,
        address minter,
        string memory name,
        string memory symbol,
        string memory uri,
        uint256 index
    ) external onlyOwner returns (address proxy) {
        address admin = owner();

        bytes memory initializer = _getPomoProjectInitializer(
            admin,
            pomoProjectOwner,
            minter,
            name,
            symbol,
            uri
        );
        bytes32 salt = keccak256(
            abi.encodePacked(keccak256(initializer), index)
        );

        bytes memory deploymentData = abi.encodePacked(
            type(ERC1967Proxy).creationCode,
            abi.encode(uint256(uint160(pomoProjectImplementation)), initializer)
        );

        assembly {
            proxy := create2(
                0x0,
                add(0x20, deploymentData),
                mload(deploymentData),
                salt
            )
        }

        require(
            address(proxy) != address(0),
            "PomoFactory: createPomoProject call failed"
        );

        emit PomoProjectDeployed(proxy, pomoProjectOwner, minter, index);
    }

    function createPomoUtility(
        address pomoUtilityOwner,
        address minter,
        string memory name,
        string memory symbol,
        string memory uri,
        uint256 index
    ) external onlyOwner returns (address proxy) {
        address admin = owner();

        bytes memory initializer = _getPomoUtilityInitializer(
            admin,
            pomoUtilityOwner,
            minter,
            name,
            symbol,
            uri
        );
        bytes32 salt = keccak256(
            abi.encodePacked(keccak256(initializer), index)
        );

        // bytes memory data = "";
        bytes memory deploymentData = abi.encodePacked(
            type(ERC1967Proxy).creationCode,
            abi.encode(uint256(uint160(pomoUtilityImplementation)), initializer)
        );

        assembly {
            proxy := create2(
                0x0,
                add(0x20, deploymentData),
                mload(deploymentData),
                salt
            )
        }
        require(
            address(proxy) != address(0),
            "PomoFactory: CreatePomoUtility call failed"
        );

        emit PomoUtilityDeployed(proxy, pomoUtilityOwner, minter, index);
    }

    function setERC6551Registry(address registry) external onlyOwner {
        require(
            registry != address(0),
            "PomoFactory: invalid erc6551 registry"
        );
        erc6551Registry = registry;
    }

    function setERC6551Impl(address impl) external onlyOwner {
        require(impl != address(0), "PomoFactory: invalid erc6551 impl");
        erc6551Impl = impl;
    }

    function getPomoProjectAddress(
        address pomoProjectowner,
        address minter,
        string memory name,
        string memory symbol,
        string memory uri,
        uint256 index
    ) external view returns (address token) {
        address admin = owner();

        bytes memory initializer = _getPomoProjectInitializer(
            admin,
            pomoProjectowner,
            minter,
            name,
            symbol,
            uri
        );
        bytes memory code = abi.encodePacked(
            type(ERC1967Proxy).creationCode,
            abi.encode(uint256(uint160(pomoProjectImplementation)), initializer)
        );
        bytes32 salt = keccak256(
            abi.encodePacked(keccak256(initializer), index)
        );
        bytes32 hash = keccak256(
            abi.encodePacked(bytes1(0xff), address(this), salt, keccak256(code))
        );
        token = address(uint160(uint256(hash)));
    }

    function getPomoUtilityAddress(
        address pomoUtilityowner,
        address minter,
        string memory name,
        string memory symbol,
        string memory uri,
        uint256 index
    ) external view returns (address token) {
        address admin = owner();

        bytes memory initializer = _getPomoUtilityInitializer(
            admin,
            pomoUtilityowner,
            minter,
            name,
            symbol,
            uri
        );
        bytes memory code = abi.encodePacked(
            type(ERC1967Proxy).creationCode,
            abi.encode(uint256(uint160(pomoUtilityImplementation)), initializer)
        );
        bytes32 salt = keccak256(
            abi.encodePacked(keccak256(initializer), index)
        );
        bytes32 hash = keccak256(
            abi.encodePacked(bytes1(0xff), address(this), salt, keccak256(code))
        );
        token = address(uint160(uint256(hash)));
    }

    function _getPomoProjectInitializer(
        address admin,
        address projectOwner,
        address minter,
        string memory name,
        string memory symbol,
        string memory uri
    ) private view returns (bytes memory) {
        return
            abi.encodeCall(
                PomoProject.initialize,
                (
                    name,
                    symbol,
                    uri,
                    admin,
                    projectOwner,
                    minter,
                    erc6551Registry,
                    erc6551Impl
                )
            );
    }

    function _getPomoUtilityInitializer(
        address admin,
        address owner,
        address minter,
        string memory name,
        string memory symbol,
        string memory uri
    ) private pure returns (bytes memory) {
        return
            abi.encodeCall(
                PomoUtility.initialize,
                (name, symbol, uri, admin, owner, minter)
            );
    }
}


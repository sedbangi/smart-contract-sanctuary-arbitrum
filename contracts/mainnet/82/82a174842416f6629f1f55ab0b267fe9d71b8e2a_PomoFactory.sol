import {IPomoProject} from "./interface/IPomoProject.sol";
import {IERC6551Registry} from "./interface/IERC6551Registry.sol";
import {ERC721Upgradeable} from "@openzeppelin/contracts-upgradeable/token/ERC721/ERC721Upgradeable.sol";

contract PomoProject is IPomoProject, ERC721Upgradeable {
    uint256 public _maxSeq;
    uint256 private _burnCounter;
    uint256 private _skipCounter;
    mapping(uint256 => bool) private _tokenSoulBound;

    address public erc6551Registry;
    address public erc6551Impl;
    address public admin;
    address public owner;
    address public minter;

    string public uri;

    modifier onlyAdmin() {
        require(msg.sender == admin, "PomoProject: Unauthorized admin");
        _;
    }

    modifier onlyMinterOrOwner() {
        require(msg.sender == minter || msg.sender == owner, "PomoProject: Unauthorized minter");
        _;
    }

    function initialize(
        string memory _name,
        string memory _symbol,
        string memory _uri,
        address _admin,
        address _projectOwner,
        address _minter,
        address _erc6551Registry,
        address _erc6551Impl
    ) public initializer {
        require(_minter != address(0) && _projectOwner != address(0), "PomoProject: invalid admin and owner address");
        admin = _admin;
        owner = _projectOwner;
        minter = _minter;

        __ERC721_init(_name, _symbol);
        uri = _uri;

        erc6551Registry = _erc6551Registry;
        erc6551Impl = _erc6551Impl;
    }

    /// @inheritdoc IPomoProject
    function mintSetSoulBound(address to, uint256 tokenId, bool soulBound, uint256 salt)
        public
        override
        onlyMinterOrOwner
        returns (address, uint256)
    {
        if (tokenId < _maxSeq) {
            revert PomoProjectInvalidTokenId(tokenId);
        }

        if (soulBound) {
            _tokenSoulBound[tokenId] = soulBound;
        }
        _safeMint(to, tokenId);
        _skipCounter += tokenId - _maxSeq;
        _maxSeq = tokenId + 1;

        address erc6551Account =
            IERC6551Registry(erc6551Registry).account(erc6551Impl, bytes32(salt), block.chainid, address(this), tokenId);
        if (erc6551Account.code.length == 0) {
            // Create a new account if it doesn't exist
            IERC6551Registry(erc6551Registry).createAccount(
                erc6551Impl, bytes32(salt), block.chainid, address(this), tokenId
            );
        }
        return (erc6551Account, tokenId + 1);
    }

    function transferFrom(address from, address to, uint256 tokenId) public override {
        if (isSoulBound(tokenId)) {
            revert PomoProjectTokenSoulBound(from, tokenId);
        }
        super.transferFrom(from, to, tokenId);
    }

    function safeTransferFrom(address from, address to, uint256 tokenId, bytes memory data) public override {
        if (isSoulBound(tokenId)) {
            revert PomoProjectTokenSoulBound(from, tokenId);
        }
        super.safeTransferFrom(from, to, tokenId, data);
    }

    /// @inheritdoc IPomoProject
    function burn(uint256 id) public {
        address operator = _msgSender();
        address tokenOwner = _ownerOf(id);
        if (operator != tokenOwner && operator != admin && operator != owner) {
            revert PomoProjectUnauthorized();
        }
        _burn(id);
        _burnCounter++;
    }

    function setMinter(address _minter) public onlyAdmin {
        minter = _minter;
    }

    /// @inheritdoc IPomoProject
    function setBaseURI(string memory uri_) public onlyAdmin {
        uri = uri_;
    }

    /// @inheritdoc IPomoProject
    function isSoulBound(uint256 id) public view override returns (bool) {
        return _tokenSoulBound[id];
    }

    /// @inheritdoc IPomoProject
    function totalSupply() public view returns (uint256) {
        return _maxSeq - _burnCounter - _skipCounter;
    }

    /// @inheritdoc IPomoProject
    function maxSeq() public view returns (uint256) {
        return _maxSeq;
    }

    function supportsInterface(bytes4 interfaceId) public view virtual override(ERC721Upgradeable) returns (bool) {
        return super.supportsInterface(interfaceId);
    }

    function _baseURI() internal view override returns (string memory) {
        return uri;
    }
}


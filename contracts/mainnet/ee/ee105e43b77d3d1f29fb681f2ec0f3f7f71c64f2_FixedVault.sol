import {Ownable} from "@openzeppelin/contracts/access/Ownable.sol";
import {ERC20} from "solmate/tokens/ERC20.sol";
import {SafeTransferLib} from "solmate/utils/SafeTransferLib.sol";
import {ERC4626} from "solmate/tokens/ERC4626.sol";
import {ERC1155} from "@openzeppelin/contracts/token/ERC1155/ERC1155.sol";
import {IFixedVault} from "./IFixedVault.sol";

/// @notice Test Contracts for Fractality V1
/// NOTE: Reward distribution via Distributor - scheduled tx's in multi-sig with proof of fixed yield funds
/// NOTE: In situtation where cap is decreased - what happens?
contract FixedVault is IFixedVault, Ownable, ERC4626 {
    using SafeTransferLib for ERC20;

    uint256 public constant TOKEN_CYCLES = 27; // Mayan calendar cycles used - 13x periods of 27 days = 365 days over 5 years
    address public immutable strategyMultiSig;
    uint128 public currentEpoch;
    uint128 public proRataDelay;
    uint256 public vaultAssets;
    uint256 public totalWithdrawRequests;

    mapping(address => bool) public approvedUser;
    mapping(uint256 => FixedVaultEpoch) public epochInfo;
    mapping(address => mapping(uint256 => ProRata)) public proRata;
    mapping(address => uint256) public totalUserWithdrawRequests;
    mapping(address => mapping(uint256 => uint256)) public withdrawRequestsByEpoch;

    constructor(ERC20 _asset, string memory _name, string memory _symbol, address _owner, address _multisig)
        ERC4626(_asset, _name, _symbol)
        Ownable(_owner)
    {
        if (_multisig == address(0)) revert ZeroAddress();
        strategyMultiSig = _multisig;
        proRataDelay = 1 days;
        currentEpoch++;
    }

    ///////////////////////////// Admin Functions /////////////////////////////
    /// @notice updates the time lapse for pro-rata access
    function updateProRataDelay(uint128 _delay) external onlyOwner {
        if (_delay == 0) revert ZeroNum();
        proRataDelay = _delay;
        emit ProRataDelayUpdated(_delay);
    }

    /// @notice Updates the approved users for the vault
    function updateApprovedUsers(address[] calldata _users, bool[] calldata _status) external onlyOwner {
        if (_users.length != _status.length) revert ArrayMismatch();
        for (uint256 i; i < _users.length;) {
            approvedUser[_users[i]] = _status[i];
            unchecked {
                i++;
            }
        }
        emit ApprovedUsersUpdated(_users, _status);
    }

    /// @notice Sets the cap increase and fixed APR for an epoch
    /// @dev Can't set if APR is zero, epoch is open, or resolved
    function updateEpochData(uint128 _maxNewDeposits, uint32 _fixedAPR) public onlyOwner {
        if (_fixedAPR == 0) revert ZeroNum();
        uint128 _nextEpochId = uint128(currentEpoch + 1);

        FixedVaultEpoch memory epoch = epochInfo[_nextEpochId];
        if (epoch.depositsOpened) revert EpochOpen();

        // Defining the amount of new capital to take on, fixedAPR, and epochId
        epoch.maxNewDeposits = _maxNewDeposits;
        epoch.fixedAPR = _fixedAPR;
        epochInfo[_nextEpochId] = epoch;

        emit EpochDataUpdated(_nextEpochId, _maxNewDeposits, _fixedAPR);
    }

    /// @notice Opens the epoch for deposits with a delay for pro-rata access
    /// @dev Can't open if fixedAPR is zero or already open
    function openEpochForDeposits() public onlyOwner {
        uint128 _nextEpochId = uint128(currentEpoch + 1);
        FixedVaultEpoch memory epoch = epochInfo[_nextEpochId];
        if (epoch.fixedAPR == 0) revert ZeroNum();
        if (epoch.depositsOpened) revert EpochOpen();

        epochInfo[_nextEpochId].depositsOpened = true;
        epochInfo[_nextEpochId].openTime = uint128(block.timestamp) + proRataDelay;

        emit EpochOpened(_nextEpochId);
    }

    /// @notice Marks currentEpoch as resolved and pulls excess funds for next epoch (if any)
    /// @dev Checks nextEpoch has fixedAPR and is open
    /// @dev Implicitly can't resolve if withdrawal requests not payable i.e. withdrawals guaranteed for continued operation
    /// NOTE: Risk if can't pay then contract lock BUT treasury purpose is to reimburse losses
    function resolveCurrentEpoch() external onlyOwner {
        uint256 nextEpochId = currentEpoch + 1;
        if (!epochInfo[nextEpochId].depositsOpened) revert NextEpochEmpty();

        // Transferring the requested withdrawn amount from the multiSig to the vault
        uint256 totalRequests = totalWithdrawRequests;
        uint256 currentTotalAssets = totalAssets();
        if (totalRequests > currentTotalAssets) {
            asset.safeTransferFrom(msg.sender, address(this), totalRequests - currentTotalAssets);
        } else if (currentTotalAssets - totalRequests != 0) {
            asset.safeTransfer(strategyMultiSig, currentTotalAssets - totalRequests);
        }

        // Updating epoch info for current and iterating to next
        epochInfo[nextEpochId - 1].resolved = true;
        currentEpoch++;
        emit EpochResolved(nextEpochId - 1);
    }

    ///////////////////////////// User Functions /////////////////////////////
    /// @notice Deposits to a specified epoch
    /// @dev Can't deposit if fixedAPR is zero, epoch not open, or cap is reached
    /// @dev If depositing before public deposit period will need to be shareholder (pro-rata access)
    // NOTE: VaultAssets used to track assets > balanceOf token - can return funds to the vault as admin via
    // a function that increases the vaultAssets so new deposits get adjsuted amount (if sending rewards to contract)
    function deposit(uint256 assets, address receiver) public override returns (uint256) {
        if (assets == 0) revert ZeroNum();
        if (!approvedUser[msg.sender]) revert Unapproved();
        uint128 nextEpochId = currentEpoch + 1;
        FixedVaultEpoch memory epoch = epochInfo[nextEpochId];

        if (epoch.fixedAPR == 0) revert Uninitiated();
        if (!epoch.depositsOpened) revert Uninitiated();
        if (epoch.deposits + assets > epoch.maxNewDeposits) revert MaxCapacity();

        // Check has pro-rata access if before open time
        if (epoch.openTime > block.timestamp) _hasProRataAccess(nextEpochId, uint128(assets), epoch.maxNewDeposits);

        // Updating storage
        epoch.deposits += uint128(assets);
        vaultAssets += assets;
        epochInfo[nextEpochId].deposits += uint128(assets);

        // Need to transfer before minting or ERC777s could reenter.
        asset.safeTransferFrom(msg.sender, address(this), assets);

        // Minting asset amount as vault shares accrue no value - rewards sent via distributor
        _mint(receiver, assets);

        emit Deposit(msg.sender, receiver, assets);

        return assets;
    }

    /// @notice Requests a withdrawal of shares
    /// @dev Checks user has allowance and withdraw amount is less than balance (incl. pending withdrawals)
    function requestWithdraw(uint256 shares) external {
        if (!approvedUser[msg.sender]) revert Unapproved();
        // Checking the user has the balance to make withdraw requests incl. existing requests
        _checkSharesBeingWithdrawn(msg.sender, shares);

        uint256 nextEpoch = currentEpoch + 1;
        withdrawRequestsByEpoch[msg.sender][nextEpoch] += shares;
        totalUserWithdrawRequests[msg.sender] += shares;
        totalWithdrawRequests += shares;

        emit WithdrawRequested(msg.sender, shares, nextEpoch);
    }

    /// @notice Cancels a withdrawal request of shares
    /// @dev Lets user cancel withdraw requests coming up or in the past
    function cancelRequestWithdraw(uint256 shares, uint256 _id) external {
        if (!approvedUser[msg.sender]) revert Unapproved();
        withdrawRequestsByEpoch[msg.sender][_id] -= shares;
        totalUserWithdrawRequests[msg.sender] -= shares;
        totalWithdrawRequests -= shares;

        emit CancelWithdrawRequested(msg.sender, shares, _id);
    }

    /// @notice Withdraws the requested amount of shares (if previously requested)
    /// @dev Can't withdraw more than requested, and checks the caller allowances
    function withdraw(uint256 assets, address receiver, uint256 id) public returns (uint256) {
        if (!approvedUser[msg.sender]) revert Unapproved();
        if (id > currentEpoch) revert EpochNotResolved();

        // Should underflow if withdrawing more than requested
        withdrawRequestsByEpoch[msg.sender][id] -= assets;
        totalUserWithdrawRequests[msg.sender] -= assets;
        totalWithdrawRequests -= assets;

        vaultAssets -= assets;
        _burn(msg.sender, assets);
        asset.safeTransfer(receiver, assets);

        emit Withdraw(receiver, msg.sender, assets);

        return assets;
    }

    /// @dev Overriden transfer function to prevent griefing via withdraw requests
    /// NOTE: EOA_1 requests 100 share withdrawal, transfers 100 shares to EOA2, and repeats
    function transfer(address _to, uint256 _amount) public override returns (bool) {
        if (!approvedUser[_to]) revert Unapproved();
        return _transfer(msg.sender, _to, _amount);
    }

    /// @dev Overriden the transfer functions to prevent griefing via withdraw requests
    /// NOTE: EOA_1 requests 100 share withdrawal, transfers 100 shares to EOA2, and repeats
    function transferFrom(address _from, address _to, uint256 _amount) public override returns (bool) {
        if (!approvedUser[_to]) revert Unapproved();
        uint256 allowed = allowance[_from][msg.sender]; // Saves gas for limited approvals.
        if (allowed != type(uint256).max) allowance[_from][msg.sender] = allowed - _amount;
        return _transfer(_from, _to, _amount);
    }

    ///////////////////////////// View Functions /////////////////////////////
    /// @notice Fetches the total shares requested to be withdrawn for a user
    /// @dev Only able to withdraw shares cued up for the next epoch
    function totalUserSharesBeingWithdrawn(address owner) public view returns (uint256) {
        return _totalUserSharesBeingWithdrawn(owner);
    }

    /// @notice Fetches the total assets theoretically in the pool i.e. total deposited + total liability
    /// @dev This will return the value of the vault in the depositAsset
    function totalAssets() public view override returns (uint256) {
        return vaultAssets;
    }

    /// @notice Returns the available total assets for upcoming epoch i.e. total assets minus the USDC value of pending withdrawals
    function availableAssets() public view returns (uint256) {
        return totalAssets() - totalWithdrawRequests;
    }

    /// @notice Fetches the max deposit amount for the epoch
    /// @dev Max deposit amount is the maxNewDeposits minus the deposits already made
    /// @dev If maxNewDeposits is 0 then deposits == maxNewDeposits will also revert due to default values
    function maxEpochDeposit(uint256 _epochId) public view returns (uint256) {
        FixedVaultEpoch memory epoch = epochInfo[_epochId];
        if (epoch.resolved) revert AlreadyResolved();
        if (epoch.deposits == epoch.maxNewDeposits) revert MaxCapacity();

        return epochInfo[_epochId].maxNewDeposits - epochInfo[_epochId].deposits;
    }

    ///////////////////////////// Internal Functions /////////////////////////////
    /// @dev Private implementation of transfer functions to reduce bytecode
    function _transfer(address _from, address _to, uint256 _amount) internal returns (bool) {
        _checkSharesBeingWithdrawn(_from, _amount);
        balanceOf[_from] -= _amount;

        // Cannot overflow because the sum of all user
        // balances can't exceed the max uint256 value.
        unchecked {
            balanceOf[_to] += _amount;
        }

        emit Transfer(_from, _to, _amount);

        return true;
    }

    /// @dev Check if the shares being withdrawn plus transfer amount is less than the balance
    function _checkSharesBeingWithdrawn(address _owner, uint256 _shares) internal view {
        if (_totalUserSharesBeingWithdrawn(_owner) + _shares > balanceOf[_owner]) revert BalanceExceeded();
    }

    /// @notice Checks if the user has pro-rata access to the deposit
    /// @dev Deducting shares being withdrawn so they can't be used in pro-rata rights
    /// @dev If user has no pro-rate revets otherwise calculates max pro-rata and checks if shares exceed this
    /// @dev Set maxProrata if 0 to avoid situation where new shares scale up pro-rata
    function _hasProRataAccess(uint256 _epochId, uint128 _amount, uint128 maxNewDeposits) internal {
        // Checking user has balance to access pro-rata deposit

        uint256 balance = balanceOf[msg.sender] - _totalUserSharesBeingWithdrawn(msg.sender);
        if (balance == 0) revert ZeroBalance();

        // Calculating the max prorata the user could have based on balance
        uint256 scalingFactor = 10 ** decimals;
        uint256 maxProRata = (maxNewDeposits * balance * scalingFactor / totalSupply) / scalingFactor;

        // Setting max proRata for the epoch if empty OR using previously set value
        ProRata memory curProRata = proRata[msg.sender][_epochId];
        if (curProRata.max == 0) curProRata.max = uint128(maxProRata);
        curProRata.current += _amount;
        if (curProRata.current > curProRata.max) revert ExceedProRata();
        proRata[msg.sender][_epochId] = curProRata;

        emit ProRataExercised(_epochId, msg.sender, curProRata.current, curProRata.max);
    }

    function _totalUserSharesBeingWithdrawn(address owner) private view returns (uint256 shares) {
        return totalUserWithdrawRequests[owner];
    }

    ///////////////////////////// Unimplemented Functions /////////////////////////////
    function mint(uint256, address) public pure override returns (uint256) {
        revert NotAllowed();
    }

    function redeem(uint256, address, address) public pure override returns (uint256) {
        revert NotAllowed();
    }

    function withdraw(uint256, address, address) public pure override returns (uint256) {
        revert NotAllowed();
    }
}


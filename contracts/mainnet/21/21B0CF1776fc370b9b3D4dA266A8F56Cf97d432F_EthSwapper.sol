pragma solidity ^0.8.15;

import {IERC20} from "@openzeppelin/contracts/token/ERC20/IERC20.sol";

import {ISwapRouter} from '@uniswap/v3-periphery/contracts/interfaces/ISwapRouter.sol';

interface IWeth is IERC20 {
    function withdrawTo(address to, uint256 amount) external;
}

/**
 * @title SourceTransferer
 * @notice Example source contract that updates a greeting on DestinationGreeter.
 */
contract EthSwapper {
  // The Connext contract on this domain
  ISwapRouter public immutable router;

  IWeth public immutable weth;

  constructor(address _router, address _weth) {
    router = ISwapRouter(_router);
    weth = IWeth(_weth);
  }

  // /** @notice Updates a greeting variable on the DestinationGreeter contract.
  //   * @param target Address of the DestinationGreeter contract.
  //   * @param destinationDomain The destination domain ID.
  //   * @param newGreeting New greeting to update to.
  //   * @param relayerFee The fee offered to relayers.
  //   */
  function swapToEth(
    address _asset,
    uint256 _amout,
    uint256 _minEthAmount,
    uint256 _fee,
    address _recipient
  ) external payable {
    IERC20(_asset).transferFrom(msg.sender, address(this), _amout);

    ISwapRouter.ExactInputSingleParams memory params = 
        ISwapRouter.ExactInputSingleParams({
            tokenIn: _asset,
            tokenOut: address(weth),
            fee: uint24(_fee),
            recipient: address(this),
            deadline: block.timestamp,
            amountIn: _amout,
            amountOutMinimum: _minEthAmount,
            sqrtPriceLimitX96: 0
        });

    uint256 wethAmount = router.exactInputSingle(params);
    weth.withdrawTo(_recipient, wethAmount);
  }
}
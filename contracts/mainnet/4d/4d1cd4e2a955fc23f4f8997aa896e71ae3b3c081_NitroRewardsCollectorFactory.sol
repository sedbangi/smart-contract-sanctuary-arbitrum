pragma solidity ^0.8.20;

/**
 * OpenZeppelin
 */
import {NitroRewardsCollector} from "./NitroRewardsCollector.sol";

contract NitroRewardsCollectorFactory {
    /// @notice address of Camelot Position Manager Contract
    address private immutable positionManager;
    /// @notice address of Allocation Manager contract
    address private immutable allocationManager;
    ///@notice track any given user's NitroRewardsCollector contract
    /// user -> nitro rewards collector contract, address(0) if DNE
    mapping(address => address) private nitroRewardsCollector;

    /// @notice array of all rewards collector addresses
    address[] public rewardsCollectors;

    /// @notice Send harvesting retention
    address private immutable treasury;

    address private xpLpStaking;
    address private zap;

    /*´:°•.°+.*•´.*:˚.°*.˚•´.°:°•.°•.*•´.*:˚.°*.˚•´.°:°•.°+.*•´.*:*/
    /*                        ERRORS                              */
    /*.•°:°.´+˚.*°.˚:*.´•*.+°.•°:´*.´•*.•°.•°:°.´:•˚°.*°.˚:*.´+°.•*/
    error CollectorExists(address);
    error Unauthorized(address);

    /*´:°•.°+.*•´.*:˚.°*.˚•´.°:°•.°•.*•´.*:˚.°*.˚•´.°:°•.°+.*•´.*:*/
    /*                        CONSTRUCTOR                         */
    /*.•°:°.´+˚.*°.˚:*.´•*.+°.•°:´*.´•*.•°.•°:°.´:•˚°.*°.˚:*.´+°.•*/
    constructor(address _manager, address _allocation, address _treasury) {
        positionManager = _manager;
        allocationManager = _allocation;
        treasury = _treasury;
    }

    /*´:°•.°+.*•´.*:˚.°*.˚•´.°:°•.°•.*•´.*:˚.°*.˚•´.°:°•.°+.*•´.*:*/
    /*                        EXTERNAL Methods                    */
    /*.•°:°.´+˚.*°.˚:*.´•*.+°.•°:´*.´•*.•°.•°:°.´:•˚°.*°.˚:*.´+°.•*/

    //kept for testing
    function getRewardsCollectors() external view returns (address[] memory) {
        return rewardsCollectors;
    }

    /**
     * @notice returns the user's rewards collector address or address(0) if DNE
     * @param _user the address to check for valid rewards collector
     */
    function getUserCollector(address _user) external view returns (address) {
        return nitroRewardsCollector[_user];
    }

    function setXPLpStaking(address _staking) external {
        if (msg.sender != positionManager) revert Unauthorized(msg.sender);
        xpLpStaking = _staking;
    }

    function setZap(address _zap) external {
        if (msg.sender != positionManager) revert Unauthorized(msg.sender);
        zap = _zap;
    }

    /**
     * @notice creates new NP rewards collector contract
     * @param _user the user we are creating the collector on behalf
     */
    function createCollector(address _user) external returns (address) {
        if (msg.sender != positionManager) revert Unauthorized(msg.sender);
        if (nitroRewardsCollector[_user] != address(0)) {
            revert CollectorExists(nitroRewardsCollector[_user]);
        }
        nitroRewardsCollector[_user] =
            address(new NitroRewardsCollector(positionManager, _user, allocationManager, treasury, xpLpStaking, zap));

        address collector = nitroRewardsCollector[_user];
        rewardsCollectors.push(collector);
        return collector;
    }
}


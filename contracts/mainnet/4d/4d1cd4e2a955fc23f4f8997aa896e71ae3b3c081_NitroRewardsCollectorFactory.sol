contract NitroRewardsCollector {
    /*´:°•.°+.*•´.*:˚.°*.˚•´.°:°•.°•.*•´.*:˚.°*.˚•´.°:°•.°+.*•´.*:*/
    /*                        STATE VARIABLES                     */
    /*.•°:°.´+˚.*°.˚:*.´•*.+°.•°:´*.´•*.•°.•°:°.´:•˚°.*°.˚:*.´+°.•*/

    /// @notice address of Camelot Position Manager contract
    address private immutable positionManager;
    /// @notice address of Allocation Manager contract
    address private immutable allocationManager;
    /// @notice address of LP Staker contract
    address private lpStaker;
    /// @notice the user this collector corresponds to
    address private immutable owner;
    /// @notice xGRAIL Arbitrum address
    address private constant xGRAIL = 0x3CAaE25Ee616f2C8E13C74dA0813402eae3F496b;

    address private constant GRAIL = 0x3d9907F9a368ad0a51Be60f7Da3b97cf940982D8;

    /// @notice Wrapped Ether on Arb
    address private constant WETH = 0x82aF49447D8a07e3bd95BD0d56f35241523fBab1;
    /// @notice used for ERC721 Receiver callback
    bytes4 private constant _ERC721_RECEIVED = 0x150b7a02;

    IIsekaiZap private zap;

    /// @notice Charged for Isekai services
    uint256 public retention;

    /// @notice Retention receiver
    address public treasury;

    event HarvestFromSpNft(address nftPool, uint256 tokenId, uint256 grailAmount, uint256 xGrailAmount);

    /*´:°•.°+.*•´.*:˚.°*.˚•´.°:°•.°•.*•´.*:˚.°*.˚•´.°:°•.°+.*•´.*:*/
    /*                        ERRORS                              */
    /*.•°:°.´+˚.*°.˚:*.´•*.+°.•°:´*.´•*.•°.•°:°.´:•˚°.*°.˚:*.´+°.•*/

    error LowLevelCallFailed(bytes reason);
    error InvalidCaller();

    /*´:°•.°+.*•´.*:˚.°*.˚•´.°:°•.°•.*•´.*:˚.°*.˚•´.°:°•.°+.*•´.*:*/
    /*                        MODIFIERS                           */
    /*.•°:°.´+˚.*°.˚:*.´•*.+°.•°:´*.´•*.•°.•°:°.´:•˚°.*°.˚:*.´+°.•*/

    /// @notice Allow only CPM contract to call
    modifier onlyPositionManager() {
        if (msg.sender != positionManager) revert(); //add errors
        _;
    }

    /*´:°•.°+.*•´.*:˚.°*.˚•´.°:°•.°•.*•´.*:˚.°*.˚•´.°:°•.°+.*•´.*:*/
    /*                        CONSTRUCTOR                         */
    /*.•°:°.´+˚.*°.˚:*.´•*.+°.•°:´*.´•*.•°.•°:°.´:•˚°.*°.˚:*.´+°.•*/
    constructor(
        address _manager,
        address _owner,
        address _allocationManager,
        address _treasury,
        address _lpStaker,
        address _zap
    ) {
        positionManager = _manager;
        owner = _owner;
        // retention = 10;
        allocationManager = _allocationManager;
        treasury = _treasury;
        lpStaker = _lpStaker;
        zap = IIsekaiZap(_zap);

        /// @notice give CPM contract approval to transfer xGRAIL and mint
        ///         user HOLY
        ERC20(xGRAIL).approve(allocationManager, type(uint256).max);
    }

    /*´:°•.°+.*•´.*:˚.°*.˚•´.°:°•.°•.*•´.*:˚.°*.˚•´.°:°•.°+.*•´.*:*/
    /*                        EXTERNAL Methods                    */
    /*.•°:°.´+˚.*°.˚:*.´•*.+°.•°:´*.´•*.•°.•°:°.´:•˚°.*°.˚:*.´+°.•*/

    /**
     * @notice used to receive spNFTs to deposit into respective Nitro Pools
     */
    function onERC721Received(address, address, uint256, bytes calldata) external pure returns (bytes4) {
        return _ERC721_RECEIVED;
    }

    /**
     * @notice deposit spNFT into its Nitro Pool (if exists)
     * @param _nftPool spNFT address
     * @param _nitroPool address of nitro pool
     * @param _tokenId spNFT tokenId
     */
    function deposit(address _nftPool, address _nitroPool, uint256 _tokenId) external onlyPositionManager {
        ERC721(_nftPool).safeTransferFrom(address(this), _nitroPool, _tokenId);
    }

    /**
     * @notice harvest nitro pool rewards for user
     * @param _nitroPool address of nitro pool
     */
    function harvest(address _nitroPool) external onlyPositionManager returns (uint256 _xGRAILAmount) {
        ICamelotNitroPool(_nitroPool).harvest();

        /// @dev harvest rewards
        _xGRAILAmount = _handleHarvest(_nitroPool);
    }

    function harvestFromSpNft(address _nftPool, uint256 _tokenId) external {
        if (msg.sender != owner) {
            revert InvalidCaller();
        }

        ICamelotNFTPool(_nftPool).harvestPositionTo(_tokenId, address(this));

        uint256 grailReceived = ERC20(GRAIL).balanceOf(address(this));
        uint256 xGrailReceived = ERC20(xGRAIL).balanceOf(address(this));

        SafeTransferLib.safeTransfer(ERC20(GRAIL), owner, grailReceived);

        emit HarvestFromSpNft(_nftPool, _tokenId, grailReceived, xGrailReceived);
    }

    function onNFTHarvest(address, address, uint256 _tokenId, uint256 _grailAmount, uint256 _xGrailAmount)
        external
        pure
        returns (bool)
    {
        return true;
    }

    /**
     * @notice migrate from
     */
    function migrate(address _nftPool, address _oldNitroPool, address _newNitroPool, uint256 _tokenId)
        external
        onlyPositionManager
    {
        // Withdraw from old pool
        ICamelotNitroPool(_oldNitroPool).withdraw(_tokenId);
        // Deposit into new pool
        ERC721(_nftPool).safeTransferFrom(address(this), _newNitroPool, _tokenId);
    }

    /**
     * @notice withdraw user spNFT from NP and send it back to CPM contract
     * @param _nftPool spNFT address
     * @param _nitroPool address of nitro pool
     * @param _tokenId spNFT tokenId
     */
    function withdraw(address _nftPool, address _nitroPool, uint256 _tokenId) external {
        if (msg.sender != positionManager && msg.sender != lpStaker) revert InvalidCaller();
        ICamelotNitroPool(_nitroPool).withdraw(_tokenId);

        /// @notice harvests rewards
        _handleHarvest(_nitroPool);
        ERC721(_nftPool).safeTransferFrom(address(this), positionManager, _tokenId);
    }

    /*´:°•.°+.*•´.*:˚.°*.˚•´.°:°•.°•.*•´.*:˚.°*.˚•´.°:°•.°+.*•´.*:*/
    /*                        EXTERNAL Methods                    */
    /*.•°:°.´+˚.*°.˚:*.´•*.+°.•°:´*.´•*.•°.•°:°.´:•˚°.*°.˚:*.´+°.•*/

    /**
     * @notice abstract harvest logic to send NP rewards to user
     * @param _nitroPool address of nitro pool
     */
    function _handleHarvest(address _nitroPool) private returns (uint256 _xGRAILAmount) {
        (address rewardsToken1,,,) = ICamelotNitroPool(_nitroPool).rewardsToken1();
        (address rewardsToken2,,,) = ICamelotNitroPool(_nitroPool).rewardsToken2();

        if (rewardsToken1 == xGRAIL || rewardsToken2 == xGRAIL) {
            _xGRAILAmount = ERC20(xGRAIL).balanceOf(address(this));
        }

        IWhitelistController.NitroPoolInfo memory routers;

        uint256 etherReceived;

        if (rewardsToken1 != xGRAIL) {
            uint256 amountReceived = ERC20(rewardsToken1).balanceOf(address(this));

            // Calc charge
            uint256 amountReceivedRetention = (retention * amountReceived) / 100;

            // If retention is bigger than 0, consolidate into ether and send to treasury
            if (amountReceivedRetention > 0) {
                ERC20(rewardsToken1).approve(address(zap), amountReceivedRetention);

                rewardsToken1 == WETH
                    ? etherReceived += amountReceivedRetention
                    : etherReceived +=
                        zap.swapSingle(rewardsToken1, WETH, amountReceivedRetention, routers.routerTypeToken1);
            }

            // Send whats left after retention to user
            SafeTransferLib.safeTransfer(ERC20(rewardsToken1), owner, amountReceived - amountReceivedRetention);
        }

        if (rewardsToken2 != address(0) && rewardsToken2 != xGRAIL) {
            uint256 amountReceived = ERC20(rewardsToken2).balanceOf(address(this));

            // Calc charge
            uint256 amountReceivedRetention = (retention * amountReceived) / 100;

            // If retention is bigger than 0, consolidate into ether and send to treasury
            if (amountReceivedRetention > 0) {
                ERC20(rewardsToken2).approve(address(zap), amountReceivedRetention);

                rewardsToken2 == WETH
                    ? etherReceived += amountReceivedRetention
                    : etherReceived +=
                        zap.swapSingle(rewardsToken2, WETH, amountReceivedRetention, routers.routerTypeToken2);
            }

            // Send whats left after retention to user
            SafeTransferLib.safeTransfer(ERC20(rewardsToken2), owner, amountReceived - amountReceivedRetention);
        }

        // In the end, send Eth to treasury
        SafeTransferLib.safeTransfer(ERC20(WETH), treasury, etherReceived);
    }
}


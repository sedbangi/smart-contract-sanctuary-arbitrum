contract WhitelistPaymaster is IWhitelistPaymaster, BasePaymasterUpgradeable  {
    mapping(address => bool) public senderWhitelist;
    mapping(address => bool) public targetWhitelist;

    function initialize(IEntryPoint _entryPoint, address _owner)
    public initializer {
        __BasePaymasterUpgradeable_init(_entryPoint, _owner);
    }

    function whitelistSender(address sender) external override onlyOwner {
        senderWhitelist[sender] = true;
        emit WhitelistedSenderAddressAdded(sender);
    }
    function unwhitelistSender(address sender) external override onlyOwner {
        senderWhitelist[sender] = false;
        emit WhitelistedSenderAddressRemoved(sender);
    }

    function whitelistTarget(address target) external override onlyOwner {
        targetWhitelist[target] = true;
        emit WhitelistedTargetAddressAdded(target);
    }
    function unwhitelistTarget(address target) external override onlyOwner {
        senderWhitelist[target] = false;
        emit WhitelistedTargetAddressRemoved(target);
    }

    function isWhitelistedTarget(address target) external view override returns (bool) {
        return targetWhitelist[target];
    }

    function isWhitelistedSender(address sender) external view override returns (bool) {
        return senderWhitelist[sender];
    }

    function slice(bytes memory data, uint256 start, uint256 len) private pure returns (bytes memory) {
        bytes memory b = new bytes(len);

        for (uint256 i = 0; i < len; i++) {
            b[i] = data[i + start];
        }

        return b;
    }

    function _getTargetFromCallData(bytes calldata data) private pure returns (address) {
        if (data.length < 4) {
            revert WrongCallData();
        }

        // Decode the function parameters
        (address to, , ) = abi.decode(slice(data, 4, data.length - 4), (address, uint256, bytes));

        // Check that the decoded address is valid
        if (to == address(0)) {
            revert WrongTarget();
        }

        return to;
    }

    function validatePaymasterUserOp(UserOperation calldata userOp, bytes32 /*userOpHash*/, uint256 requiredPreFund)
    external view override returns (bytes memory context, uint256 validationData)
    {
        address target = _getTargetFromCallData(userOp.callData);

        require(userOp.sender.code.length > 0, "Sender not existed");

        if (targetWhitelist[target]) {
            return (new bytes(0), 0);
        }
        if (senderWhitelist[userOp.sender]) {
            return (new bytes(0), 0);
        }

        revert SenderTargetNotWhitelisted(target);

    }


import {IERC20} from "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import {IUniswapFactory, IUniswapV2Pair, IUniswapRouter02} from "src/interfaces/IUniswapLibrary.sol";
import {Ownable} from "@openzeppelin/contracts/access/Ownable.sol";

contract UntaxedLiquidity is Ownable {
    address public immutable uniswapV2Pair;
    IUniswapRouter02 public immutable uniswapV2Router;
    IERC20 public immutable token;

    constructor(address _uniswapV2Pair) Ownable(msg.sender) {
        uniswapV2Pair = _uniswapV2Pair;
        uniswapV2Router = IUniswapRouter02(0x4752ba5DBc23f44D87826276BF6Fd6b1C372aD24);
        token = IERC20(IUniswapV2Pair(uniswapV2Pair).token1());
    }

    function addLiquidityETHUntaxed(uint256 _tokenAmount) external payable {
        (uint112 ethReserve, uint112 tokenReserve,) = IUniswapV2Pair(uniswapV2Pair).getReserves();
        if (ethReserve > 0 && tokenReserve > 0) {
            require(msg.value >= _tokenAmount * ethReserve / tokenReserve, "Not enough ETH sent");
        }

        uint256 ethBalance = address(this).balance;

        token.transferFrom(msg.sender, address(this), _tokenAmount);

        _addLiquidity(_tokenAmount, msg.value, msg.sender);

        if (address(this).balance > ethBalance - msg.value) {
            (bool success,) = msg.sender.call{value: address(this).balance - ethBalance}("");
            require(success, "ETH transfer failed");
        }
    }

    function _addLiquidity(uint256 _tokenAmount, uint256 _ethAmount, address _to) private {
        token.approve(address(uniswapV2Router), _tokenAmount);
        uniswapV2Router.addLiquidityETH{value: _ethAmount}(address(token), _tokenAmount, 0, 0, _to, block.timestamp);
    }

    function removeLiquidityETHUntaxed(uint256 _liquidity) external {
        IERC20 pair = IERC20(uniswapV2Pair);
        uint256 balanceEthBefore = address(this).balance;
        uint256 balanceTokenBefore = token.balanceOf(address(this));

        pair.transferFrom(msg.sender, address(this), _liquidity);
        pair.approve(address(uniswapV2Router), _liquidity);
        uniswapV2Router.removeLiquidityETHSupportingFeeOnTransferTokens(
            address(token), _liquidity, 0, 0, address(this), block.timestamp
        );

        if (address(this).balance > balanceEthBefore) {
            (bool success,) = msg.sender.call{value: address(this).balance - balanceEthBefore}("");
            require(success, "ETH transfer failed");
        }

        if (token.balanceOf(address(this)) > balanceTokenBefore) {
            token.transfer(msg.sender, token.balanceOf(address(this)) - balanceTokenBefore);
        }
    }

    function rescueTokens(address _token, uint256 _amount, bool _native) external onlyOwner {
        IERC20(_token).transfer(msg.sender, _amount);
        if (_native) {
            (bool success,) = msg.sender.call{value: address(this).balance}("");
            require(success, "ETH transfer failed");
        }
    }

    receive() external payable {}
}


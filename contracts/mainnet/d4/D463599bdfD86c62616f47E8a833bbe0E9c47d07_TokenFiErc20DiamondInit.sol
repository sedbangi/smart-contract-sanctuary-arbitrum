import { IERC20Internal } from "@solidstate/contracts/interfaces/IERC20Internal.sol";
import { LibTokenFiErc20Storage } from "../libraries/TokenFiErc20Storage.sol";
import { LibTokenLauncherConsts } from "../libraries/TokenLauncherConsts.sol";
import { LibCommonConsts } from "../../common/libraries/CommonConsts.sol";
import { ITokenFiErc20 } from "../interfaces/ITokenFiErc20.sol";

contract TokenFiErc20DiamondInit is AccessControl {
    using EnumerableSet for EnumerableSet.AddressSet;

    function init(ITokenFiErc20.TokenInfo memory tokenInfo) external {
        require(tokenInfo.owner != address(0), "TokenFiErc20: owner cannot be Address Zero");
        require(tokenInfo.maxSupply >= tokenInfo.initialSupply, "TokenFiErc20: initialSupply cannot be greater than maxSupply");
        uint256 maxFee = tokenInfo.fees.transferFee.percentage +
            tokenInfo.fees.burn.percentage +
            tokenInfo.fees.reflection.percentage +
            tokenInfo.fees.buyback.percentage;
        require(maxFee <= LibCommonConsts.MULTIPLIER_BASIS, "TokenFiErc20: fees sum must be less than 100%");
        require(tokenInfo.treasury != address(0), "TokenFiErc20: treasury cannot be Address Zero");

        LibTokenFiErc20Storage.DiamondStorage storage ds = LibTokenFiErc20Storage.diamondStorage();
        ds.tokenInfo = tokenInfo;
        ds.tokenLauncher = msg.sender;
        if (tokenInfo.fees.buyback.percentage > 0) {
            require(
                tokenInfo.buybackDetails.liquidityBasisPoints <= LibCommonConsts.MULTIPLIER_BASIS,
                "TokenFiErc20: liquidityBasisPoints must be less than 100%"
            );
            require(
                tokenInfo.buybackDetails.priceImpactBasisPoints <= LibCommonConsts.MULTIPLIER_BASIS,
                "TokenFiErc20: priceImpactBasisPoints must be less than 100%"
            );
        }

        // set initial total reflection and mint all token to the token address if it's a reflection token
        if (tokenInfo.fees.reflection.percentage > 0) {
            ds.reflectionInfo.totalReflection.tTotal = tokenInfo.maxSupply;
            ds.reflectionInfo.totalReflection.rTotal = (LibTokenLauncherConsts.REFLECTION_MAX -
                (LibTokenLauncherConsts.REFLECTION_MAX % ds.reflectionInfo.totalReflection.tTotal));
            ds.reflectionInfo.tOwned[address(this)] = ds.reflectionInfo.totalReflection.tTotal;
            ds.reflectionInfo.rOwned[address(this)] = ds.reflectionInfo.totalReflection.rTotal;

            emit IERC20Internal.Transfer(address(0), address(this), tokenInfo.maxSupply);
        }

        // Exempt the BuybackHadler (in this case it is address(this) as buyback handler is a facet) to avoid the recursive transfers
        ds.exemptedFromTax.add(address(this));

        // msg.sender is tokenLauncher
        _grantRole(AccessControlStorage.DEFAULT_ADMIN_ROLE, msg.sender);
        _grantRole(AccessControlStorage.DEFAULT_ADMIN_ROLE, tokenInfo.owner);
        _grantRole(LibTokenLauncherConsts.FEE_MANAGER_ROLE, msg.sender);
        _grantRole(LibTokenLauncherConsts.FEE_MANAGER_ROLE, tokenInfo.owner);
    }
}
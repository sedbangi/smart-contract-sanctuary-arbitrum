import "./libraries/SafeERC20.sol";
import "./libraries/SafeCast.sol";
import "./libraries/SafeMath.sol";
import "./libraries/SignedSafeMath.sol";

/**
 * @title NR MasterChef of gNR.
 * distribute NR tokens to gNR holders
 *
 *
 * References:
 *
 * - https://github.com/sushiswap/sushiswap/blob/canary/contracts/MasterChefV2.sol
 */
contract PLXDistributor {
    using SafeMath for uint256;
    using SignedSafeMath for int256;
    using SafeCast for uint256;
    using SafeCast for int256;
    using SafeERC20 for IERC20;

    uint256 public totalPlxDistribute;
    // 2 years
    uint256 stakingDistributePeriod = 365 days;
    uint256 ACC_PLX_PRECISION = 1e12;
    address PLX;
    address owner;
    address gPLX;
    uint256 stakingStartTimeStamp;
    AirdropInfo public airdropInfo;

    struct AirdropInfo {
        uint256 accPLXPerShare;
        uint256 lastRewardTimeStamp;
    }

    struct UserInfo {
        int256 rewardDebt;
        uint256 totalClaimedPLX;
    }

    mapping(address => UserInfo) public userInfo;
    event Set(uint256 newAmount);
    event Add(uint256 amount, uint256 totalAmount);

    constructor() {
        owner = msg.sender;
    }

    function init(
        address _PLX,
        address _gPLX,
        uint256 _stakingStartTime
    ) external {
        require(msg.sender == owner);
        PLX = _PLX;
        gPLX = _gPLX;
        stakingStartTimeStamp = _stakingStartTime;
    }

    function setPlxDistribute(uint256 amount) external {
        require(msg.sender == owner);
        totalPlxDistribute = amount;
        emit Set(amount);
    }

    function addPlxDistribute(uint256 addAmount) external {
        require(msg.sender == owner);
        IERC20(PLX).safeTransferFrom(owner, address(this), addAmount);
        totalPlxDistribute += addAmount;
        emit Add(addAmount, totalPlxDistribute);
    }

    function plxPerSecondReward() public view returns (uint256) {
        uint256 perSecond = totalPlxDistribute / stakingDistributePeriod;
        uint256 plxReward = 0;
        if (airdropInfo.lastRewardTimeStamp < stakingStartTimeStamp) {
            plxReward = (block.timestamp - stakingStartTimeStamp) * perSecond;
        } else {
            plxReward =
                (block.timestamp - airdropInfo.lastRewardTimeStamp) *
                perSecond;
        }
        return plxReward;
    }

    function deposit(address user, uint256 amount) external {
        require(msg.sender == gPLX);
        harvest(user);
        userInfo[user].rewardDebt = userInfo[user].rewardDebt.add(
            int256(amount.mul(airdropInfo.accPLXPerShare) / ACC_PLX_PRECISION)
        );
    }

    function withdraw(address user, uint256 amount) external {
        require(msg.sender == gPLX || msg.sender == owner);
        harvest(user);
        userInfo[user].rewardDebt = userInfo[user].rewardDebt.sub(
            int256(amount.mul(airdropInfo.accPLXPerShare) / ACC_PLX_PRECISION)
        );
    }

    function pendingPLX(
        address _user
    ) public view returns (uint256 pendingAmount) {
        uint256 accPLXPerShare = airdropInfo.accPLXPerShare;
        uint256 gPLXSupply = IERC20(gPLX).totalSupply();
        if (
            block.timestamp > airdropInfo.lastRewardTimeStamp && gPLXSupply != 0
        ) {
            uint256 plxReward = plxPerSecondReward();
            if (plxReward != 0) {
                accPLXPerShare = accPLXPerShare.add(
                    plxReward.mul(ACC_PLX_PRECISION) / gPLXSupply
                );
            }
        }

        pendingAmount = int256(
            IERC20(gPLX).balanceOf(_user).mul(accPLXPerShare) /
                ACC_PLX_PRECISION
        ).sub(userInfo[_user].rewardDebt).toUint256();
    }

    function updateAirdrop() public {
        if (block.timestamp > airdropInfo.lastRewardTimeStamp) {
            uint256 gPLXSupply = IERC20(gPLX).totalSupply();
            if (gPLXSupply > 0) {
                uint256 plxReward = plxPerSecondReward();

                if (plxReward != 0) {
                    airdropInfo.accPLXPerShare = airdropInfo.accPLXPerShare.add(
                        (plxReward.mul(ACC_PLX_PRECISION) / gPLXSupply)
                    );
                }
            }
            airdropInfo.lastRewardTimeStamp = block.timestamp;
        }
    }

    function harvest(address user) public {
        require(msg.sender == gPLX);
        updateAirdrop();
        AirdropInfo memory airdrop = airdropInfo;
        int256 accmulatedPLX = int256(
            IERC20(gPLX).balanceOf(user).mul(airdrop.accPLXPerShare) /
                ACC_PLX_PRECISION
        );
        uint256 _pendingPLX = accmulatedPLX
            .sub(userInfo[user].rewardDebt)
            .toUint256();
        userInfo[user].rewardDebt = accmulatedPLX;
        userInfo[user].totalClaimedPLX =
            userInfo[user].totalClaimedPLX +
            _pendingPLX;
        if (_pendingPLX >= 0) {
            _safePLXTransfer(user, _pendingPLX);
        }
    }

    function _safePLXTransfer(address user, uint256 amount) internal {
        uint256 plxBalance = IERC20(PLX).balanceOf(address(this));
        if (amount > plxBalance) {
            IERC20(PLX).transfer(user, plxBalance);
        } else {
            IERC20(PLX).transfer(user, amount);
        }
    }

    function emergencyWithdrawal(uint256 amount) external {
        require(msg.sender == owner);
        _safePLXTransfer(owner, amount);
    }

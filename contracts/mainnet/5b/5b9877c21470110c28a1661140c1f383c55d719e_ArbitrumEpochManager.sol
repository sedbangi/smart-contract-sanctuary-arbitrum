contract ArbitrumEpochManager is UpgradeableOperable {
    using SafeTransferLib for ERC20;

    /// @notice Tokens we are emitting in our NitroPool
    struct TokensIncentivizing {
        bool whitelisted;
        address token1;
        address token2;
    }

    struct NitroAndStatus {
        address nitroPool;
        bool status;
    }

    address private constant WETH = 0x82aF49447D8a07e3bd95BD0d56f35241523fBab1;

    /// @dev `forge selectors ls ArbitrumEpochManager` to get selectors
    uint256 private constant _RECEIVED_REWARDS_EVENT_SIGNATURE =
        0xf04ab9fda49f140cdf86dcb9251eea570dadfcc2eb758f5367f81611836cbb27;

    /// @dev `forge selectors ls ArbitrumEpochManager` to get selectors
    uint256 private constant _WRAP_FAIL = 0xad570def;

    /// @dev `forge selectors ls ArbitrumEpochManager` to get selectors
    uint256 private constant _AMOUNT_TOO_LOW = 0x1fbaba35;

    /// @dev `forge selectors ls ArbitrumEpochManager` to get selectors
    uint256 private constant _TRANSFER_FAILED = 0x90b8ec18;

    /// @dev Address of NitroPool -> If its whitelisted + Tokens we are incentivizing pool with
    mapping(address => TokensIncentivizing) public whitelistedNitroPools;

    /// @notice Centralized way to get all treasuries even if they are updated
    ITreasuryRegistry public treasuryRegistry;

    /// @notice NitroPool epochs, used for internal accountability and UI/dashboards rewards monitoring
    mapping(address => uint256) public nitroPoolEpoch;

    /// @notice NitroPool -> block.timestamp where rewards have began
    mapping(address => uint256) private _harvestStartTimes;

    /// @notice Duration of NitroPool rewards, default is 14 days
    uint256 public nitroPoolDuration;

    /// @notice Contracts that contain logic to deal with our yield bearing tokens
    mapping(address => bool) public weapons;

    /// @dev 100%
    uint256 public constant BASIS_POINTS = 1e12;

    /// @notice Charged just before adding rewards to NitroPool
    uint256 public retentionNitroPoolRewards;

    NitroAndStatus[] private _nitroAndStatus;

    /*´:°•.°+.*•´.*:˚.°*.˚•´.°:°•.°•.*•´.*:˚.°*.˚•´.°:°•.°+.*•´.*:*/
    /*                        EVENTS                              */
    /*.•°:°.´+˚.*°.˚:*.´•*.+°.•°:´*.´•*.•°.•°:°.´:•˚°.*°.˚:*.´+°.•*/

    event ReceivedRewards(uint256 amountToEpochManager, uint256 amountRetained);
    event NewEpoch(uint256 indexed epoch, address indexed nitroPool, uint256 amountToken1, uint256 amountToken2);
    event WeaponCalled(address indexed weapon, bytes data);
    event AddRewardsToNitroPool(address indexed nitroPool, uint256 amountToken1, uint256 amountToken2);
    event PublishNitroPool(address indexed nitroPool);
    event WithdrawRewards(address indexed nitroPool, uint256 amountToken1, uint256 amountToken2);
    event SetWhitelistNitroPool(address indexed nitroPool, INitroPool.WhitelistStatus[] status);
    event SetRewardsToken2(address indexed nitroPool, IERC20 rewardsToken2);
    event SetNitroRewards(address indexed nitroPool, uint256 harvestStartTime, TokensIncentivizing nitroPoolInfo);
    event SetNitroPoolEndDate(address indexed nitroPool, uint256 newEndTime);

    /*´:°•.°+.*•´.*:˚.°*.˚•´.°:°•.°•.*•´.*:˚.°*.˚•´.°:°•.°+.*•´.*:*/
    /*                        ERRORS                              */
    /*.•°:°.´+˚.*°.˚:*.´•*.+°.•°:´*.´•*.•°.•°:°.´:•˚°.*°.˚:*.´+°.•*/

    error WrapFail();
    error AmountTooLow();
    error AmountTooHigh();
    error NotWhiteslited();
    error TransferFailed();
    error WeaponTransactionFailed();

    /*´:°•.°+.*•´.*:˚.°*.˚•´.°:°•.°•.*•´.*:˚.°*.˚•´.°:°•.°+.*•´.*:*/
    /*         Yield Bearing Tokens Management Methods            */
    /*.•°:°.´+˚.*°.˚:*.´•*.+°.•°:´*.´•*.•°.•°:°.´:•˚°.*°.˚:*.´+°.•*/

    function approveToWeapon(address _weapon, address[] calldata _tokens, uint256[] calldata _amounts)
        external
        onlyGovernor
    {
        if (!weapons[_weapon]) revert NotWhiteslited();

        for (uint256 i = 0; i < _tokens.length; i++) {
            ERC20(_tokens[i]).safeApprove(_weapon, _amounts[i]);
        }
    }

    function callWeapon(bytes calldata _data, address _weapon) external onlyOperator {
        if (!weapons[_weapon]) revert NotWhiteslited();

        (bool success,) = _weapon.call(_data);

        if (!success) revert WeaponTransactionFailed();

        emit WeaponCalled(_weapon, _data);
    }

    function delegatecallWeapon(bytes calldata _data, address _weapon) external onlyOperator {
        if (!weapons[_weapon]) revert NotWhiteslited();

        (bool success,) = _weapon.delegatecall(_data);

        if (!success) revert WeaponTransactionFailed();

        emit WeaponCalled(_weapon, _data);
    }

    /*´:°•.°+.*•´.*:˚.°*.˚•´.°:°•.°•.*•´.*:˚.°*.˚•´.°:°•.°+.*•´.*:*/
    /*              NitroPool Management Methods                  */
    /*.•°:°.´+˚.*°.˚:*.´•*.+°.•°:´*.´•*.•°.•°:°.´:•˚°.*°.˚:*.´+°.•*/

    function init(address _treasuryRegistry, address _xpEthNitroPool, TokensIncentivizing calldata _nitroPoolInfo)
        external
        initializer
    {
        __Governable_init(msg.sender);

        treasuryRegistry = ITreasuryRegistry(_treasuryRegistry);
        whitelistedNitroPools[_xpEthNitroPool] = _nitroPoolInfo;

        _nitroAndStatus.push(NitroAndStatus(_xpEthNitroPool, true));

        nitroPoolDuration = 14 days;

        retentionNitroPoolRewards = 42_000_000_000;
    }

    /**
     * @notice Callable by keeper - Add rewards for the next epoch and increase endDate
     * @param _nitroPool Address of the NitroPool that we are adding rewards and increasing endDate
     * @dev Emits NewEpoch event containing the amount of rewards added of both tokens
     */
    function newEpoch(address _nitroPool) external onlyOperator {
        if (!whitelistedNitroPools[_nitroPool].whitelisted) {
            revert NotWhiteslited();
        }

        uint256 currentEpoch = nitroPoolEpoch[_nitroPool];

        uint256 amountToken1 = IERC20(whitelistedNitroPools[_nitroPool].token1).balanceOf(address(this));
        uint256 amountToken2;

        if (whitelistedNitroPools[_nitroPool].token2 == address(0)) {
            _addRewardsToNitroPool(_nitroPool, amountToken1, 0);
        } else {
            amountToken2 = IERC20(whitelistedNitroPools[_nitroPool].token2).balanceOf(address(this));

            _addRewardsToNitroPool(_nitroPool, amountToken1, amountToken2);
        }

        _setNitroPoolEndDate(_nitroPool, block.timestamp + nitroPoolDuration);

        emit NewEpoch(currentEpoch, _nitroPool, amountToken1, amountToken2);

        nitroPoolEpoch[_nitroPool] = currentEpoch + 1;
    }

    /// @dev Increase rewards for NitroPool, we made the approvals in `setNitroPoolRewards` and also in the `init`
    function addRewardsToNitroPool(address _nitroPool, uint256 _amount1, uint256 _amount2) external onlyOperator {
        if (!whitelistedNitroPools[_nitroPool].whitelisted) {
            revert NotWhiteslited();
        }

        _addRewardsToNitroPool(_nitroPool, _amount1, _amount2);

        emit AddRewardsToNitroPool(_nitroPool, _amount1, _amount2);
    }

    /// @dev After calling this we wont be able to perform a lot of functions
    function publishNitroPool(address _nitroPool) external onlyGovernor {
        INitroPool(_nitroPool).publish();

        emit PublishNitroPool(_nitroPool);
    }

    /// @dev Can only call before NitroPool is published, removes emissions
    function withdrawRewards(address _nitroPool, uint256 _amountToken1, uint256 _amountToken2) external onlyGovernor {
        INitroPool(_nitroPool).withdrawRewards(_amountToken1, _amountToken2);

        emit WithdrawRewards(_nitroPool, _amountToken1, _amountToken2);
    }

    function setWhitelistNitroPool(address _nitroPool, INitroPool.WhitelistStatus[] calldata _status)
        external
        onlyGovernor
    {
        INitroPool(_nitroPool).setWhitelist(_status);

        emit SetWhitelistNitroPool(_nitroPool, _status);
    }

    /// @dev Can only call before NitroPool is published, updates second token being emitted
    function setRewardsToken2(address _nitroPool, IERC20 rewardsToken2_) external onlyGovernor {
        INitroPool(_nitroPool).setRewardsToken2(rewardsToken2_);

        emit SetRewardsToken2(_nitroPool, rewardsToken2_);
    }

    /// @dev Add new NitroPool under our management or remove one
    function setNitroPoolRewards(
        address _nitroPool,
        uint256 _harvestStartTime,
        TokensIncentivizing calldata _nitroPoolInfo
    ) external onlyGovernor {
        if (_nitroPoolInfo.whitelisted) {
            ERC20(_nitroPoolInfo.token1).safeApprove(_nitroPool, type(uint256).max);

            if (_nitroPoolInfo.token2 != address(0)) {
                ERC20(_nitroPoolInfo.token2).safeApprove(_nitroPool, type(uint256).max);
            }

            whitelistedNitroPools[_nitroPool] = _nitroPoolInfo;

            _harvestStartTimes[_nitroPool] = _harvestStartTime;

            // Find if NitroPool is already in the array of NitroPools and update it
            // OOG here should never be a problem
            for (uint256 i = 0; i < _nitroAndStatus.length; i++) {
                if (_nitroAndStatus[i].nitroPool == _nitroPool) {
                    _nitroAndStatus[i].status = true;

                    return;
                }
            }

            _nitroAndStatus.push(NitroAndStatus(_nitroPool, true));

            return;
        }

        // If whitelisted param of the `TokensIncentivizing` struct is false, we remove the NitroPool from the mapping
        delete whitelistedNitroPools[_nitroPool];

        // Reaching here means the nitroPool has been added before to this array
        // Find if nitroPool is already in the array of NitroPools and update it
        // OOG here should never be a problem
        for (uint256 i = 0; i < _nitroAndStatus.length; i++) {
            if (_nitroAndStatus[i].nitroPool == _nitroPool) {
                _nitroAndStatus[i].status = false;

                return;
            }
        }

        emit SetNitroRewards(_nitroPool, _harvestStartTime, _nitroPoolInfo);
    }

    /// @dev Extend the duration of the NitroPool
    function setNitroPoolEndDate(address _nitroPool, uint256 _newEndTime) external onlyOperator {
        // Need to set last 2 params to 0 since they can be only updated before pool is published
        _setNitroPoolEndDate(_nitroPool, _newEndTime);

        emit SetNitroPoolEndDate(_nitroPool, _newEndTime);
    }

    function rescueStuckErc20(address _token, uint256 _amount) external onlyGovernor {
        ERC20(_token).safeTransfer(msg.sender, _amount);
    }

    function rescueStuckEther(uint256 _amount) external onlyGovernor {
        (bool s,) = payable(msg.sender).call{value: _amount}("");

        if (!s) revert TransferFailed();
    }

    function setNitroPoolOwner(address _nitroPool, address _newOwner) external onlyGovernor {
        INitroPool(_nitroPool).transferOwnership(_newOwner);
    }

    function setNitroPoolRequirements(
        address _nitroPool,
        uint256 lockDurationReq_,
        uint256 lockEndReq_,
        uint256 depositAmountReq_,
        bool whitelist_
    ) external onlyGovernor {
        INitroPool(_nitroPool).setRequirements(lockDurationReq_, lockEndReq_, depositAmountReq_, whitelist_);
    }

    function setNitroPoolDuration(uint256 _newDuration) external onlyGovernor {
        if (_newDuration == 0) revert AmountTooLow();

        nitroPoolDuration = _newDuration;
    }

    function setRetentionNitroPoolRewards(uint256 _retentionNitroPoolRewards) external onlyGovernor {
        if (_retentionNitroPoolRewards > BASIS_POINTS) revert AmountTooHigh();

        retentionNitroPoolRewards = _retentionNitroPoolRewards;
    }

    function setWeaponStatus(address _weapon, bool _status) external onlyGovernor {
        weapons[_weapon] = _status;
    }

    /// @dev We can set how much gas we are receiving from transfers at
    /// https://stargateprotocol.gitbook.io/stargate/v/user-docs/stargate-features/transfer#native-gas-delivery-transfer-to-destination-network
    /// This entire flow should cost 101k gas
    receive() external payable {
        address WETH_ADDRESS = address(WETH);

        assembly {
            // Wrap the remaining amount (90% of received amount) to WETH
            let result := call(gas(), WETH_ADDRESS, callvalue(), 0x00, 0x00, 0x00, 0x00)

            // If the wrapping process fails, revert the transaction with an error
            if iszero(result) {
                mstore(0x00, _WRAP_FAIL)
                revert(0x00, 0x20)
            }

            // Prepare data for the ReceivedRewards event
            mstore(0x00, callvalue())

            // Emit the ReceivedRewards event with the prepared data
            log1(0x00, 0x20, _RECEIVED_REWARDS_EVENT_SIGNATURE)
        }
    }

    /**
     * @notice Gets whitelisted nitropools, not meant to be used onchain
     */
    function getNitroPools() external view returns (NitroAndStatus[] memory) {
        return _nitroAndStatus;
    }

    /*´:°•.°+.*•´.*:˚.°*.˚•´.°:°•.°•.*•´.*:˚.°*.˚•´.°:°•.°+.*•´.*:*/
    /*                        PRIVATE Methods                     */
    /*.•°:°.´+˚.*°.˚:*.´•*.+°.•°:´*.´•*.•°.•°:°.´:•˚°.*°.˚:*.´+°.•*/

    function _addRewardsToNitroPool(address _nitroPool, uint256 _amount1, uint256 _amount2) private {
        uint256 retention = (_amount1 * retentionNitroPoolRewards) / BASIS_POINTS;

        address incentiveCollector = treasuryRegistry.getTreasury(ITreasuryRegistry.Treasuries.IncentiveCollector);

        if (retention > 0) {
            _amount1 -= retention;

            ERC20(whitelistedNitroPools[_nitroPool].token1).safeTransfer(incentiveCollector, retention);
        }

        if (_amount2 > 0) {
            retention = (_amount2 * retentionNitroPoolRewards) / BASIS_POINTS;

            if (retention > 0) {
                _amount2 -= retention;

                ERC20(whitelistedNitroPools[_nitroPool].token2).safeTransfer(incentiveCollector, retention);
            }
        }

        INitroPool(_nitroPool).addRewards(_amount1, _amount2);
    }

    function _setNitroPoolEndDate(address _nitroPool, uint256 _newEndTime) private {
        // Upon NitroPool creation, Camelot defaults harvestStartTime as the block.timestamp we chose as start of rewards
        INitroPool(_nitroPool).setDateSettings(_newEndTime, _harvestStartTimes[_nitroPool], 0);
    }
}


pragma solidity ^0.8.20;

import {ILendingPool} from "./interfaces/ILendingPool.sol";
import {OwnableUpgradeable} from "@openzeppelin/contracts-upgradeable/access/OwnableUpgradeable.sol";
import {SafeERC20, IERC20} from "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";

contract SubAccount is OwnableUpgradeable {

    using SafeERC20 for IERC20;

    /// @dev Deployer account.
    address internal manager;

    /// @dev 0x exchange router address.
    address internal zeroXExchangeProxy;

    /// @dev cached lending pool address for callback verification.
    address internal cachedLendingPool;

    enum Operation {
        IncreasePosition,
        DecreasePosition
    }

    /// @custom:oz-upgrades-unsafe-allow constructor
    constructor() {
        _disableInitializers();
    }

    modifier onlyManager() {
        require(msg.sender == manager);
        _;
    }

    function __SubAccount_init(address owner, address _zeroXExchangeProxy) public initializer {
        __Ownable_init(owner);
        manager = msg.sender;
        zeroXExchangeProxy = _zeroXExchangeProxy;
    }

    /// @notice Callback function called by the lending pool.
    function executeOperation(
        address[] calldata assets,
        uint256[] calldata amounts,
        uint256[] calldata premiums,
        address initiator,
        bytes calldata params
    ) external returns (bool) {
        require(msg.sender == cachedLendingPool, "Only lending pool.");
        require(initiator == address(this), "Not from this address");
        Operation operation;
        address swapToToken;
        {
            bytes memory swapData0x;
            (operation, swapToToken, swapData0x) = abi.decode(params, (Operation, address, bytes));
            (bool success,) = zeroXExchangeProxy.call(swapData0x);
            require(success, "Swap failed.");
        }
        // We deposit the whole balance of the long token into the lending pool.
        uint256 balance = IERC20(swapToToken).balanceOf(address(this));
        if (operation == Operation.IncreasePosition) {
            // Add collateral, debt is automatically opened.
            ILendingPool(msg.sender).deposit(swapToToken, balance, address(this), 0);
        } else if (operation == Operation.DecreasePosition) {
            // Repay debt.
            ILendingPool(msg.sender).repay(swapToToken, balance, 2, address(this));
            // We need to withdraw the more collateral so that it can be repaid after the callback.
            balance = IERC20(assets[0]).balanceOf(address(this));
            uint256 flashloanDebt = amounts[0] + premiums[0];
            if (balance < flashloanDebt) {
                ILendingPool(msg.sender).withdraw(assets[0], flashloanDebt - balance, address(this));
            }
        }
        return true;
    }

    /// @notice Opens a debt position, swaps it for collateral and deposits into the lending market.
    function openLeveragedPosition(
        ILendingPool lendingPool,
        address longToken,
        address shortToken,
        uint256 debtAmountToOpen,
        bytes memory swapData0x
    ) external onlyManager {
        // The amountIn should have already been transfered to address(this).
        _approve(longToken, address(lendingPool));
        _approve(shortToken, zeroXExchangeProxy);
        _modifyPosition(lendingPool, Operation.IncreasePosition, shortToken, longToken, debtAmountToOpen, swapData0x);
        // Helpful checks to ensure swapData correctly set.
        require(IERC20(longToken).balanceOf(address(this)) == 0, "Long token remaining.");
        require(IERC20(shortToken).balanceOf(address(this)) == 0, "Short token remaining.");
    }

    /// @notice Sells some collateral and repays debt.
    /// @dev Collateral amount should not be greater than the currently deposited amount, plus a 0.09% flash loan premium.
    /// @dev In order to remve all of the deposited collateral we must set collateralAmountToRemove to be 99.91% of the total amount.
    function closeLeveragedPosition(
        ILendingPool lendingPool,
        address longToken,
        address shortToken,
        uint256 collateralAmountToRemove,
        bytes memory swapData0x
    ) external onlyManager {
        _approve(longToken, address(lendingPool));
        _approve(longToken, zeroXExchangeProxy);
        _approve(shortToken, address(lendingPool));
        _modifyPosition(lendingPool, Operation.DecreasePosition, longToken, shortToken, collateralAmountToRemove, swapData0x);
        _transferOut(longToken);
        _transferOut(shortToken);
    }

    /// @notice Simple swap and deposit, without opening any debt positions.
    /// @dev Tokens should already be transfered to the contract.
    function swapAndDeposit(
        ILendingPool lendingPool,
        address swapTokenIn,
        address swapTokenOut,
        bytes memory swapData0x
    ) external onlyManager {
        _approve(swapTokenIn, zeroXExchangeProxy);
        _approve(swapTokenOut, address(lendingPool));
        (bool success,) = zeroXExchangeProxy.call(swapData0x);
        require(success, "Swap failed.");
        uint256 tokenOutBalance = IERC20(swapTokenOut).balanceOf(address(this));
        lendingPool.deposit(swapTokenOut, tokenOutBalance, address(this), 0);
        // Also deposit any remaining tokenIn balance.
        uint256 tokenInBalance = IERC20(swapTokenIn).balanceOf(address(this));
        if (tokenInBalance > 0) {
            _approve(swapTokenIn, address(lendingPool));
            lendingPool.deposit(swapTokenIn, tokenInBalance, address(this), 0);
        }
    }

    /// @notice Depositis into the lending pool.
    function deposit(
        ILendingPool lendingPool,
        address token,
        uint256 amount
    ) external onlyManager {
        _approve(token, address(lendingPool));
        lendingPool.deposit(token, amount, address(this), 0);
    }

    /// @notice Withdraws collateral.
    function withdraw(
        ILendingPool lendingPool,
        address token,
        uint256 amount
    ) external onlyManager {
        lendingPool.withdraw(token, amount, owner());
    }

    /// @notice Borrows from the lending pool.
    function borrow(
        ILendingPool lendingPool,
        address token,
        uint256 amount
    ) external onlyManager {
        lendingPool.borrow(token, amount, 2, 0, address(this));
        _transferOut(token);
    }

    /// @notice Repays debt.
    function repay(
        ILendingPool lendingPool,
        address token,
        uint256 amount
    ) external onlyManager {
        _approve(token, address(lendingPool));
        lendingPool.repay(token, amount, 2, address(this));
    }

    /// @notice Executes arbitrary logic. Only callable by the owner.
    function execute(address to, bytes memory data, uint256 value) public onlyOwner returns (bytes memory result) {
        bool success;
        (success, result) = to.call{value: value}(data);
        require(success, "Call failed.");
    }

    function _approve(address token, address spender) internal {
        if (IERC20(token).allowance(address(this), spender) == 0) { // todo < max
            IERC20(token).approve(spender, type(uint256).max);
        }
    }

    function _transferOut(address token) internal {
        uint256 balance = IERC20(token).balanceOf(address(this));
        if (balance > 0) {
            IERC20(token).safeTransfer(owner(), balance);
        }
    }

    function _modifyPosition(
        ILendingPool lendingPool,
        Operation operation,
        address borrowToken,
        address swapToToken,
        uint256 borrowAmount,
        bytes memory swapData0x
    ) internal {
        address[] memory assets = new address[](1);
        uint256[] memory amounts = new uint256[](1);
        uint256[] memory modes = new uint256[](1);
        assets[0] = borrowToken;
        amounts[0] = borrowAmount;
        modes[0] = operation == Operation.IncreasePosition ? 2 : 0;
        cachedLendingPool = address(lendingPool);
        bytes memory data = abi.encode(operation, swapToToken, swapData0x);
        lendingPool.flashLoan(address(this), assets, amounts, modes, address(this), data, 0);
        cachedLendingPool = address(0);
    }

}


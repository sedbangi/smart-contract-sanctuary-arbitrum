import {SubAccount} from "./SubAccount.sol";
import {ILendingPool} from "./interfaces/ILendingPool.sol";
import {IOracle} from "./interfaces/IOracle.sol";
import {IWETH} from "./interfaces/IWETH.sol";
import {OwnableUpgradeable} from "@openzeppelin/contracts-upgradeable/access/OwnableUpgradeable.sol";
import {BeaconProxy} from "@openzeppelin/contracts/proxy/beacon/BeaconProxy.sol";
import {SafeERC20, IERC20} from "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";
import {UUPSUpgradeable} from "@openzeppelin/contracts-upgradeable/proxy/utils/UUPSUpgradeable.sol";

/// @custom:oz-upgrades-from src/ManagerOld.sol:ManagerOld
contract Manager is UUPSUpgradeable, OwnableUpgradeable {

    using SafeERC20 for IERC20;

    mapping(address owner => uint256 count) public accountCount;
    mapping(address owner => mapping(uint256 index => SubAccount position)) public accounts;

    event AccountValueChange(address indexed account, int256 changeUsd);

    SubAccount internal subAccountBeacon;
    address internal weth;
    address internal zeroXExchangeProxy;
    address internal ethUsdPriceOracle;

    event DeploySubAccount(address indexed user, uint256 index, SubAccount account);

    /// @custom:oz-upgrades-unsafe-allow constructor
    constructor() {
        _disableInitializers();
    }

    modifier trackValueChange(ILendingPool pool, SubAccount account) {
        uint256 netValueBefore = getNetAccountValueETH(pool, address(account));
        _;
        uint256 netValueAfter = getNetAccountValueETH(pool, address(account));
        int256 ethUsdPrice = IOracle(ethUsdPriceOracle).latestAnswer();
        emit AccountValueChange(address(account), (int256(netValueAfter) - int256(netValueBefore)) * ethUsdPrice / 1e18);
    }

    /// @notice Implementation of the UUPS proxy authorization.
    function _authorizeUpgrade(address) internal override onlyOwner {}

    /// @notice Get the difference between the total collateral and total debt of an account in ETH.
    function getNetAccountValueETH(ILendingPool pool, address account) public view returns (uint256) {
        (uint256 totalCollateralETH, uint256 totalDebtETH,,,,) = pool.getUserAccountData(address(account));
        if (totalCollateralETH < totalDebtETH) {
            return 0;
        } else {
            return totalCollateralETH - totalDebtETH;
        }
    }

    /// @notice Initialize the contract.
    function __Manager_init(address owner, address _weth, address _subAccountBeacon, address _zeroXExchangeProxy, address _ethUsdPriceOracle) public initializer {
        __Ownable_init(owner);
        weth = _weth;
        subAccountBeacon = SubAccount(_subAccountBeacon);
        zeroXExchangeProxy = _zeroXExchangeProxy;
        ethUsdPriceOracle = _ethUsdPriceOracle;
    }

    /// @notice Initialize the contract.
    function __ManagerV2_init(address _ethUsdPriceOracle) public reinitializer(3) {
        ethUsdPriceOracle = _ethUsdPriceOracle;
    }

    /// @notice Deploy a new sub account.
    function deploySubAccount(address owner) public returns (SubAccount account, uint256 index) {
        index = accountCount[owner]++;
        account = SubAccount(address(new BeaconProxy(address(subAccountBeacon), abi.encodeCall(SubAccount.__SubAccount_init, (owner, zeroXExchangeProxy)))));
        accounts[owner][index] = account;
        emit DeploySubAccount(owner, index, account);
    }

    /// @notice Returns the sub account at the given index or deploys a new one if it doesn't exist.
    function getSubAccount(address owner, uint256 i) public returns (SubAccount account) {
        if (i >= accountCount[owner]) {
            (account,) = deploySubAccount(owner);
        } else {
            account = accounts[owner][i];
        }
    }

    /// @notice Opens a leveraged position. Sells the short token for the long token.
    function openLeveragedPosition(
        ILendingPool lendingPool,
        address longToken,
        address shortToken,
        bool payWithLongToken,
        uint256 amountIn,
        uint256 debtAmountToOpen,
        bytes memory swapData0x,
        uint256 subAccountIndex
    ) external payable trackValueChange(lendingPool, account = getSubAccount(msg.sender, subAccountIndex)) returns (SubAccount account) {
        _transferTo(payWithLongToken ? longToken : shortToken, address(account), amountIn);
        account.openLeveragedPosition(lendingPool, longToken, shortToken, debtAmountToOpen, swapData0x);
    }

    /// @notice Decreases or closes a leveraged position. Sells the long token for the short.
    function closeLeveragedPosition(
        ILendingPool lendingPool,
        address longToken,
        address shortToken,
        uint256 collateralAmountToRemove,
        bytes memory swapData0x,
        uint256 subAccountIndex
    ) external payable trackValueChange(lendingPool, account = getSubAccount(msg.sender, subAccountIndex)) returns (SubAccount account) {
        account.closeLeveragedPosition(lendingPool, longToken, shortToken, collateralAmountToRemove, swapData0x);
    }

    /// @notice Swap tokens using 0x and deposit them into the lending pool.
    function swapAndDeposit(
        ILendingPool lendingPool,
        address swapTokenIn,
        address swapTokenOut,
        uint256 amountIn,
        bytes memory swapData0x,
        uint256 subAccountIndex
    ) external payable trackValueChange(lendingPool, account = getSubAccount(msg.sender, subAccountIndex)) returns (SubAccount account) {
        _transferTo(swapTokenIn, address(account), amountIn);
        account.swapAndDeposit(lendingPool, swapTokenIn, swapTokenOut,swapData0x);
    }

    /// @notice Deposit tokens into the lending pool.
    function deposit(
        ILendingPool lendingPool,
        address token,
        uint256 amount,
        uint256 subAccountIndex
    ) external payable trackValueChange(lendingPool, account = getSubAccount(msg.sender, subAccountIndex)) returns (SubAccount account) {
        _transferTo(token, address(account), amount);
        account.deposit(lendingPool, token, amount);
    }

    /// @notice Withdraws tokens from the lending pool.
    function withdraw(
        ILendingPool lendingPool,
        address token,
        uint256 amount,
        uint256 subAccountIndex
    ) external trackValueChange(lendingPool, account = getSubAccount(msg.sender, subAccountIndex)) returns (SubAccount account) {
        account.withdraw(lendingPool, token, amount);
    }

    /// @notice Borrows tokens from the lending pool.
    function borrow(
        ILendingPool lendingPool,
        address token,
        uint256 amount,
        uint256 subAccountIndex
    ) external trackValueChange(lendingPool, account = getSubAccount(msg.sender, subAccountIndex)) returns (SubAccount account) {
        account.borrow(lendingPool, token, amount);
    }

    /// @notice Repays tokens to the lending pool.
    function repay(
        ILendingPool lendingPool,
        address token,
        uint256 amount,
        uint256 subAccountIndex
    ) external payable trackValueChange(lendingPool, account = getSubAccount(msg.sender, subAccountIndex)) returns (SubAccount account) {
        _transferTo(token, address(account), amount);
        account.repay(lendingPool, token, amount);
    }

    function _transferTo(address token, address to, uint256 amount) internal {
        if (token == weth && msg.value > 0) {
            IWETH(weth).deposit{value: amount}();
            IERC20(weth).safeTransfer(to, amount);
        } else {
            IERC20(token).safeTransferFrom(msg.sender, to, amount);
        }
    }

}


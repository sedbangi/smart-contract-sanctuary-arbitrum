        // Check if the user has any outstanding redeem requests
        for (uint256 i = 0; i < redeemCounter; i++) {
            RedeemRequest storage redeemRequest = _redeemRequests[i];
            if (redeemRequest.user == msg.sender && !redeemRequest.executed) {
                revert("User already has an outstanding redeem request");
            }
        }

        // Increment redeem request counter
        uint256 redeemRequestId = redeemCounter;
        ++redeemCounter;

        // Create redeem request and store in mapping
        _redeemRequests[redeemRequestId] = RedeemRequest({
            id: redeemRequestId,
            user: msg.sender,
            receiver: receiver,
            owner: owner,
            shares: shares,
            timestamp: block.timestamp,
            executed: false
        });

        if (msg.sender != owner) {
            _spendAllowance(owner, msg.sender, shares);
        }

        // Transfer shares from the owner to the contract
        SafeERC20.safeTransferFrom(
            IERC20(address(this)),
            owner,
            address(this),
            shares
        );

        emit RedeemInitiated(
            msg.sender,
            receiver,
            owner,
            redeemRequestId,
            shares,
            block.timestamp
        );
    }


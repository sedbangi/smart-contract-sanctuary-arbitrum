    /**
     * @notice Function to execute a scheduled redeem after the REDEEM_DELAY period has passed
     * @param redeemRequestId ID of the redeem request to execute
     */
    function executeRedeem(uint256 redeemRequestId) public {
        RedeemRequest storage redeemRequest = _redeemRequests[redeemRequestId];

        require(
            redeemRequest.user == msg.sender,
            "Only the redeem request creator can execute the redeem"
        );
        require(
            block.timestamp >= redeemRequest.timestamp + redeemDelay,
            "Redeem cannot be executed yet"
        );
        require(!redeemRequest.executed, "Redeem already executed");
        require(
            !_isWithinRestrictedWindow(),
            "Operation not allowed near 0 UTC, please try again later"
        );
        // Mark redeem request as executed
        redeemRequest.executed = true;

        uint256 assets = previewRedeem(redeemRequest.shares);
        portfolioValue -= assets;
        _withdraw(
            address(this),
            redeemRequest.receiver,
            address(this),
            assets,
            redeemRequest.shares
        );

        emit RedeemExecuted(
            redeemRequestId,
            redeemRequest.shares,
            redeemRequest.receiver,
            redeemRequest.owner,
            block.timestamp
        );
    }

    /**
     * @notice Function to get a list of redeem requests by a specific address
     * @param user The address for which to retrieve the redeem requests
     * @return An array of `RedeemRequest` structs representing the redeem requests
     */
    function getRedeemRequestsByAddress(
        address user
    ) public view returns (RedeemRequest[] memory) {
        uint256 numberOfRedeemRequests = 0;

        // Count the number of redeem requests for the given address
        for (uint256 i = 0; i < redeemCounter; i++) {
            RedeemRequest storage redeemRequest = _redeemRequests[i];
            if (redeemRequest.user == user) {
                numberOfRedeemRequests++;
            }
        }

        // Create an array of RedeemRequest structs
        RedeemRequest[] memory redeemRequests = new RedeemRequest[](
            numberOfRedeemRequests
        );
        uint256 index = 0;

        // Retrieve the redeem requests for the given address
        for (uint256 i = 0; i < redeemCounter; i++) {
            RedeemRequest storage redeemRequest = _redeemRequests[i];
            if (redeemRequest.user == user) {
                redeemRequests[index] = redeemRequest;
                index++;
            }
        }

        return redeemRequests;
    }

    /**
     * @notice Function to calculate the sum of all outstanding redeem converted to assets
     * @return The sum of all outstanding redeem converted to assets
     */
    function calculateOutstandingRedeemAssetsAmount()
        public
        view
        returns (uint256)
    {
        uint256 totalOutstandingShares = 0;

        for (uint256 i = 0; i < redeemCounter; i++) {
            RedeemRequest storage redeemRequest = _redeemRequests[i];
            if (!redeemRequest.executed) {
                totalOutstandingShares += redeemRequest.shares;
            }
        }
        uint256 assets = previewRedeem(totalOutstandingShares);
        return assets;
    }


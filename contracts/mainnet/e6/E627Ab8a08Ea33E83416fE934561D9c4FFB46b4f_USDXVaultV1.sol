    /// @param tokenIn TokenIn (swap from tokenIn -> tokenOut) contract address
    /// @param tokenOut TokenOut (swap from tokenIn -> tokenOut) contract address
    /// @param amountOutMin amountOutMin from the swap
    /// @param poolFee poolFee pay (e.g., 500 = 0.05%)
    /// @return amountOut The amount of tokenOut received.
    function swapExactInputSingle(
        address tokenIn,
        address tokenOut,
        uint256 amountIn,
        uint256 amountOutMin,
        uint24 poolFee
    ) public onlyOwner returns (uint256 amountOut) {
        require(tokenIn != tokenOut, "TokenIn and TokenOut are the same");
        require(amountIn > 0, "AmountIn must be greater than zero");

        // Set the deadline for the swap (e.g., current block timestamp + 5 minutes)
        uint256 swapDeadline = block.timestamp + 300;

        // Naively set amountOutMinimum to 0.
        // In production, use an oracle or other data source to choose a safer value for amountOutMinimum.
        // We also set the sqrtPriceLimitx96 to be 0 to ensure we swap our exact input amount.
        ISwapRouter.ExactInputSingleParams memory params = ISwapRouter
            .ExactInputSingleParams({
                tokenIn: tokenIn,
                tokenOut: tokenOut,
                fee: poolFee,
                recipient: address(this),
                deadline: swapDeadline,
                amountIn: amountIn,
                amountOutMinimum: amountOutMin,
                sqrtPriceLimitX96: 0
            });

        // Approve the router to spend tokenIn.
        TransferHelper.safeApprove(tokenIn, address(swapRouter), amountIn);

        // The call to `exactInputSingle` executes the swap.
        amountOut = swapRouter.exactInputSingle(params);
    }

    /// @notice swapExactOutputSingle swaps a minimum possible amount of tokenIn for a fixed amount of tokenOut.
    /// @param amountOut The exact amount of tokenOut to receive from the swap.
    /// @param amountInMaximum The amount of tokenIn we are willing to spend to receive amountOut of tokenOut.
    /// @param poolFee poolFee pay (e.g., 500 = 0.05%)
    /// @return amountIn The amount of tokenIn actually spent in the swap.
    function swapExactOutputSingle(
        address tokenIn,
        address tokenOut,
        uint256 amountOut,
        uint256 amountInMaximum,
        uint24 poolFee
    ) public onlyOwner returns (uint256 amountIn) {
        require(tokenIn != tokenOut, "TokenIn and TokenOut are the same");
        require(amountOut > 0, "AmountOut must be greater than zero");
        // Approve the router to spend tokenIn
        TransferHelper.safeApprove(
            tokenIn,
            address(swapRouter),
            amountInMaximum
        );

        // Set the swapDeadline for the swap (e.g., current block timestamp + 5 minute)
        uint256 swapDeadline = block.timestamp + 300;

        ISwapRouter.ExactOutputSingleParams memory params = ISwapRouter
            .ExactOutputSingleParams({
                tokenIn: tokenIn,
                tokenOut: tokenOut,
                fee: poolFee,
                recipient: address(this),
                deadline: swapDeadline,
                amountOut: amountOut,
                amountInMaximum: amountInMaximum,
                sqrtPriceLimitX96: 0
            });

        // Executes the swap returning the amountIn needed to spend to receive the desired amountOut.
        amountIn = swapRouter.exactOutputSingle(params);

        // For exact output swaps, the amountInMaximum may not have all been spent.
        // If the actual amount spent (amountIn) is less than the specified maximum amount
        // we must refund the contract and approve the swapRouter to spend 0.
        if (amountIn < amountInMaximum) {
            TransferHelper.safeApprove(tokenIn, address(swapRouter), 0);
            TransferHelper.safeTransfer(

pragma solidity ^0.8.0;

import "@layerzerolabs/solidity-examples/contracts/lzApp/NonblockingLzApp.sol";
import "./interfaces/ICommonOFTGateway.sol";
import "./interfaces/IOFTReceiverV2.sol";

abstract contract OFTV2GatewayCore is NonblockingLzApp {
    using BytesLib for bytes;

    uint public constant NO_EXTRA_GAS = 0;

    // packet type
    uint8 public constant PT_SEND = 0;

    bool public useCustomAdapterParams;

    /**
     * @dev Emitted when `_amount` tokens `_tokenAddress` are moved from the `_sender` to (`_dstChainId`, `_toAddress`)
     * `_nonce` is the outbound nonce
     */
    event SendToChain(uint16 indexed _dstChainId, address indexed _from, bytes32 indexed _toAddress, address _token, bytes32 _dstTokenAddress, uint _amount);

    /**
     * @dev Emitted when `_amount` tokens `_token` are received from `_srcChainId` into the `_toAddress` on the local chain.
     * `_nonce` is the inbound nonce.
     */
    event ReceiveFromChain(uint16 indexed _srcChainId, address _token, address indexed _to, uint _amount);

    event SetUseCustomAdapterParams(bool _useCustomAdapterParams);

    constructor(address _lzEndpoint) NonblockingLzApp(_lzEndpoint) {
    }

    function setUseCustomAdapterParams(bool _useCustomAdapterParams) public virtual onlyOwner {
        useCustomAdapterParams = _useCustomAdapterParams;
        emit SetUseCustomAdapterParams(_useCustomAdapterParams);
    }

    /************************************************************************
    * internal functions
    ************************************************************************/
    function _estimateSendFee(uint16 _dstChainId, address _token, bytes32 _dstTokenAddress, bytes32 _toAddress, uint _amount, bool _useZro, bytes memory _adapterParams) internal view virtual returns (uint nativeFee, uint zroFee) {
        // mock the payload for sendFrom()
        bytes memory payload = _encodeSendPayload(_dstTokenAddress, _toAddress, _ld2sd(_amount, _token));
        return lzEndpoint.estimateFees(_dstChainId, address(this), payload, _useZro, _adapterParams);
    }

    function _nonblockingLzReceive(uint16 _srcChainId, bytes memory _srcAddress, uint64 _nonce, bytes memory _payload) internal virtual override {
        uint8 packetType = _payload.toUint8(0);

        if (packetType == PT_SEND) {
            _sendAck(_srcChainId, _srcAddress, _nonce, _payload);
        } else {
            revert("OFTCore: unknown packet type");
        }
    }

    function _send(address _from, address _token, uint16 _dstChainId, bytes32 _dstTokenAddress, bytes32 _toAddress, uint _amount, address payable _refundAddress, address _zroPaymentAddress, bytes memory _adapterParams) internal virtual returns (uint amount) {
        _checkAdapterParams(_dstChainId, PT_SEND, _adapterParams, NO_EXTRA_GAS);

        (amount,) = _removeDust(_amount, _token);
        amount = _debitFrom(_from, _token, _dstChainId, _dstTokenAddress, _toAddress, amount); // amount returned should not have dust
        require(amount > 0, "OFTCore: amount too small");

        bytes memory lzPayload = _encodeSendPayload(_dstTokenAddress, _toAddress, _ld2sd(amount, _token));
        _lzSend(_dstChainId, lzPayload, _refundAddress, _zroPaymentAddress, _adapterParams, msg.value);
        emit SendToChain(_dstChainId, _from, _toAddress, _token, _dstTokenAddress, amount);
    }

    function _sendAck(uint16 _srcChainId, bytes memory, uint64, bytes memory _payload) internal virtual {
        (address token, address to, uint64 amountSD) = _decodeSendPayload(_payload);
        if (to == address(0)) {
            to = address(0xdead);
        }

        uint amount = _sd2ld(amountSD, token);
        amount = _creditTo(_srcChainId, token, to, amount);

        emit ReceiveFromChain(_srcChainId, token, to, amount);
    }

    function _checkAdapterParams(uint16 _dstChainId, uint16 _pkType, bytes memory _adapterParams, uint _extraGas) internal virtual {
        if (useCustomAdapterParams) {
            _checkGasLimit(_dstChainId, _pkType, _adapterParams, _extraGas);
        } else {
            require(_adapterParams.length == 0, "OFTCore: _adapterParams must be empty.");
        }
    }

    function _ld2sd(uint _amount, address _token) internal virtual view returns (uint64) {
        uint amountSD = _amount / _ld2sdRate(_token);
        require(amountSD <= type(uint64).max, "OFTCore: amountSD overflow");
        return uint64(amountSD);
    }

    function _sd2ld(uint64 _amountSD, address _token) internal virtual view returns (uint) {
        return _amountSD * _ld2sdRate(_token);
    }

    function _removeDust(uint _amount, address _token) internal virtual view returns (uint amountAfter, uint dust) {
        dust = _amount % _ld2sdRate(_token);
        amountAfter = _amount - dust;
    }

    function _encodeSendPayload(bytes32 _dstTokenAddress, bytes32 _toAddress, uint64 _amountSD) internal virtual view returns (bytes memory) {
        return abi.encodePacked(PT_SEND, _toAddress, _amountSD, _dstTokenAddress);
    }

    function _decodeSendPayload(bytes memory _payload) internal virtual view returns (address token, address to, uint64 amountSD) {
        require(_payload.toUint8(0) == PT_SEND && _payload.length == 73, "OFTCore: invalid payload");
        to = _payload.toAddress(13); // drop the first 12 bytes of bytes32
        amountSD = _payload.toUint64(33);
        token = _payload.toAddress(53); // drop the first 12 bytes of bytes32
    }

    function _addressToBytes32(address _address) internal pure virtual returns (bytes32) {
        return bytes32(uint(uint160(_address)));
    }

    function _debitFrom(address _from, address _token, uint16 _dstChainId, bytes32 _dstTokenAddress, bytes32 _toAddress, uint _amount) internal virtual returns (uint);

    function _creditTo(uint16 _srcChainId, address _token, address _toAddress, uint _amount) internal virtual returns (uint);

    function _transferFrom(address _token,address _from, address _to, uint _amount) internal virtual returns (uint);

    function _ld2sdRate(address _token) internal view virtual returns (uint);
}
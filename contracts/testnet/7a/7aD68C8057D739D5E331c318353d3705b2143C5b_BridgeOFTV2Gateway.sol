pragma solidity ^0.8.0;

import "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";
import "@openzeppelin/contracts/utils/structs/EnumerableSet.sol";
import "./BaseOFTV2Gateway.sol";
import "./interfaces/IMintAndBurn.sol";

contract BridgeOFTV2Gateway is BaseOFTV2Gateway {

    using EnumerableSet for EnumerableSet.AddressSet;
    using EnumerableSet for EnumerableSet.UintSet;
    using EnumerableSet for EnumerableSet.Bytes32Set;
    using SafeERC20 for IERC20;

    struct BridgeToken {
        bool canMintAndBurn;
        uint8 sharedDecimals;
        address token;
        uint ld2sdRate;
        uint outboundAmount;
        uint inboundAmount;
    }

    EnumerableSet.AddressSet private tokenSets;
    // current chain bridge token info
    mapping(address => BridgeToken) public bridgeTokens;
    // token -> chainlist
    mapping(address => EnumerableSet.UintSet) private bridgeTokenTrustChainList;
    // address -> chainlist -> dstToken
    mapping(address => mapping(uint => EnumerableSet.Bytes32Set)) private bridgeTokenTrustDstTokens;


    constructor(address _lzEndpoint) BaseOFTV2Gateway(_lzEndpoint) {
    }

    function listTokenSets() public view returns (address[] memory){
        return tokenSets.values();
    }

    function listBridgeTrustChainList(address _token) public view returns (uint[] memory){
        return bridgeTokenTrustChainList[_token].values();
    }

    function listBridgeTrustChainTokenList(address _token,uint dstChainId) public view returns (bytes32[] memory){
        return bridgeTokenTrustDstTokens[_token][dstChainId].values();
    }

    function setTrustDstInfo(address _token, uint _dstChainId, bytes32 _dstTokenAddress) public onlyOwner {
        require(_token != address(0), "_token can not be empty");
        require(tokenSets.contains(_token), "_token not exists");
        bridgeTokenTrustChainList[_token].add(_dstChainId);
        bridgeTokenTrustDstTokens[_token][_dstChainId].add(_dstTokenAddress);
    }

    function addBridgeToken(bool _canMintAndBurn, uint8 _sharedDecimals, address _token) public onlyOwner {
        require(_token != address(0), "_token can not be empty");
        require(!tokenSets.contains(_token), "already exists");
        tokenSets.add(_token);
        (bool success, bytes memory data) = _token.staticcall(
            abi.encodeWithSignature("decimals()")
        );
        require(success, "ProxyOFT: failed to get token decimals");
        uint8 decimals = abi.decode(data, (uint8));

        require(_sharedDecimals <= decimals, "ProxyOFT: sharedDecimals must be <= decimals");
        uint ld2sdRate = 10 ** (decimals - _sharedDecimals);
        bridgeTokens[_token] = BridgeToken(_canMintAndBurn, _sharedDecimals, _token, ld2sdRate, uint(0), uint(0));
    }

    function removeBridgeToken(address _token) public onlyOwner {
        require(_token != address(0), "_token can not be empty");
        require(tokenSets.contains(_token), "_token not exists");
        tokenSets.remove(_token);
        delete bridgeTokens[_token];
    }

    function updateBridgeToken(bool _canMintAndBurn, uint8 _sharedDecimals, address _token) public onlyOwner {
        require(_token != address(0), "_token can not be empty");
        require(tokenSets.contains(_token), "_token not exists");
        (bool success, bytes memory data) = _token.staticcall(
            abi.encodeWithSignature("decimals()")
        );
        require(success, "ProxyOFT: failed to get token decimals");
        uint8 decimals = abi.decode(data, (uint8));

        require(_sharedDecimals <= decimals, "ProxyOFT: sharedDecimals must be <= decimals");
        uint ld2sdRate = 10 ** (decimals - _sharedDecimals);
        BridgeToken storage bridgeToken = bridgeTokens[_token];
        bridgeToken.canMintAndBurn = _canMintAndBurn;
        bridgeToken.sharedDecimals = _sharedDecimals;
        bridgeToken.ld2sdRate = ld2sdRate;
    }

    /************************************************************************
    * public functions
    ************************************************************************/
    function circulatingSupply(address _token) public view virtual override returns (uint) {
        require(tokenSets.contains(_token), "_token not exists");
        return IERC20(_token).totalSupply() - IERC20(_token).balanceOf(address(this));
    }

    function token(address _token) public view virtual override returns (address) {
        require(tokenSets.contains(_token), "_token not exists");
        return address(_token);
    }

    /************************************************************************
    * internal functions
    ************************************************************************/
    function _debitFrom(address _from, address _token, uint16 _dstChainId, bytes32 _dstTokenAddress, bytes32, uint _amount) internal virtual override returns (uint) {
        require(_from == _msgSender(), "ProxyOFT: owner is not send caller");
        require(tokenSets.contains(_token), "_token not exists");
        require(bridgeTokenTrustChainList[_token].contains(uint(_dstChainId)), "dstChain not allowed");
        require(bridgeTokenTrustDstTokens[_token][uint(_dstChainId)].contains(_dstTokenAddress), "dstToken not allowed");
        BridgeToken storage bridgeToken = bridgeTokens[_token];
        IERC20 erc20 = IERC20(_token);
        _amount = _transferFrom(_token, _from, address(this), _amount);

        // _amount still may have dust if the token has transfer fee, then give the dust back to the sender
        (uint amount, uint dust) = _removeDust(_amount, _token);
        if (dust > 0) erc20.safeTransfer(_from, dust);
        bridgeToken.outboundAmount += amount;
        return amount;
    }

    function _creditTo(uint16, address _token, address _toAddress, uint _amount) internal virtual override returns (uint) {
        require(tokenSets.contains(_token), "_token not exists");
        BridgeToken storage bridgeToken = bridgeTokens[_token];

        bridgeToken.inboundAmount += _amount;

        // tokens are already in this contract, so no need to transfer
        if (_toAddress == address(this)) {
            return _amount;
        }

        return _transferFrom(_token, address(this), _toAddress, _amount);
    }

    function _transferFrom(address _token, address _from, address _to, uint _amount) internal virtual override returns (uint) {
        IERC20 erc20 = IERC20(_token);
        uint before = erc20.balanceOf(_to);
        BridgeToken memory bridgeToken = bridgeTokens[_token];
        uint tempToAdd = 0;
        bool _burn = false;
        if (bridgeToken.canMintAndBurn) {
            IMintAndBurn mintAndBurn = IMintAndBurn(_token);
            if (_from == address(this)) {
                mintAndBurn.mint(_to, _amount);
            } else {
                _burn = true;
                erc20.safeTransferFrom(_from, _to, _amount);
                tempToAdd = erc20.balanceOf(_to) - before;
                mintAndBurn.burn(_amount);
            }
        } else {
            if (_from == address(this)) {
                erc20.safeTransfer(_to, _amount);
            } else {
                erc20.safeTransferFrom(_from, _to, _amount);
            }
        }
        return _burn ? tempToAdd : erc20.balanceOf(_to) - before;
    }

    function _ld2sdRate(address _token) internal view virtual override returns (uint) {
        BridgeToken memory bridgeToken = bridgeTokens[_token];
        return bridgeToken.ld2sdRate;
    }
}


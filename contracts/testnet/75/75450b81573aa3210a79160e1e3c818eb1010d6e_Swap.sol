import "./IERC1155Burnable.sol";
import "@openzeppelin/contracts/utils/cryptography/MessageHashUtils.sol";
import "@openzeppelin/contracts/utils/cryptography/ECDSA.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "./lzApp/NonblockingLzApp.sol";
import "./EIP712.sol";

contract Swap is Ownable, EIP712, NonblockingLzApp {
    using MessageHashUtils for bytes;
    using ECDSA for bytes;

    struct Sale {
        address seller;
        uint256[] itemIds;
        uint256[] amounts;
        uint256 expirationTime;
        uint256 salt;
        uint256 sellerChainId;
    }

    struct Offer {
        address offerer;
        uint256[] saleItemIds;
        uint256[] saleAmounts;
        uint256[] itemIds;
        uint256[] amounts;
        uint256 expirationTime;
        uint256 salt;
        uint256 offererChainId;
    }

    event Matched(
        address indexed seller,
        address indexed offerer,
        uint256 sellerSalt,
        uint256[] sellerItemIds,
        uint256[] sellerItemAmounts,
        uint256 buyerSalt,
        uint256[] buyerItemIds,
        uint256[] buyerItemAmounts,
        uint256 sellerChainId,
        uint256 offererChainId
    );

    event CrossChainMatched(
        address indexed seller,
        address indexed offerer,
        uint256 sellerSalt,
        uint256[] sellerItemIds,
        uint256[] sellerItemAmounts,
        uint256 buyerSalt,
        uint256[] buyerItemIds,
        uint256[] buyerItemAmounts,
        uint256 sellerChainId,
        uint256 offererChainId
    );

    event GameItemChanged(address indexed gameItem);
    event ChainActivated(uint256 indexed chainId);
    event ChainDisabled(uint256 indexed chainId);

    uint public constant version = 1;

    IERC1155Burnable public gameItem;
    mapping(bytes => bool) public filled;
    mapping(uint256 => bool) public chains;

    constructor(
        address _gameItem,
        address owner,
        address endpoint
    ) Ownable(owner) NonblockingLzApp(endpoint) {
        gameItem = IERC1155Burnable(_gameItem);
    }

    function setGameItem(address _gameItem) public onlyOwner {
        require(_gameItem != address(0), "Invalid address");

        gameItem = IERC1155Burnable(_gameItem);

        emit GameItemChanged(_gameItem);
    }

    function setChain(uint256 chainId) public onlyOwner {
        require(chainId != 0, "Invalid chain");

        chains[chainId] = true;

        emit ChainActivated(chainId);
    }

    function disableChain(uint256 chainId) public onlyOwner {
        require(chainId != 0, "Invalid chain");

        chains[chainId] = false;

        emit ChainDisabled(chainId);
    }

    function hashToEthSigned(
        bytes memory encoded
    ) internal pure returns (bytes32) {
        return MessageHashUtils.toEthSignedMessageHash(encoded);
    }

    function _verify(
        uint256 expirationTime,
        bytes calldata signature_,
        address owner,
        bytes memory encoded
    ) internal view returns (bool) {
        require(expirationTime > block.timestamp, "expired");
        return ECDSA.recover(hashToEthSigned(encoded), signature_) == owner;
    }

    function _nonblockingLzReceive(
        uint16 _srcChainId,
        bytes memory _srcAddress,
        uint64, // nonce can be added here
        bytes memory _payload
    ) internal override {
        require(
            this.isTrustedRemote(_srcChainId, _srcAddress),
            "Sender is not trusted remote"
        );

        (address owner, uint256[] memory ids, uint256[] memory amounts) = abi
            .decode(_payload, (address, uint256[], uint256[]));

        gameItem.burnBatch(owner, ids, amounts);
    }

    function matchOrders(
        Sale calldata orderSeller,
        bytes calldata signatureSeller,
        Offer calldata orderBuyer,
        bytes calldata signatureBuyer
    )
        external
        _verifySale(orderSeller, signatureSeller, orderBuyer, signatureBuyer)
        returns (bool)
    {
        gameItem.safeBatchTransferFrom(
            orderSeller.seller,
            orderBuyer.offerer,
            orderSeller.itemIds,
            orderSeller.amounts,
            ""
        );

        gameItem.safeBatchTransferFrom(
            orderBuyer.offerer,
            orderSeller.seller,
            orderBuyer.itemIds,
            orderBuyer.amounts,
            ""
        );

        filled[signatureSeller] = true;

        emit Matched(
            orderSeller.seller,
            orderBuyer.offerer,
            orderSeller.salt,
            orderSeller.itemIds,
            orderSeller.amounts,
            orderBuyer.salt,
            orderBuyer.itemIds,
            orderBuyer.amounts,
            orderSeller.sellerChainId,
            orderBuyer.offererChainId
        );

        return true;
    }

    function crossChainMatchOrders(
        Sale calldata seller,
        bytes calldata signatureSeller,
        Offer calldata buyer,
        bytes calldata signatureBuyer,
        uint _gasForDestinationLzReceives
    ) external _verifySale(seller, signatureSeller, buyer, signatureBuyer) {
        gameItem.burnBatch(seller.seller, seller.itemIds, seller.amounts);

        bytes memory adapterParams = abi.encodePacked(
            version,
            _gasForDestinationLzReceives
        );

        bytes memory payload = abi.encode(
            buyer.offerer,
            buyer.itemIds,
            buyer.amounts
        );

        _lzSend(
            uint16(buyer.offererChainId),
            payload,
            payable(seller.seller),
            address(0),
            adapterParams,
            0
        );

        filled[signatureSeller] = true;

        emit CrossChainMatched(
            seller.seller,
            buyer.offerer,
            seller.salt,
            seller.itemIds,
            seller.amounts,
            buyer.salt,
            buyer.itemIds,
            buyer.amounts,
            seller.sellerChainId,
            buyer.offererChainId
        );
    }

    modifier _verifySale(
        Sale calldata orderSeller,
        bytes calldata signatureSeller,
        Offer calldata orderBuyer,
        bytes calldata signatureBuyer
    ) {
        require(!filled[signatureSeller], "Order already filled");

        require(
            _verify(
                orderSeller.expirationTime,
                signatureSeller,
                orderSeller.seller,
                abi.encode(orderSeller)
            ),
            "Invalid seller signature"
        );

        require(
            _verify(
                orderBuyer.expirationTime,
                signatureBuyer,
                orderBuyer.offerer,
                abi.encode(orderBuyer)
            ),
            "Invalid buyer signature"
        );

        require(
            orderSeller.itemIds.length == orderSeller.amounts.length,
            "Invalid sale"
        );

        require(
            orderBuyer.itemIds.length == orderBuyer.amounts.length,
            "Invalid offer"
        );

        require(
            orderBuyer.saleItemIds.length == orderSeller.itemIds.length,
            "Invalid offer"
        );
        require(
            orderBuyer.saleAmounts.length == orderSeller.amounts.length,
            "Invalid offer"
        );

        require(
            chains[orderSeller.sellerChainId] &&
                chains[orderBuyer.offererChainId],
            "Invalid chain"
        );

        _;
    }

    // allow this contract to receive ether
    receive() external payable {}

    function withdraw(uint256 _amount) external onlyOwner {
        payable(msg.sender).transfer(_amount);
    }
}
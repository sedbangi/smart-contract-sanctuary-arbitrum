pragma solidity ^0.8.19;

import {Constants} from "../../utils/Constants.sol";
import {StrategyTypes} from "../libraries/StrategyTypes.sol";
import {LibMarkPriceOracle} from "../libraries/LibMarkPriceOracle.sol";
import {ECDSA} from "@openzeppelin/contracts/utils/cryptography/ECDSA.sol";
import {LibAccessControlEnumerable} from "../libraries/LibAccessControlEnumerable.sol";
import {InvalidMarkPrice, TooFewSignLens, InvalidSignerNum, InvalidSignature, DuplicateSigner, InvalidObservationsTimestamp, RepeatedSignerAddress} from "../errors/GenericErrors.sol";

contract MarkPriceOracleFacet {
    using ECDSA for bytes32;

    event MarkPriceSignerLenUpdated(uint256 signerNum);
    event MarkPriceConfigUpdated(address[] signers);

    // @notice 获取期货或期权的报价单价，以18位作为精度
    function getMarkPrice(uint256 positionId) external view returns (uint256) {
        return LibMarkPriceOracle._getMarkPrice(positionId);
    }

    // @notice 获取mark price的签名者列表
    function getMarkPriceSignerList() external view returns (address[] memory) {
        LibMarkPriceOracle.Layout storage l = LibMarkPriceOracle.layout();
        return l.s_signersList;
    }

    /////////////
    // Setters //
    /////////////

    // @notice 设置标记价格的签名数量
    function setMarkPriceSignerLen(uint256 _signerNum) external {
        LibAccessControlEnumerable.checkRole(Constants.ADMIN_ROLE);
        LibMarkPriceOracle.Layout storage l = LibMarkPriceOracle.layout();
        if (_signerNum == 0 || _signerNum > Constants.MAX_SIGNER_NUM) {
            revert InvalidSignerNum();
        }
        l.signerNum = _signerNum;
        emit MarkPriceSignerLenUpdated(_signerNum);
    }

    // @notice 设置签名者列表
    function setMarkPriceConfig(address[] calldata signers) external {
        LibAccessControlEnumerable.checkRole(Constants.ADMIN_ROLE);
        LibMarkPriceOracle.Layout storage l = LibMarkPriceOracle.layout();
        address[] memory signersArgs = signers;
        uint256 oldLength = l.s_signersList.length;
        for (uint256 i; i < oldLength; ) {
            address signer = l.s_signersList[i];
            delete l.s_signers[signer];

            unchecked {
                ++i;
            }
        }
        delete l.s_signersList;

        // add new signer addresses
        for (uint i; i < signersArgs.length; ) {
            if (l.s_signers[signersArgs[i]].active) {
                revert RepeatedSignerAddress();
            }
            l.s_signers[signersArgs[i]] = LibMarkPriceOracle.Signer({active: true, index: uint8(i)});

            unchecked {
                ++i;
            }
        }
        l.s_signersList = signersArgs;

        emit MarkPriceConfigUpdated(signers);
    }

    /// @notice 设置标记价格
    function setMarkPrice(
        bytes calldata _report,
        // ECDSA signatures
        bytes[] calldata signatures
    ) external {
        LibAccessControlEnumerable.checkRole(Constants.KEEPER_ROLE);
        LibMarkPriceOracle.Layout storage l = LibMarkPriceOracle.layout();
        uint256 signLen = signatures.length;
        if (signLen < l.signerNum) {
            revert TooFewSignLens();
        }

        StrategyTypes.MarkPriceItemWithId memory itemParam;
        (itemParam.positionId, itemParam.price, itemParam.updateAt) = abi.decode(_report, (uint256, uint256, uint256));
        if (itemParam.updateAt == block.timestamp) {
            return;
        }
        // Verify signatures attached to report
        {
            bytes32 h = keccak256(_report);
            LibMarkPriceOracle.Signer memory signer;
            bool[] memory signed = new bool[](Constants.MAX_SIGNER_NUM);
            for (uint256 i; i < signLen; ) {
                address signerAddress = h.recover(signatures[i]);
                signer = l.s_signers[signerAddress];
                if (!signer.active) {
                    revert InvalidSignature();
                }
                if (signed[signer.index]) {
                    revert DuplicateSigner();
                }
                signed[signer.index] = true;
                unchecked {
                    ++i;
                }
            }
        }
        StrategyTypes.MarkPriceItemWithId memory itemVars = l.markPriceById[itemParam.positionId];
        if (itemVars.updateAt == block.timestamp) {
            return;
        }
        if (itemParam.price == 0 || itemParam.positionId == 0) {
            revert InvalidMarkPrice();
        }
        if (itemParam.updateAt <= itemVars.updateAt) {
            revert InvalidObservationsTimestamp(itemParam.updateAt, itemVars.updateAt);
        }
        l.markPriceById[itemParam.positionId] = StrategyTypes.MarkPriceItemWithId({
            positionId: itemParam.positionId,
            price: itemParam.price,
            updateAt: block.timestamp
        });
    }
}


    // 支持的链地址映射
    mapping(uint256 => bool) public supportedChains;

    mapping(string => address) public tokenMap;

    event Withdraw(
        address indexed token,
        address indexed to,
        uint256 indexed amount,
        string txid
    );

    event Deposit(
        address indexed token,
        address indexed from,
        uint256 indexed amount,
        uint256 targetChain,
        string targetUser
    );

    event SignerAdded(address indexed sender, address indexed account);

    event SignerRemoved(address indexed sender, address indexed account);

    event TokenCreated(address indexed internalToken);

    event InvalidSigner(address signer);

    //构造函数 传入签名者数组，代币数组，链id数组
    constructor(
        address[] memory signers_,
        uint256[] memory chains_,
        address[] memory externalTokens_,
        uint256 required_
    ) {
        for (uint256 i = 0; i < signers_.length; i++) {
            address _addr = signers_[i];
            require(!authorized[_addr], "duplicate existence");
            signers.push(_addr);
            authorized[_addr] = true;
            indexes[_addr] = i;
        }

        for (uint256 i = 0; i < chains_.length; i++) {
            supportedChains[chains_[i]] = true;
        }
        for (uint256 i = 0; i < externalTokens_.length; i++) {
            externalTokens[externalTokens_[i]] = true;
            tokenMap[ERC20(externalTokens_[i]).symbol()] = externalTokens_[i];
        }

        required = required_;

        uint256 chainId;
        assembly {
            chainId := chainid()
        }
        DOMAIN_SEPARATOR = keccak256(
            abi.encode(
                keccak256(
                    "EIP712Domain(string name,string version,uint256 chainId,address verifyingContract)"
                ),
                keccak256(bytes(name)),
                keccak256(bytes(version)),
                chainId,
                address(this)
            )
        );
    }

    //添加外部代币
    function addExternalToken(address token) external onlyOwner {
        externalTokens[token] = true;
        tokenMap[ERC20(token).symbol()] = token;
    }

    //移除外部代币
    function removeExternalToken(address token) external onlyOwner {
        delete externalTokens[token];
        delete tokenMap[ERC20(token).symbol()];
    }

    // 添加支持的代币到白名单
    function addToken(
        string memory tokenName,
        address token
    ) external whenNotPaused onlyOwner {
        tokenMap[tokenName] = token;
    }

    // 从白名单中移除不再支持的代币
    function removeToken(
        string memory tokenName
    ) external whenNotPaused onlyOwner {
        delete tokenMap[tokenName];
    }

    // 添加支持的链到白名单
    function addChain(uint256 chain) external whenNotPaused onlyOwner {
        supportedChains[chain] = true;
    }

    // 从白名单中移除不再支持的链
    function removeChain(uint256 chain) external whenNotPaused onlyOwner {
        supportedChains[chain] = false;
    }

    function updateRequired(uint256 _required) external onlyOwner {
        require(
            _required > 0 && _required <= signers.length,
            "invalid required"
        );
        required = _required;
    }

    function addSigner(address account) external onlyOwner {
        require(!authorized[account], "already exists");

        indexes[account] = signers.length;
        authorized[account] = true;
        signers.push(account);

        emit SignerAdded(msg.sender, account);
    }

    function removeSigner(address account) external onlyOwner {
        require(signers.length > 1, "illogical");
        require(authorized[account], "non-existent");

        uint256 index = indexes[account];
        uint256 lastIndex = signers.length - 1;

        if (index != lastIndex) {
            address lastAddr = signers[lastIndex];
            signers[index] = lastAddr;
            indexes[lastAddr] = index;
        }

        delete authorized[account];
        delete indexes[account];
        signers.pop();

        emit SignerRemoved(msg.sender, account);
    }

    function deposit(
        address token,
        uint256 amount,
        uint256 targetChain,
        string memory targetUser
    ) external whenNotPaused {
        require(
            IERC20(token).balanceOf(msg.sender) >= amount,
            "insufficient balance"
        );
        require(supportedChains[targetChain], "unsupported chain");
        if (externalTokens[token]) {
            TransferHelper.safeTransferFrom(
                token,
                msg.sender,
                address(this),
                amount
            );
        } else {
            BRC20(token).burn(msg.sender, amount);
        }

        emit Deposit(token, msg.sender, amount, targetChain, targetUser);
    }

    function withdraw(
        uint256 fromChainId, //原链id
        string memory fromAddress, //原链地址
        string memory fromTxHash, //原链交易hash
        address toAddress, //目标链地址
        string memory token, //代币名称
        uint256 amount, //代币数量
        uint8[] calldata v, //签名v
        bytes32[] calldata r, //签名r
        bytes32[] calldata s //签名s
    ) external whenNotPaused {
        require(
            signers.length > 0 &&
                signers.length == v.length &&
                signers.length == r.length &&
                signers.length == s.length,
            "invalid signatures"
        );

        uint256 chainId;
        assembly {
            chainId := chainid()
        }

        bytes32 digest = keccak256(
            abi.encodePacked(
                "\x19\x01",
                DOMAIN_SEPARATOR,
                keccak256(
                    abi.encode(
                        keccak256(
                            "Withdraw(uint256 fromChainId,string fromAddress,string fromTxHash,uint256 toChainId,address toAddress,string token,uint256 amount,uint256 nonce)"
                        ),
                        fromChainId,
                        keccak256(bytes(fromAddress)),
                        keccak256(bytes(fromTxHash)),
                        chainId,
                        toAddress,
                        keccak256(bytes(token)),
                        amount,
                        nonces[fromChainId][fromTxHash]++
                    )
                )
            )
        );
        uint8 confirmations = 0; // 已确认签名的数量
        // 使用签名者的信息验证签名
        for (uint256 i = 0; i < signers.length; i++) {
            address signer = ecrecover(digest, v[i], r[i], s[i]);

            // 确保签名者是合法的
            if (authorized[signer]) {
                // 避免重复签名
                for (uint256 j = 0; j < i; j++) {
                    require(signers[j] != signer, "duplicated");
                }
                // 如果签名者合法，增加确认计数
                confirmations++;
                // 如果已达到确认门槛，退出循环
                if (confirmations >= required) {
                    address tokenAddress = tokenMap[token];
                    if (tokenAddress == address(0)) {
                        tokenAddress = createBRC20Token(token, token);
                        BRC20(tokenAddress).mint(toAddress, amount);
                    } else if (externalTokens[tokenAddress]) {
                        TransferHelper.safeTransfer(
                            tokenAddress,
                            toAddress,
                            amount
                        );
                    } else {
                        BRC20(tokenAddress).mint(toAddress, amount);
                    }
                    emit Withdraw(tokenAddress, toAddress, amount, fromTxHash);
                    break;
                }
            } else {
                // 记录验证失败的签名者
                emit InvalidSigner(signer);
            }
        }
    }

    function createBRC20Token(
        string memory _name,
        string memory _symbol
    ) internal returns (address brc20) {
        brc20 = address(new BRC20(_name, _symbol));
        tokenMap[_name] = brc20;
        emit TokenCreated(brc20);
    }

    function getNonces(
        uint256 chainId,
        string memory txHash
    ) public view returns (uint256) {
        return nonces[chainId][txHash];
    }
}


/**
 * @author Heisenberg
 * @title Tournament Manager
 * @notice The contract which manages the Tournaments
 */
contract TournamentManager is
    ERC1155("sample_uri"),
    Ownable,
    AccessControl,
    ITournamentManager,
    ReentrancyGuard
{
    address public treasury;
    ITournamentLeaderboard public override leaderboard;
    ITournamentReader public tournamentReader;
    uint256 public nextTournamentId = 0;
    bytes32 public constant TOKEN_MINTER = keccak256("TOKEN_MINTER");
    bytes32 public constant TOKEN_BURNER = keccak256("TOKEN_BURNER");
    bytes32 public constant HANDLER_ROLE = keccak256("HANDLER_ROLE");
    bytes32 public constant TOURNAMENT_CREATOR =
        keccak256("TOURNAMENT_CREATOR");

    mapping(uint256 => Tournament) public override tournaments;
    mapping(uint256 => uint256) public override tournamentRewardPools;
    mapping(uint256 => mapping(address => bool))
        public
        override tournamentUsers;
    mapping(uint256 => mapping(string => bool))
        public
        override tournamentUnderlyingAssets;

    constructor(address _treasury, address _leaderboard) {
        leaderboard = ITournamentLeaderboard(_leaderboard);
        treasury = _treasury;
        _setupRole(DEFAULT_ADMIN_ROLE, msg.sender);
    }

    /************************************************
     *  ADMIN FUNCTIONS
     ***********************************************/

    function createTournament(
        string[] memory underlyingAssets,
        TournamentMeta calldata tournamentMeta,
        TournamentConditions calldata tournamentConditions,
        ITournamentLeaderboard.TournamentLeaderBoard
            calldata tournamentLeaderboard
    )
        external
        onlyRole(TOURNAMENT_CREATOR)
        nonReentrant
        returns (uint256 tournamentId)
    {
        tournamentReader.checkParams(
            tournamentMeta,
            tournamentConditions,
            tournamentLeaderboard
        );
        TournamentMeta memory newTournamentMeta = TournamentMeta(
            tournamentMeta.name,
            tournamentMeta.start,
            tournamentMeta.close,
            tournamentMeta.ticketCost,
            tournamentMeta.playTokenMintAmount,
            false,
            false,
            false,
            false,
            tournamentMeta.tournamentType,
            tournamentMeta.buyinToken,
            tournamentMeta.rewardToken,
            msg.sender
        );
        TournamentConditions memory newTournamentConditions = ITournamentManager
            .TournamentConditions(
                tournamentConditions.maxBuyinsPerWallet,
                tournamentConditions.minParticipants,
                tournamentConditions.maxParticipants,
                tournamentConditions.guaranteedWinningAmount,
                tournamentConditions.startPriceMoney,
                tournamentConditions.rakePercent
            );
        tournamentId = nextTournamentId;
        nextTournamentId++;

        for (uint256 i = 0; i < underlyingAssets.length; i++) {
            tournamentUnderlyingAssets[tournamentId][
                underlyingAssets[i]
            ] = true;
        }

        tournaments[tournamentId] = Tournament(
            newTournamentMeta,
            newTournamentConditions
        );
        leaderboard.createTournamentLeaderboard(
            tournamentId,
            tournamentLeaderboard
        );
        if (tournamentConditions.startPriceMoney > 0) {
            tournamentRewardPools[tournamentId] = tournamentConditions
                .startPriceMoney;
            tournamentMeta.rewardToken.transferFrom(
                msg.sender,
                address(this),
                tournamentConditions.startPriceMoney
            );
        }
        emit CreateTournament(tournamentId, tournamentMeta.name);
        return tournamentId;
    }

    function startTournament(
        uint256 tournamentId
    ) external onlyOwner nonReentrant {
        TournamentMeta memory tournamentMeta = tournaments[tournamentId]
            .tournamentMeta;
        TournamentConditions memory tournamentConditions = tournaments[
            tournamentId
        ].tournamentConditions;

        if (!tournamentMeta.isClosed && !tournamentMeta.tradingStarted) {
            if (block.timestamp < tournamentMeta.start) {
                revert("T15");
            } else if (
                leaderboard.getLeaderboardConfig(tournamentId).userCount <
                tournamentConditions.minParticipants
            ) {
                revert("T16");
            } else if (tournamentMeta.tournamentType != TournamentType.Type3) {
                tournamentRewardPools[tournamentId] += tournamentConditions
                    .guaranteedWinningAmount;
                tournamentMeta.rewardToken.transferFrom(
                    msg.sender,
                    address(this),
                    tournamentConditions.guaranteedWinningAmount
                );
            }

            tournaments[tournamentId].tournamentMeta.tradingStarted = true;
            emit StartTournament(tournamentId);
        }
    }

    function setTournamentReader(address _reader) external onlyOwner {
        tournamentReader = ITournamentReader(_reader);
    }

    function forceCloseTournament(
        uint256 tournamentId,
        bool _shouldRefundTickets
    ) external onlyOwner {
        TournamentMeta memory tournamentMeta = tournaments[tournamentId]
            .tournamentMeta;
        require(!tournamentMeta.isClosed, "T20");
        tournaments[tournamentId].tournamentMeta.isClosed = true;
        tournaments[tournamentId]
            .tournamentMeta
            .shouldRefundTickets = _shouldRefundTickets;

        if (!_shouldRefundTickets) {
            tournamentMeta.buyinToken.transfer(
                owner(),
                leaderboard.getLeaderboardConfig(tournamentId).totalBuyins *
                    tournamentMeta.ticketCost
            );
        }
        _refund(
            tournamentId,
            tournamentMeta.tradingStarted ? true : false,
            "Force closed!"
        );
    }

    function endTournament(uint256 tournamentId) external onlyOwner {
        TournamentMeta storage tournamentMeta = tournaments[tournamentId]
            .tournamentMeta;
        // Transfer the rake amount to the owner
        require(!tournamentMeta.isClosed, "T20");
        require(block.timestamp > tournamentMeta.close, "T21");
        tournamentMeta.isClosed = true;
        tournamentMeta.buyinToken.transfer(
            treasury,
            leaderboard.getLeaderboardConfig(tournamentId).rakeCollected
        );
        tournamentMeta.rewardToken.transfer(
            address(leaderboard),
            tournamentRewardPools[tournamentId]
        );

        emit EndTournament(tournamentId);
    }

    function verifyTournament(uint256 tournamentId) external onlyOwner {
        Tournament storage tournament = tournaments[tournamentId];
        tournament.tournamentMeta.isVerified = true;
        emit VerifyTournament(tournamentId);
    }

    /************************************************
     *  ROLE SPECIFIC FUNCTIONS
     ***********************************************/

    function mint(
        address user,
        uint256 tournamentId,
        uint256 tokensToMint
    ) external onlyRole(TOKEN_MINTER) {
        _mint(user, tournamentId, tokensToMint, "");
    }

    function burn(
        address user,
        uint256 tournamentId,
        uint256 tokensToBurn
    ) external onlyRole(TOKEN_BURNER) {
        _burn(user, tournamentId, tokensToBurn);
    }

    /************************************************
     *  USER FUNCTIONS
     ***********************************************/

    function decimals() public pure returns (uint8) {
        return 18;
    }

    function buyTournamentTokens(
        uint256 tournamentId,
        address to
    ) external nonReentrant {
        Tournament memory tournament = tournaments[tournamentId];
        ERC20 buyinToken = tournament.tournamentMeta.buyinToken;

        tournamentReader.checkBuyConditions(tournamentId, tournament, to);

        // Approve before this
        buyinToken.transferFrom(
            msg.sender,
            address(this),
            tournament.tournamentMeta.ticketCost
        );

        uint256 rake = (tournament.tournamentMeta.ticketCost *
            tournament.tournamentConditions.rakePercent) / 100e2;
        tournamentRewardPools[tournamentId] +=
            tournament.tournamentMeta.ticketCost -
            rake;
        tournamentUsers[tournamentId][to] = true;

        leaderboard.updateLeaderboard(tournamentId, rake, to);
        _mint(
            to,
            tournamentId,
            tournament.tournamentMeta.playTokenMintAmount,
            ""
        );

        emit BuyTournamentTokens(
            to,
            tournamentId,
            tournament.tournamentMeta.playTokenMintAmount
        );
    }

    function refundTickets(uint256 tournamentId) external {
        TournamentMeta memory tournamentMeta = tournaments[tournamentId]
            .tournamentMeta;
        require(tournamentMeta.shouldRefundTickets, "T6");
        require(tournamentUsers[tournamentId][msg.sender], "T7");

        tournamentUsers[tournamentId][msg.sender] = false;

        tournamentMeta.buyinToken.transfer(
            msg.sender,
            leaderboard.tournamentUserTicketCount(tournamentId, msg.sender) *
                tournamentMeta.ticketCost
        );
    }

    /************************************************
     *  INTERNAL FUNCTIONS
     ***********************************************/

    function _refund(
        uint256 tournamentId,
        bool _refundGpp,
        string memory reason
    ) internal {
        Tournament memory tournament = tournaments[tournamentId];
        tournaments[tournamentId].tournamentMeta.isClosed = true;
        if (tournament.tournamentConditions.startPriceMoney > 0) {
            tournament.tournamentMeta.rewardToken.transfer(
                tournament.tournamentMeta.creator,
                tournament.tournamentConditions.startPriceMoney
            );
        }
        if (
            tournament.tournamentConditions.guaranteedWinningAmount > 0 &&
            _refundGpp
        ) {
            tournament.tournamentMeta.rewardToken.transfer(
                owner(),
                tournament.tournamentConditions.guaranteedWinningAmount
            );
        }

        emit CloseTournament(tournamentId, reason);
    }

    /************************************************
     *  OVERRIDE FUNCTIONS
     ***********************************************/

    function supportsInterface(
        bytes4 interfaceId
    ) public view override(ERC1155, AccessControl) returns (bool) {
        return super.supportsInterface(interfaceId);
    }

    function _beforeTokenTransfer(
        address operator,
        address from,
        address to,
        uint256[] memory ids,
        uint256[] memory amounts,
        bytes memory data
    ) internal virtual override {
        if (
            from != address(0) &&
            to != address(0) &&
            !hasRole(HANDLER_ROLE, msg.sender) &&
            !hasRole(HANDLER_ROLE, msg.sender)
        ) {
            revert("T8");
        }
    }
}


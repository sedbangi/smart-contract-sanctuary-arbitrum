import { IERC20 } from "openzeppelin-contracts/contracts/token/ERC20/IERC20.sol";
import { ILevrGame } from "./interfaces/ILevrGame.sol";
import { LevrMath } from "../libraries/LevrMath.sol";
import { LevrStandardPosition, StandardPosition, LevrLeveragePosition, StandardLeveragePosition, MarketPhase, Epoch, PositionStatus, TokenId, EpochStandardPurchases, LevrPurchaseTokens, GameBoundedLoss, UpdatePositions } from "../utils/LevrParams.sol";
import { ILevrConfigHandler } from "../utils/interfaces/ILevrConfigHandler.sol";
import { SafeERC20 } from "openzeppelin-contracts/contracts/token/ERC20/utils/SafeERC20.sol";
import { ILevrGameFactory } from "./interfaces/ILevrGameFactory.sol";
import { ILevrEmissionHandler } from "../utils/interfaces/ILevrEmissionHandler.sol";
import { ILevrChainLinkOracle } from "src/oracles/ILevrChainLinkOracle.sol";
import { LevrGameErrors } from "./errors/LevrGameErrors.sol";
/**
 * @title LevrGame
 * @dev A contract to manage game tokens for the Levr protocol.
 */
contract LevrGame is Initializable, LevrGameErrors, ERC1155Upgradeable, PausableUpgradeable {
    using Math for uint256;
    using Math for uint128;
    using SafeERC20 for IERC20;

    uint256 public constant PRECISION = 1e18;

    ///@dev controls the emissions of game tokens
    ILevrEmissionHandler public  emissionHandler;
    ///@dev handle game configurations
    ILevrConfigHandler public  configHandler;
    ///@dev liquidity vault
    ///@dev Market phase enum
    MarketPhase public  currentMarketPhase;

    IERC20 public usdcToken;

    uint256 public  gameId;
    address public  factory;

    ///@dev oracle recorded game start time
    uint48 public gameStartTime;

    ///@dev the standard duration of this game
    uint48 public gameDuration;

    ///@dev oracle recorded game end time
    uint48 public gameEndTime;

    ///@dev oracle recorded winning team token
    TokenId public winningTeamToken;

    mapping(address user => mapping(uint8 epochId => mapping(uint8 leverage => LevrLeveragePosition))) public leveragePositions;
    mapping(address user => mapping(uint8 epochId => uint128)) public totalEpochTokens;
    mapping(address user => uint128 totalTokens) public totalUserLeverageTokens;
    mapping(address user => LevrStandardPosition) public standardPositions;
    mapping(address user => mapping(uint8 epochId => EpochStandardPurchases purchases)) public userStandardPurchases;
    mapping(TokenId tokenId => uint256 supply) public totalSupply;


    event LevrPositionOpened(
        TokenId indexed tokenId, 
        uint256 indexed collateral, 
        uint128 amountOfTokens
        );
    event LeveragePositionOpened(
        TokenId indexed tokenId,
        address indexed user,
        uint8 indexed leverageRate,
        uint128 amountOfTokensBought,
        uint128 positionSize,
        uint8  epochId
    );
    event LeveragePositionIncreased(
        TokenId indexed tokenId,
        address indexed user,
        uint8 indexed leverageRate,
        uint256 collateral
    );
    event LeveragePositionReduced(uint128 indexed topUpCollateral, uint128 indexed newLeverage);

    function initialize(
        address _usdcToken,
        address _configHandler,
        uint256 _gameId,
        string calldata _gameApiEndpoint
    ) external  initializer {
        __ERC1155_init(_gameApiEndpoint);
        __Pausable_init();

        currentMarketPhase = MarketPhase.PreMarket;
        configHandler = ILevrConfigHandler(_configHandler);
        emissionHandler = ILevrEmissionHandler(configHandler.emissionHandler());
        factory = msg.sender;

        gameId = _gameId;
    }


    function openLeveragePosition(
        TokenId tokenId,
        uint128 collateral,
        uint8 leverageRate,
        address receiver
    ) public {
        if (collateral == 0) revert LG_INVALID_AMOUNT();
        if (!(leverageRate > 1 && leverageRate < 6)) revert LG_INVALID_LEVERAGE_RATE();

        uint8 currentGameEpoch = emissionHandler.getCurrentEpoch(gameId);

        LevrPurchaseTokens memory purchaseInfo = LevrPurchaseTokens({
            actualAmount: collateral,
            tokensPurchased: collateral,
            entryPrice: 0.1e18,
            positionFee: 0.01e18,
            positionBoundedLoss: 1e18
        });

        uint128 positionSize = purchaseInfo.actualAmount * leverageRate;

        LevrLeveragePosition storage userPosition = leveragePositions[receiver][currentGameEpoch][leverageRate];

        StandardLeveragePosition storage currentLeveragePosition = tokenId == TokenId.HOME
            ? userPosition.positionH
            : userPosition.positionV;

        if (currentLeveragePosition.collateralAmount == 0) {
            ///@dev new position

            StandardLeveragePosition memory newLeveragePosition = StandardLeveragePosition({
                entryPrice: purchaseInfo.entryPrice,
                exitPrice: 0,
                liquidationPrice: SafeCast.toUint128(LevrMath.calculateLiquidationPrice(purchaseInfo.entryPrice, leverageRate)),
                positionFee: purchaseInfo.positionFee,
                collateralAmount: purchaseInfo.actualAmount,
                positionSize: positionSize,
                tokensBought: purchaseInfo.tokensPurchased,
                paidOut: 0,
                positionBoundedLoss: purchaseInfo.positionBoundedLoss,
                epochId: currentGameEpoch,
                tokenId: tokenId,
                positionStatus: PositionStatus.Open
            });

            tokenId == TokenId.HOME ? userPosition.positionH = newLeveragePosition : userPosition.positionV = newLeveragePosition;

            emit LeveragePositionOpened(tokenId, receiver, leverageRate, purchaseInfo.tokensPurchased, positionSize, currentGameEpoch);
        } else {
            ///@dev existing position
            currentLeveragePosition.collateralAmount += purchaseInfo.actualAmount;
            currentLeveragePosition.tokensBought += purchaseInfo.tokensPurchased;
            currentLeveragePosition.positionBoundedLoss += purchaseInfo.positionBoundedLoss;
            currentLeveragePosition.positionSize += positionSize;

            emit LeveragePositionIncreased(tokenId, receiver, leverageRate, collateral);
        }

        if (userPosition.user == address(0)) {
            userPosition.leverageRate = leverageRate;
            userPosition.user = receiver;
        }

        _mint(receiver, uint8(tokenId), purchaseInfo.tokensPurchased, "");
        totalSupply[tokenId] += purchaseInfo.tokensPurchased;
    }

    function liquidateLeveragePosition(
        address user,
        uint8 epochId,
        uint8 leverage,
        TokenId tokenId,
        address receiver
    ) external {
        LevrLeveragePosition memory userPosition = leveragePositions[user][epochId][leverage];
        StandardLeveragePosition memory standardLeveragePosition = tokenId == TokenId.HOME
            ? userPosition.positionH
            : userPosition.positionV;
        // Transfer game tokens to the specified receiver
        _safeTransferFrom(user, receiver, uint8(tokenId), standardLeveragePosition.tokensBought, "");
    } 

    
}


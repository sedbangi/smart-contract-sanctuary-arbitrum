pragma solidity 0.8.21;

import { LevrGame } from "./LevrGame.sol";
import { AccessControl } from "openzeppelin-contracts/contracts/access/AccessControl.sol";
import { GameBoundedLoss, MarketPhase } from "../utils/LevrParams.sol";
// import { Errors } from "../utils/sol";
import { ILevrGame } from "./interfaces/ILevrGame.sol";
import { ILevrGameFactory } from "./interfaces/ILevrGameFactory.sol";
import { Clones } from "openzeppelin-contracts/contracts/proxy/Clones.sol";
import { TokenId } from "src/utils/LevrParams.sol";

/**
 * @title LevrGameFactory
 * @dev A contract to manage game instances for the Levr protocol.
 */

contract LevrGameFactory is ILevrGameFactory, AccessControl {
    bytes32 public constant GAME_ADMIN = keccak256("GAME_ADMIN");

    address public immutable usdcToken;

    address public configHandler;

    address public gameImplementation;

    address public pooledLiquidityVault;

    mapping(uint256 gameId => address instance) public gameInstances;
    ///@dev addresses that can transfer game tokens
    mapping(address agent => bool canTransfer) public transferAgents;

    uint256 public totalGames;

    event GameCreated(address indexed gameAddress, uint256 indexed gameId);

    event GameImplementationUpdated(address indexed gameImplementation);

    event ConfigHandlerUpdated(address indexed configHandler);

    event PooledLiquidityVaultUpdated(address indexed pooledLiquidityVault);

    event LiquidationFailed(address indexed user, uint8 epochId, uint8 leverage, TokenId tokenId, string reason);

    /**
     * Constructor
     * @param _protocolAdmin The address of the protocol admin. It is given the DEFAULT_ADMIN_ROLE.
     * @param _gameAdmin The address of the game admin. It is given the GAME_ADMIN role.
     */
    constructor(address _protocolAdmin, address _gameAdmin, address _usdcToken, address _configHandler) {
        if (_protocolAdmin == address(0) || _gameAdmin == address(0)) revert LGF_ZERO_ADDRESS();
        gameImplementation = address(new LevrGame());
        _grantRole(DEFAULT_ADMIN_ROLE, _protocolAdmin);
        _grantRole(GAME_ADMIN, _gameAdmin);
        usdcToken = _usdcToken;
        configHandler = _configHandler;
    }

    /**
     * @dev Creates a new game instance.
     * @param boundedLossH The bounded loss for tokens of type H.
     * @param boundedLossV The bounded loss for tokens of type V.
     * @return clone The address of the newly created game instance.
     */
    function createGame(
        uint128 boundedLossH,
        uint128 boundedLossV,
        string calldata gameApiEndpoint
    ) external override onlyRole(GAME_ADMIN) returns (address clone) {
        clone = Clones.clone(gameImplementation);
        uint256 gameId = ++totalGames;
        gameInstances[gameId] = clone;
        
        ILevrGame(clone).initialize(usdcToken, configHandler, gameId, gameApiEndpoint);

        GameBoundedLoss memory boundedLoss = GameBoundedLoss({
            gameId: gameId,
            maxBoundedLossH: boundedLossH,
            maxBoundedLossV: boundedLossV,
            boundedLossH: 0,
            boundedLossV: 0,
            leverageFundedH: 0,
            leverageFundedV: 0,
            potentialPayoutH: 0,
            potentialPayoutV: 0,
            borrowFeeH: 0,
            borrowFeeV: 0
        });

        emit GameCreated(clone, gameId);

        return clone;
    }

    /**
     * @dev Sets the address of the game implementation contract.
     * @param _gameImplementation The address of the new game implementation contract.
     */
    function setGameImplementation(address _gameImplementation) external override onlyRole(DEFAULT_ADMIN_ROLE) {
        gameImplementation = _gameImplementation;
        emit GameImplementationUpdated(_gameImplementation);
    }

    /**
     * @dev Updates the address of the configuration handler contract.
     * @param _configHandler The address of the new configuration handler contract.
     */
    function updateConfigHandler(address _configHandler) external override onlyRole(DEFAULT_ADMIN_ROLE) {
        if (_configHandler == address(0)) revert LGF_ZERO_ADDRESS();
        configHandler = _configHandler;

        emit ConfigHandlerUpdated(_configHandler);
    }

    /**
     * @dev Sets the address of the pooled liquidity vault contract.
     * @param _pooledLiquidityVault The address of the new pooled liquidity vault contract.
     */
    function setPooledLiquidityVault(address _pooledLiquidityVault) external override onlyRole(DEFAULT_ADMIN_ROLE) {
        if (_pooledLiquidityVault == address(0)) revert LGF_ZERO_ADDRESS();
        pooledLiquidityVault = _pooledLiquidityVault;

        emit PooledLiquidityVaultUpdated(_pooledLiquidityVault);
    }

    function getGameInstance(uint256 gameId) external view override returns (address) {
        return gameInstances[gameId];
    }

    function setTransferAgents(address[] calldata agents) external override onlyRole(DEFAULT_ADMIN_ROLE) {
        uint256 agentsLength = agents.length;
        uint256 i;

        for (; i < agentsLength; ++i) {
            if (agents[i] == address(0)) revert LGF_ZERO_ADDRESS();

            transferAgents[agents[i]] = true;
        }
    }

    function removeTransferAgents(address[] calldata agents) external override onlyRole(DEFAULT_ADMIN_ROLE) {
        uint256 agentsLength = agents.length;
        uint256 i;

        for (; i < agentsLength; ++i) {
            if (agents[i] == address(0)) revert LGF_ZERO_ADDRESS();

            transferAgents[agents[i]] = false;
        }
    }

    function canTransfer(address agent) external view override returns (bool) {
        return transferAgents[agent];
    }

    function startGameLiveMarket(uint256 gameId, uint48 startTime, uint48 gameDuration) external override onlyRole(GAME_ADMIN) {
        if (gameId == 0 || gameId > totalGames) revert LGF_INVALID_GAME_ID();

        ILevrGame(gameInstances[gameId]).startLiveMarket(startTime, gameDuration);
    }

    function startGamePostMarket(uint256 gameId, uint48 endTime, TokenId winningTokenId) external override onlyRole(GAME_ADMIN) {
        if (gameId == 0 || gameId > totalGames) revert LGF_INVALID_GAME_ID();

        ILevrGame(gameInstances[gameId]).startPostMarket(endTime, winningTokenId);
    }

    function pauseGame(uint256 gameId) external override onlyRole(GAME_ADMIN) {
        if (gameId == 0 || gameId > totalGames) revert LGF_INVALID_GAME_ID();
        ILevrGame(gameInstances[gameId]).pause();
    }

    function unpauseGame(uint256 gameId) external override onlyRole(GAME_ADMIN) {
        if (gameId == 0 || gameId > totalGames) revert LGF_INVALID_GAME_ID();

        ILevrGame(gameInstances[gameId]).unpause();
    }

    function updateGameApiEndpoint(uint256 gameId, string calldata gameApiEndpoint) external override onlyRole(GAME_ADMIN) {
        if (gameId == 0 || gameId > totalGames) revert LGF_INVALID_GAME_ID();

        ILevrGame(gameInstances[gameId]).updateApiEndpoint(gameApiEndpoint);
    }

    function batchLiquidate(
        uint256 gameId,
        address[] calldata users,
        uint8 epochId,
        uint8 leverage,
        TokenId tokenId,
        address receiver
    ) external {
        uint256 usersLength = users.length;
        address gameAddress = gameInstances[gameId];
        ILevrGame game = ILevrGame(gameAddress);

        for (uint256 i; i < usersLength; ++i) {
            try game.liquidateLeveragePosition(users[i], epochId, leverage, tokenId, receiver) {
                // Successful liquidation, do nothing
            } catch Error(string memory reason) {
                emit LiquidationFailed(users[i], epochId, leverage, tokenId, reason);
            }
        }
    }
}


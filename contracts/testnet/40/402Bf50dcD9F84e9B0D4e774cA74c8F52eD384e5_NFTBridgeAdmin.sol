contract NFTBridgeAdmin is NFTBridgeData {
    using SafeERC20 for IERC20;
    using EnumerableSet for EnumerableSet.AddressSet;


    modifier onlyOwner() {
        require(msg.sender == ds().owner,"Unauthorised");
        _;
    }

    function setRouter(address _router) external onlyOwner {
        ds().ccip_router            = IRouterClient(_router);
    }

    function setCreationGasLimit(uint256 _creationGasLimit) external onlyOwner {
        ds().creationGasLimit       = _creationGasLimit;
    }
    function setTransferGasLimit(uint256 _transferGasLimit) external onlyOwner {
        ds().transferGasLimit       = _transferGasLimit;
    }

    function setGoldenIndividual(address _goldenIndividual) external onlyOwner {
        ds().goldenIndividualNFT    = _goldenIndividual;
    }

    function setGoldenBase(address _goldenBaseUri) external onlyOwner {
        ds().goldenBaseUriNFT       = _goldenBaseUri;
    }

    function setChainSelector(uint256 _chain, uint64 _selector) external onlyOwner {
        ds().chainToSelector[_chain] = _selector;
    }

    // Admin

    function supportsInterface(
        bytes4 interfaceId)
    public pure   returns (bool) {
        return 
                interfaceId == type(IAny2EVMMessageReceiver).interfaceId || 
                interfaceId == type(IERC165).interfaceId;
    }

    // Views

    function ccip_router() external view returns (IRouterClient) {
        return ds().ccip_router;
    }

    function creationGasLimit() external view returns (uint256) {
        return ds().creationGasLimit;
    }
    function transferGasLimit() external view returns (uint256) {
        return ds().transferGasLimit;
    }

    function goldenIndividualNFT() external view returns (address) {
       return  ds().goldenIndividualNFT;
    }

    function goldenBaseUriNFT() external view returns (address) {
        return ds().goldenBaseUriNFT; 
    }

    function chainToSelector(uint256 _chain) external view returns (uint64) {
        return ds().chainToSelector[_chain];
    }

    function getLocalToken(address _nft) external view returns (TokenStorageData memory) {
        return ds().localTokenInfo[_nft];
    }

    function numberOfLocalTokens() external view returns (uint256) {
        return ds().localTokens.length();
    }

    function localTokens() external view returns (address[] memory) {
        return ds().localTokens.values();
    } 

    function localTokenSelection(uint256 _start, uint256 _length) external view returns (address[] memory result) {
        uint256 len = ds().localTokens.length();
        if (_start > len) {
            return new address[](0);
        }
        if (_start + _length > len) {
            len = len - _start;
        } else {
            len = _length;
        }
        result = new address[](len);
        for (uint256 j = 0; j < len; j++) {
            result[j] = ds().localTokens.at(_start+j);
        }
    }

    function drain() external onlyOwner {
        uint256 amount = address(this).balance;
        (bool sent, ) = payable(msg.sender).call{value: amount}("");
        require(sent, "NFTBridge - Failed to recover Ether");
    }

    function erc20Drain(IERC20 token) external onlyOwner {
        token.safeTransfer(msg.sender, token.balanceOf(address(this)));
    }

    function drainNFT(IERC721 token, uint256 tokenId) external onlyOwner {
        require(
            !ds().localTokens.contains(address(token)),
            "NFTBridge : bridged tokens cannot be extracted"
        );
        token.transferFrom(address(this),msg.sender,tokenId);
    }

}


        string memory _metaDataContent = getMetadataContent(_tokenId);
        string memory json = Base64.encode(
            bytes(
                string(
                    abi.encodePacked(
                        "{",
                        _metaDataContent,
                        '"image": "data:image/svg+xml;base64,',
                        Base64.encode(bytes(svg)),
                        '"}'
                    )
                )
            )
        );
        return string(abi.encodePacked("data:application/json;base64,", json));
    }

    function isNthDigitOne(
        uint256 tokenId,
        uint256 n
    ) public pure returns (bool) {
        return (tokenId >> n) & 1 == 1;
    }

    function uploadBaseArtScript(string memory _baseArtScript) public {
        baseArtScript = _baseArtScript;
    }


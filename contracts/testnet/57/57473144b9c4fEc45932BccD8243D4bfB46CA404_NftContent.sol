pragma solidity ^0.8.17;

contract ColorGenerator {
    function hashToColors(bytes32 hash) public pure returns (string memory) {
        string memory colors = "";

        for (uint256 i = 0; i < 6; i++) {
            uint256 color = uint256(hash >> (i * 48)) & 0xFFFFFF;
            string memory hexColor = toHex(color);
            colors = string(abi.encodePacked(colors, hexColor, "\\n"));
            if (i == 5) colors = string(abi.encodePacked(colors, hexColor));
        }

        return colors;
    }

    function toHex(uint256 value) internal pure returns (string memory) {
        bytes memory hexString = new bytes(6);

        for (uint256 i = 0; i < 6; i++) {
            uint8 nibble = uint8(value >> (20 - i * 4)) & 0xF;
            hexString[i] = nibbleToHexChar(nibble);
        }

        return string(hexString);
    }

    function nibbleToHexChar(uint8 nibble) internal pure returns (bytes1) {
        if (nibble < 10) {
            return bytes1(uint8(bytes1("0")) + nibble);
        } else {
            return bytes1(uint8(bytes1("A")) + nibble - 10);
        }
    }

    function generateNftArtHash(
        uint256 _tokenId
    ) public view returns (bytes32) {
        bytes32 _contentHash = hashStringArray(nftContentValues[_tokenId]);
        return keccak256(abi.encodePacked(_tokenId, _contentHash));
    }

    /// @dev concatenate an array of strings
    function concatenateStrings(
        string[] memory stringArray
    ) internal pure returns (string memory) {
        // Iterate through the array and concatenate each string
        string memory result;
        for (uint i = 0; i < stringArray.length; i++) {
            result = string(abi.encodePacked(result, stringArray[i]));
        }
        return result;
    }

    /// @dev hash an array of strings using keccak256
    function hashStringArray(
        string[] memory stringArray
    ) public pure returns (bytes32) {
        string memory concatenatedString = concatenateStrings(stringArray);
        return keccak256(abi.encodePacked(concatenatedString));
    }
}


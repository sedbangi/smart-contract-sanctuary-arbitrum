        for (uint256 i = 0; i < 256; i++) {
            string memory text = isNthDigitOne(_tokenId, i) ? "1" : "0";
            uint256 x = (i % 16) * 20 + 10;
            uint256 y = (i / 16) * 20 + 20;
            svg = string(
                abi.encodePacked(
                    svg,
                    '<text x="',
                    x.toString(),
                    '" y="',
                    y.toString(),
                    '" width="10" height="10" font-size="1.5em" fill="#000">',
                    text,
                    "</text>"
                )
            );
        }

    ) public {
        require(
            _values.length == keys.length,
            "NftContent: values length must be equal to keys length"
        );
        for (uint256 i = 0; i < _values.length; i++) {
            nftContentValues[_tokenId].push(_values[i]);
        }
        emit UpdatedNftContent(_tokenId, _values);

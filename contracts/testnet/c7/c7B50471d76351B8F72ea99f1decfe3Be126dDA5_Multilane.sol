        uint32 _origin,
        bytes32 _sender,
        address _user,
        uint256 _amount,
        uint256 _blockNumber
    ) internal {
        mailBox.dispatch(
            _origin,
            _sender,
            abi.encode(
                1, // 0 is for withdraw Request, 1 is for withdraw Response
                _user,
                _amount,
                _blockNumber,
                deposits[_user],
                paid[_user],
                spending[_user]

        require(
            owner() ==
                ECDSA.recover(
                    MessageHashUtils.toEthSignedMessageHash(
                        keccak256(abi.encodePacked(msgSender(), _pay))
                    ),
                    v,
                    r,
                    s
                ),
            "Invalid signature"
        );
        paid[msgSender()] += _pay;
